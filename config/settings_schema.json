[
  {
    "name": "theme_info",
    "theme_name": "Outlight",
    "theme_version": "1.0.0",
    "theme_author": "Outlight",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "t:settings.logo.name",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "t:settings.logo.logo"
      },
      {
        "type": "range",
        "id": "logo_width",
        "min": 50,
        "max": 300,
        "step": 10,
        "default": 120,
        "unit": "px",
        "label": "t:settings.logo.logo_width"
      },
      {
        "type": "range",
        "id": "logo_width_mobile",
        "min": 50,
        "max": 200,
        "step": 10,
        "default": 100,
        "unit": "px",
        "label": "t:settings.logo.logo_width_mobile"
      }
    ]
  },
  {
    "name": "t:settings.typography.name",
    "settings": [
      {
        "type": "header",
        "content": "t:settings.typography.headings.fonts"
      },
      {
        "type": "font_picker",
        "id": "type_primary_font",
        "default": "work_sans_n4",
        "label": "t:settings.typography.primary_font"
      },
      {
        "type": "font_picker",
        "id": "type_heading_font",
        "default": "work_sans_n6",
        "label": "t:settings.typography.heading_font"
      }
    ]
  },
  {
    "name": "t:settings.layout.name",
    "settings": [
      {
        "type": "select",
        "id": "max_page_width",
        "label": "t:settings.layout.page_width",
        "options": [
          {
            "value": "90rem",
            "label": "t:settings.layout.options.narrow"
          },
          {
            "value": "110rem",
            "label": "t:settings.layout.options.wide"
          }
        ],
        "default": "90rem"
      },
      {
        "type": "range",
        "id": "min_page_margin",
        "min": 10,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "t:settings.layout.page_margin",
        "default": 20
      },
      {
        "type": "range",
        "id": "border_radius",
        "min": 0,
        "max": 24,
        "step": 2,
        "unit": "px",
        "label": "t:settings.layout.border_radius",
        "default": 8
      }
    ]
  },
