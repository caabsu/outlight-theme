{% comment %}
  Article Hero Section
  Editorial-style hero with category, title, author, and featured image
{% endcomment %}

<section
  class="article-hero"
  style="
    --ah-bg: {{ section.settings.background_color }};
    --ah-category-color: {{ section.settings.category_color }};
    --ah-category-size: {{ section.settings.category_size }}px;
    --ah-title-color: {{ section.settings.title_color }};
    --ah-title-size: {{ section.settings.title_size }}px;
    --ah-title-size-mobile: {{ section.settings.title_size_mobile }}px;
    --ah-subtitle-color: {{ section.settings.subtitle_color }};
    --ah-subtitle-size: {{ section.settings.subtitle_size }}px;
    --ah-subtitle-size-mobile: {{ section.settings.subtitle_size_mobile }}px;
    --ah-meta-color: {{ section.settings.meta_color }};
    --ah-divider-color: {{ section.settings.divider_color }};
    --ah-padding-top: {{ section.settings.padding_top }}px;
    --ah-padding-bottom: {{ section.settings.padding_bottom }}px;
    --ah-padding-top-mobile: {{ section.settings.padding_top_mobile }}px;
    --ah-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}px;
  "
>
  <div class="article-hero__container">
    <div class="article-hero__header">
      {%- if section.settings.category != blank -%}
        <span class="article-hero__category">{{ section.settings.category }}</span>
      {%- endif -%}

      <h1 class="article-hero__title">
        {%- if section.settings.title_line_1 != blank -%}
          <span class="article-hero__title-main">{{ section.settings.title_line_1 }}</span>
        {%- endif -%}
        {%- if section.settings.title_line_2 != blank -%}
          <span class="article-hero__title-script">{{ section.settings.title_line_2 }}</span>
        {%- endif -%}
      </h1>

      <div class="article-hero__divider"></div>

      <div class="article-hero__meta">
        {%- if section.settings.author != blank -%}
          <span class="article-hero__author">BY {{ section.settings.author | upcase }}</span>
        {%- endif -%}
        {%- if section.settings.read_time != blank -%}
          <span class="article-hero__separator">&bull;</span>
          <span class="article-hero__time">{{ section.settings.read_time }}</span>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% stylesheet %}
  .article-hero {
    background-color: var(--ah-bg);
    padding: var(--ah-padding-top-mobile) 16px var(--ah-padding-bottom-mobile);
  }

  .article-hero__container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .article-hero__header {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 2rem;
  }

  .article-hero__category {
    font-family: var(--font-body-family), sans-serif;
    font-size: 11px;
    font-weight: 500;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--ah-category-color);
    margin-bottom: 1.5rem;
  }

  .article-hero__title {
    margin: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0;
    line-height: 1.1;
  }

  .article-hero__title-main {
    font-family: var(--font-heading-family), serif;
    font-size: var(--ah-title-size-mobile);
    font-weight: 400;
    color: var(--ah-title-color);
    display: block;
  }

  .article-hero__title-script {
    font-family: var(--font-heading-family), serif;
    font-size: var(--ah-subtitle-size-mobile);
    font-weight: 400;
    font-style: italic;
    color: var(--ah-subtitle-color);
    display: block;
    margin-top: -0.1em;
  }

  .article-hero__divider {
    width: 1px;
    height: 60px;
    background-color: var(--ah-divider-color);
    margin: 2rem 0;
  }

  .article-hero__meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-family: var(--font-body-family), sans-serif;
    font-size: 12px;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--ah-meta-color);
  }

  .article-hero__separator {
    opacity: 0.5;
  }

  @media (min-width: 768px) {
    .article-hero {
      padding: var(--ah-padding-top) 40px var(--ah-padding-bottom);
    }

    .article-hero__category {
      font-size: var(--ah-category-size);
      margin-bottom: 2rem;
    }

    .article-hero__title-main {
      font-size: var(--ah-title-size);
    }

    .article-hero__title-script {
      font-size: var(--ah-subtitle-size);
    }

    .article-hero__divider {
      height: 80px;
      margin: 2.5rem 0;
    }

    .article-hero__meta {
      font-size: 13px;
    }

    .article-hero__header {
      margin-bottom: 3rem;
    }
  }
{% endstylesheet %}

