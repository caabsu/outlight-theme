{% comment %}
  Article Featured Products Section
  Multiple product showcase (up to 3) with horizontal scroll on mobile, grid on desktop
{% endcomment %}

<section
  class="article-featured-products"
  style="
    --afp-bg: {{ section.settings.background_color }};
    --afp-card-bg: {{ section.settings.card_background }};
    --afp-title-color: {{ section.settings.title_color }};
    --afp-title-size: {{ section.settings.title_size }}px;
    --afp-title-size-mobile: {{ section.settings.title_size_mobile }}px;
    --afp-subtitle-color: {{ section.settings.subtitle_color }};
    --afp-price-color: {{ section.settings.price_color }};
    --afp-button-bg: {{ section.settings.button_background }};
    --afp-button-text: {{ section.settings.button_text_color }};
    --afp-button-hover-bg: {{ section.settings.button_hover_background }};
    --afp-button-hover-text: {{ section.settings.button_hover_text }};
    --afp-padding-top: {{ section.settings.padding_top }}px;
    --afp-padding-bottom: {{ section.settings.padding_bottom }}px;
    --afp-padding-top-mobile: {{ section.settings.padding_top_mobile }}px;
    --afp-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}px;
    --afp-product-count: {{ section.blocks.size | at_least: 1 }};
  "
>
  <div class="article-featured-products__container">
    <div class="article-featured-products__grid">
      {%- for block in section.blocks -%}
        {%- assign product = all_products[block.settings.product] -%}
        <div class="article-featured-products__card" {{ block.shopify_attributes }}>
          <a href="{{ product.url | default: '#' }}" class="article-featured-products__image">
            {%- if product != blank and product.featured_image != blank -%}
              {{ product.featured_image | image_url: width: 800 | image_tag: loading: 'lazy' }}
            {%- elsif block.settings.image != blank -%}
              {{ block.settings.image | image_url: width: 800 | image_tag: loading: 'lazy' }}
            {%- else -%}
              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
          </a>

          <div class="article-featured-products__info">
            <div class="article-featured-products__details">
              <h3 class="article-featured-products__title">
                {%- if block.settings.custom_title != blank -%}
                  {{ block.settings.custom_title }}
                {%- elsif product != blank -%}
                  {{ product.title }}
                {%- else -%}
                  Product Title
                {%- endif -%}
              </h3>
              {%- if block.settings.subtitle != blank -%}
                <p class="article-featured-products__subtitle">{{ block.settings.subtitle | upcase }}</p>
              {%- endif -%}
            </div>
            <p class="article-featured-products__price">
              {%- if product != blank -%}
                {{ product.price | money }}
              {%- else -%}
                $890
              {%- endif -%}
            </p>
          </div>

          {%- if product != blank -%}
            <button
              class="article-featured-products__button"
              data-product-id="{{ product.variants.first.id }}"
              data-add-to-cart
            >
              {{ section.settings.button_text | default: 'ADD TO CART' | upcase }}
            </button>
          {%- else -%}
            <button class="article-featured-products__button" disabled>
              {{ section.settings.button_text | default: 'ADD TO CART' | upcase }}
            </button>
          {%- endif -%}
        </div>
      {%- endfor -%}

      {%- if section.blocks.size == 0 -%}
        {%- for i in (1..3) -%}
          <div class="article-featured-products__card">
            <div class="article-featured-products__image">
              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
            <div class="article-featured-products__info">
              <div class="article-featured-products__details">
                <h3 class="article-featured-products__title">Product Title</h3>
                <p class="article-featured-products__subtitle">MATERIAL</p>
              </div>
              <p class="article-featured-products__price">$890</p>
            </div>
            <button class="article-featured-products__button" disabled>ADD TO CART</button>
          </div>
        {%- endfor -%}
      {%- endif -%}
    </div>
  </div>
</section>

{% stylesheet %}
  .article-featured-products {
    background-color: var(--afp-bg);
    padding: var(--afp-padding-top-mobile) 0 var(--afp-padding-bottom-mobile);
  }

  .article-featured-products__container {
    max-width: 1400px;
    margin: 0 auto;
  }

  /* Mobile: Horizontal scroll */
  .article-featured-products__grid {
    display: flex;
    gap: 1rem;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    padding: 0 16px;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .article-featured-products__grid::-webkit-scrollbar {
    display: none;
  }

  .article-featured-products__card {
    flex: 0 0 280px;
    scroll-snap-align: start;
    background-color: var(--afp-card-bg);
    padding: 1.25rem;
    display: flex;
    flex-direction: column;
  }

  .article-featured-products__image {
    aspect-ratio: 1 / 1.15;
    overflow: hidden;
    margin-bottom: 1.25rem;
    background-color: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .article-featured-products__image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .article-featured-products__info {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-bottom: 1.25rem;
    gap: 0.75rem;
  }

  .article-featured-products__details {
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
  }

  .article-featured-products__title {
    font-family: var(--font-heading-family), serif;
    font-size: var(--afp-title-size-mobile);
    font-weight: 400;
    color: var(--afp-title-color);
    margin: 0;
    line-height: 1.2;
  }

  .article-featured-products__subtitle {
    font-family: var(--font-body-family), sans-serif;
    font-size: 10px;
    font-weight: 500;
    letter-spacing: 0.12em;
    color: var(--afp-subtitle-color);
    margin: 0;
  }

  .article-featured-products__price {
    font-family: var(--font-body-family), sans-serif;
    font-size: 16px;
    font-weight: 400;
    color: var(--afp-price-color);
    margin: 0;
    white-space: nowrap;
  }

  .article-featured-products__button {
    width: 100%;
    padding: 0.875rem 1.5rem;
    font-family: var(--font-body-family), sans-serif;
    font-size: 11px;
    font-weight: 500;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--afp-button-text);
    background-color: var(--afp-button-bg);
    border: none;
    cursor: pointer;
    transition: background-color 0.2s ease, color 0.2s ease;
    margin-top: auto;
  }

  .article-featured-products__button:hover {
    background-color: var(--afp-button-hover-bg);
    color: var(--afp-button-hover-text);
  }

  .article-featured-products__button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  /* Desktop: Grid layout, no scroll */
  @media (min-width: 768px) {
    .article-featured-products {
      padding: var(--afp-padding-top) 40px var(--afp-padding-bottom);
    }

    .article-featured-products__grid {
      display: grid;
      grid-template-columns: repeat(var(--afp-product-count), 1fr);
      gap: 1.5rem;
      overflow-x: visible;
      padding: 0;
    }

    .article-featured-products__card {
      flex: none;
      padding: 1.5rem;
    }

    .article-featured-products__image {
      margin-bottom: 1.5rem;
    }

    .article-featured-products__info {
      margin-bottom: 1.5rem;
    }

    .article-featured-products__title {
      font-size: var(--afp-title-size);
    }

    .article-featured-products__subtitle {
      font-size: 11px;
    }

    .article-featured-products__price {
      font-size: 18px;
    }

    .article-featured-products__button {
      padding: 1rem 2rem;
      font-size: 12px;
    }
  }

  @media (min-width: 1200px) {
    .article-featured-products {
      padding: var(--afp-padding-top) 60px var(--afp-padding-bottom);
    }

    .article-featured-products__grid {
      gap: 2rem;
    }
  }
{% endstylesheet %}

{% javascript %}
  document.querySelectorAll('.article-featured-products__button[data-add-to-cart]').forEach(button => {
    button.addEventListener('click', async function() {
      const variantId = this.dataset.productId;
      if (!variantId) return;

      const originalText = this.textContent;
      this.textContent = 'ADDING...';
      this.disabled = true;

      try {
        const response = await fetch('/cart/add.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            id: variantId,
            quantity: 1
          })
        });

        if (response.ok) {
          this.textContent = 'ADDED!';
          setTimeout(() => {
            this.textContent = originalText;
            this.disabled = false;
          }, 2000);
        } else {
          this.textContent = 'ERROR';
          setTimeout(() => {
            this.textContent = originalText;
            this.disabled = false;
          }, 2000);
        }
      } catch (error) {
        this.textContent = 'ERROR';
        setTimeout(() => {
          this.textContent = originalText;
          this.disabled = false;
        }, 2000);
      }
    });
  });
{% endjavascript %}

