<div
  id="featured-collection-{{ section.id }}"
  class="featured-collection"
  style="
    --fc-bg: {{ section.settings.background_color }};
    --fc-heading-color: {{ section.settings.heading_color }};
    --fc-heading-size: {{ section.settings.heading_size }}px;
    --fc-heading-size-mobile: {{ section.settings.heading_size_mobile }}px;
    --fc-heading-weight: {{ section.settings.heading_weight }};
    --fc-description-color: {{ section.settings.description_color }};
    --fc-description-size: {{ section.settings.description_size }}px;
    --fc-description-size-mobile: {{ section.settings.description_size_mobile }}px;
    --fc-description-weight: {{ section.settings.description_weight }};
    --fc-card-bg: {{ section.settings.card_background }};
    --fc-card-radius: {{ section.settings.card_radius }}px;
    --fc-card-shadow: {{ section.settings.card_shadow_opacity | divided_by: 100.0 }};
    --fc-card-padding: {{ section.settings.card_padding }}px;
    --fc-title-color: {{ section.settings.product_title_color }};
    --fc-title-size: {{ section.settings.product_title_size }}px;
    --fc-title-size-mobile: {{ section.settings.product_title_size_mobile }}px;
    --fc-title-weight: {{ section.settings.product_title_weight }};
    --fc-subheader-color: {{ section.settings.product_subheader_color }};
    --fc-subheader-size: {{ section.settings.product_subheader_size }}px;
    --fc-subheader-size-mobile: {{ section.settings.product_subheader_size_mobile }}px;
    --fc-subheader-weight: {{ section.settings.product_subheader_weight }};
    --fc-price-color: {{ section.settings.product_price_color }};
    --fc-price-size: {{ section.settings.product_price_size }}px;
    --fc-price-size-mobile: {{ section.settings.product_price_size_mobile }}px;
    --fc-price-weight: {{ section.settings.product_price_weight }};
    --fc-arrow-color: {{ section.settings.arrow_color }};
    --fc-arrow-bg: {{ section.settings.arrow_background }};
    --fc-padding-top: {{ section.settings.padding_top }}px;
    --fc-padding-bottom: {{ section.settings.padding_bottom }}px;
  "
>
  <div class="featured-collection__inner">
    {%- comment -%} Left side: Heading, description, arrows {%- endcomment -%}
    <div class="featured-collection__header">
      <div class="featured-collection__text">
        <div class="featured-collection__heading-row">
          {%- if section.settings.heading != blank -%}
            <h2 class="featured-collection__heading">{{ section.settings.heading }}</h2>
          {%- endif -%}
          {%- if section.settings.view_all_link != blank -%}
            <a href="{{ section.settings.view_all_link }}" class="featured-collection__view-all featured-collection__view-all--mobile">
              {{ section.settings.view_all_text | default: 'View all' }}
            </a>
          {%- endif -%}
        </div>
        {%- if section.settings.description != blank -%}
          <p class="featured-collection__description featured-collection__description--desktop">{{ section.settings.description }}</p>
        {%- endif -%}
        <div class="featured-collection__mobile-row">
          {%- if section.settings.mobile_description != blank -%}
            <p class="featured-collection__description featured-collection__description--mobile">{{ section.settings.mobile_description }}</p>
          {%- else -%}
            <p class="featured-collection__description featured-collection__description--mobile">{{ section.settings.description }}</p>
          {%- endif -%}
          <div class="featured-collection__mobile-nav">
            <button class="featured-collection__mobile-arrow" data-fc-mobile-prev aria-label="Previous product">
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M13 4l-6 6 6 6"/>
              </svg>
            </button>
            <button class="featured-collection__mobile-arrow" data-fc-mobile-next aria-label="Next product">
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M7 4l6 6-6 6"/>
              </svg>
            </button>
          </div>
        </div>
      </div>

      <div class="featured-collection__nav-wrapper">
        <div class="featured-collection__nav">
          <button class="featured-collection__arrow featured-collection__arrow--prev" data-fc-prev aria-label="Previous">
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M12 4l-6 6 6 6"/>
            </svg>
          </button>
          <button class="featured-collection__arrow featured-collection__arrow--next" data-fc-next aria-label="Next">
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M8 4l6 6-6 6"/>
            </svg>
          </button>
        </div>
        {%- if section.settings.view_all_link != blank -%}
          <a href="{{ section.settings.view_all_link }}" class="featured-collection__view-all featured-collection__view-all--desktop">
            {{ section.settings.view_all_text | default: 'View all' }}
          </a>
        {%- endif -%}
      </div>
    </div>

    {%- comment -%} Right side: Product carousel {%- endcomment -%}
    <div class="featured-collection__carousel" data-fc-carousel>
      <div class="featured-collection__track" data-fc-track>
        {%- for block in section.blocks -%}
          {%- assign product = block.settings.product -%}
          {%- if product != blank -%}
            <a href="{{ product.url }}" class="featured-collection__card" data-fc-card {{ block.shopify_attributes }}>
              <div class="featured-collection__card-inner">
                <div class="featured-collection__card-image">
                  {%- if product.featured_image -%}
                    {{ product.featured_image | image_url: width: 600, height: 750, crop: 'center' | image_tag: loading: 'lazy' }}
                  {%- else -%}
                    {{ 'product-1' | placeholder_svg_tag: 'featured-collection__placeholder' }}
                  {%- endif -%}
                </div>
                <div class="featured-collection__card-info">
                  <h3 class="featured-collection__card-title">{{ product.title }}</h3>
                  <div class="featured-collection__card-meta">
                    {%- if block.settings.subheader != blank -%}
                      <p class="featured-collection__card-subheader">{{ block.settings.subheader }}</p>
                    {%- endif -%}
                    <p class="featured-collection__card-price">{{ product.price | money }}</p>
                  </div>
                </div>
              </div>
            </a>
          {%- else -%}
            <div class="featured-collection__card" data-fc-card {{ block.shopify_attributes }}>
              <div class="featured-collection__card-inner">
                <div class="featured-collection__card-image">
                  {{ 'product-1' | placeholder_svg_tag: 'featured-collection__placeholder' }}
                </div>
                <div class="featured-collection__card-info">
                  <h3 class="featured-collection__card-title">Select a product</h3>
                  <div class="featured-collection__card-meta">
                    <p class="featured-collection__card-subheader">Subheader</p>
                    <p class="featured-collection__card-price">$0.00</p>
                  </div>
                </div>
              </div>
            </div>
          {%- endif -%}
        {%- endfor -%}

        {%- if section.blocks.size == 0 -%}
          {%- for i in (1..6) -%}
            <div class="featured-collection__card" data-fc-card>
              <div class="featured-collection__card-inner">
                <div class="featured-collection__card-image">
                  {{ 'product-1' | placeholder_svg_tag: 'featured-collection__placeholder' }}
                </div>
                <div class="featured-collection__card-info">
                  <h3 class="featured-collection__card-title">Product Title</h3>
                  <div class="featured-collection__card-meta">
                    <p class="featured-collection__card-subheader">Subheader</p>
                    <p class="featured-collection__card-price">$0.00</p>
                  </div>
                </div>
              </div>
            </div>
          {%- endfor -%}
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
  .featured-collection {
    background-color: var(--fc-bg);
    padding: var(--fc-padding-top) 0 var(--fc-padding-bottom);
    overflow: hidden;
  }

  .featured-collection__inner {
    display: grid;
    grid-template-columns: minmax(240px, 360px) 1fr;
    gap: 4rem;
    padding-left: var(--page-margin);
    align-items: start;
  }

  .featured-collection__header {
    position: sticky;
    top: 120px;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    padding-right: 2rem;
    z-index: 2;
    background-color: var(--fc-bg);
  }

  .featured-collection__text {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .featured-collection__heading-row {
    display: flex;
    align-items: baseline;
    gap: 1rem;
  }

  .featured-collection__heading {
    font-family: var(--font-heading-family);
    font-size: var(--fc-heading-size);
    font-weight: var(--fc-heading-weight);
    color: var(--fc-heading-color);
    line-height: 1.1;
    margin: 0;
  }

  .featured-collection__view-all {
    font-size: 13px;
    font-weight: 500;
    color: var(--fc-heading-color);
    text-decoration: none;
    background-color: transparent;
    border: 1px solid var(--fc-heading-color);
    padding: 0.5rem 1.25rem;
    transition: background-color 0.2s ease, color 0.2s ease;
    white-space: nowrap;
  }

  .featured-collection__view-all:hover {
    background-color: var(--fc-heading-color);
    color: var(--fc-bg);
  }

  .featured-collection__view-all--mobile {
    display: none;
  }

  .featured-collection__view-all--desktop {
    display: inline-block;
    margin-top: 1.5rem;
  }

  .featured-collection__description {
    font-size: var(--fc-description-size);
    font-weight: var(--fc-description-weight);
    color: var(--fc-description-color);
    line-height: 1.6;
    margin: 0;
  }

  .featured-collection__description--mobile,
  .featured-collection__mobile-row {
    display: none;
  }

  .featured-collection__mobile-nav {
    display: none;
  }

  .featured-collection__mobile-arrow {
    display: none;
    background: none;
    border: none;
    padding: 8px;
    cursor: pointer;
    color: var(--fc-description-color);
    transition: opacity 0.2s ease;
  }

  .featured-collection__mobile-arrow:hover {
    opacity: 0.7;
  }

  .featured-collection__nav-wrapper {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .featured-collection__nav {
    display: flex;
    gap: 0.5rem;
  }

  .featured-collection__arrow {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    border: 1px solid var(--fc-arrow-color);
    background-color: var(--fc-arrow-bg);
    color: var(--fc-arrow-color);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.2s ease, color 0.2s ease, opacity 0.2s ease;
  }

  .featured-collection__arrow:hover:not(:disabled) {
    background-color: var(--fc-arrow-color);
    color: var(--fc-arrow-bg);
  }

  .featured-collection__arrow:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  /* Carousel */
  .featured-collection__carousel {
    overflow: hidden;
    position: relative;
  }

  .featured-collection__track {
    display: flex;
    gap: 1.5rem;
    transition: transform 0.5s cubic-bezier(0.25, 0.1, 0.25, 1);
  }

  /* Product Card - 3 cards fit exactly within carousel */
  .featured-collection__card {
    flex: 0 0 calc((100% - 3rem) / 3);
    min-width: 0;
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .featured-collection__card-inner {
    background-color: var(--fc-card-bg);
    border-radius: var(--fc-card-radius);
    box-shadow: 0 2px 8px rgba(0, 0, 0, calc(var(--fc-card-shadow) * 0.5)),
                0 8px 24px rgba(0, 0, 0, calc(var(--fc-card-shadow) * 0.3));
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    padding: var(--fc-card-padding);
  }

  .featured-collection__card:hover .featured-collection__card-inner {
    transform: translateY(-4px);
    box-shadow: 0 4px 12px rgba(0, 0, 0, calc(var(--fc-card-shadow) * 0.6)),
                0 12px 32px rgba(0, 0, 0, calc(var(--fc-card-shadow) * 0.4));
  }

  .featured-collection__card-image {
    aspect-ratio: 4/5;
    overflow: hidden;
    background-color: #f5f5f5;
    border-radius: calc(var(--fc-card-radius) * 0.5);
    margin-bottom: 1rem;
  }

  .featured-collection__card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .featured-collection__card:hover .featured-collection__card-image img {
    transform: scale(1.03);
  }

  .featured-collection__placeholder {
    width: 100%;
    height: 100%;
    background-color: #e8e8e8;
  }

  .featured-collection__card-info {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .featured-collection__card-title {
    font-size: var(--fc-title-size);
    font-weight: var(--fc-title-weight);
    color: var(--fc-title-color);
    margin: 0;
    line-height: 1.3;
  }

  .featured-collection__card-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }

  .featured-collection__card-subheader {
    font-size: var(--fc-subheader-size);
    font-weight: var(--fc-subheader-weight);
    color: var(--fc-subheader-color);
    margin: 0;
  }

  .featured-collection__card-price {
    font-size: var(--fc-price-size);
    font-weight: var(--fc-price-weight);
    color: var(--fc-price-color);
    margin: 0;
    flex-shrink: 0;
  }

  /* Mobile Styles */
  @media screen and (max-width: 768px) {
    .featured-collection__inner {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
      padding-left: var(--page-margin);
      padding-right: 0;
    }

    .featured-collection__header {
      position: relative;
      top: auto;
      padding-right: var(--page-margin);
      width: 100%;
    }

    .featured-collection__text {
      width: 100%;
    }

    .featured-collection__heading {
      font-size: var(--fc-heading-size-mobile);
      white-space: nowrap;
    }

    .featured-collection__heading-row {
      display: flex;
      justify-content: space-between;
      align-items: baseline;
      width: 100%;
    }

    .featured-collection__view-all--mobile {
      display: inline-block;
      border: none;
      padding: 0;
      text-decoration: underline;
      text-underline-offset: 3px;
      margin-left: auto;
      flex-shrink: 0;
    }

    .featured-collection__view-all--mobile:hover {
      background-color: transparent;
      color: var(--fc-heading-color);
      opacity: 0.7;
    }

    .featured-collection__view-all--desktop {
      display: none;
    }

    .featured-collection__nav-wrapper {
      display: none;
    }

    .featured-collection__description--desktop {
      display: none;
    }

    .featured-collection__mobile-row {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 1rem;
      width: 100%;
    }

    .featured-collection__description--mobile {
      display: block;
      font-size: var(--fc-description-size-mobile);
      flex: 1;
      min-width: 0;
    }

    .featured-collection__mobile-nav {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      flex-shrink: 0;
      margin-left: auto;
    }

    .featured-collection__mobile-arrow {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 36px;
      height: 36px;
      border-radius: 50%;
      border: 1px solid var(--fc-description-color);
      color: var(--fc-description-color);
      background: transparent;
      cursor: pointer;
      touch-action: manipulation;
      -webkit-tap-highlight-color: transparent;
    }

    .featured-collection__carousel {
      overflow: hidden;
      padding-bottom: 8px;
    }

    .featured-collection__track {
      transition: transform 0.3s ease;
      padding-right: var(--page-margin);
    }

    .featured-collection__card {
      flex: 0 0 70vw;
      max-width: 280px;
    }

    .featured-collection__card:hover .featured-collection__card-inner {
      transform: none;
    }

    .featured-collection__card-title {
      font-size: var(--fc-title-size-mobile);
    }

    .featured-collection__card-subheader {
      font-size: var(--fc-subheader-size-mobile);
    }

    .featured-collection__card-price {
      font-size: var(--fc-price-size-mobile);
    }
  }

  /* Desktop: Show 3 products, rest with lower opacity */
  @media screen and (min-width: 769px) {
    .featured-collection__card {
      opacity: 1;
      transition: opacity 0.4s cubic-bezier(0.25, 0.1, 0.25, 1), transform 0.3s ease;
    }

    .featured-collection__card.is-faded {
      opacity: 0.35;
    }
  }
