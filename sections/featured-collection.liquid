    --fc-heading-weight: {{ section.settings.heading_weight }};
    --fc-description-color: {{ section.settings.description_color }};
    --fc-description-size: {{ section.settings.description_size }}px;
    --fc-description-size-mobile: {{ section.settings.description_size_mobile }}px;
    --fc-description-weight: {{ section.settings.description_weight }};
    --fc-card-bg: {{ section.settings.card_background }};
    --fc-card-radius: {{ section.settings.card_radius }}px;
    --fc-card-shadow: {{ section.settings.card_shadow_opacity }};
    --fc-card-padding: {{ section.settings.card_padding }}px;
    --fc-title-color: {{ section.settings.product_title_color }};
    --fc-title-size: {{ section.settings.product_title_size }}px;
    --fc-title-weight: {{ section.settings.product_title_weight }};
    --fc-variant-color: {{ section.settings.product_variant_color }};
    --fc-variant-size: {{ section.settings.product_variant_size }}px;
    --fc-variant-weight: {{ section.settings.product_variant_weight }};
    --fc-price-color: {{ section.settings.product_price_color }};
    --fc-price-size: {{ section.settings.product_price_size }}px;
    --fc-price-weight: {{ section.settings.product_price_weight }};
    --fc-arrow-color: {{ section.settings.arrow_color }};
    --fc-arrow-bg: {{ section.settings.arrow_background }};
    --fc-padding-top: {{ section.settings.padding_top }}px;
    --fc-padding-bottom: {{ section.settings.padding_bottom }}px;
    --fc-card-width: {{ section.settings.card_width }}px;
  "
>
  <div class="featured-collection__inner">
    {%- comment -%} Left side: Heading, description, arrows {%- endcomment -%}
    <div class="featured-collection__header">
      <div class="featured-collection__text">
        {%- if section.settings.heading != blank -%}
          <h2 class="featured-collection__heading">{{ section.settings.heading }}</h2>
        {%- endif -%}
        {%- if section.settings.description != blank -%}
          <p class="featured-collection__description featured-collection__description--desktop">{{ section.settings.description }}</p>
        {%- endif -%}
        {%- if section.settings.mobile_description != blank -%}
          <p class="featured-collection__description featured-collection__description--mobile">{{ section.settings.mobile_description }}</p>
        {%- else -%}
          <p class="featured-collection__description featured-collection__description--mobile">{{ section.settings.description }}</p>
        {%- endif -%}
      </div>

      <div class="featured-collection__nav">
        <button class="featured-collection__arrow featured-collection__arrow--prev" data-fc-prev aria-label="Previous">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M12 4l-6 6 6 6"/>
          </svg>
        </button>
        <button class="featured-collection__arrow featured-collection__arrow--next" data-fc-next aria-label="Next">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M8 4l6 6-6 6"/>
          </svg>
        </button>
      </div>
    </div>

    {%- comment -%} Right side: Product carousel - extends to viewport edge {%- endcomment -%}
    <div class="featured-collection__carousel" data-fc-carousel>
      <div class="featured-collection__track" data-fc-track>
        {%- assign collection = section.settings.collection -%}
        {%- assign product_limit = section.settings.products_to_show -%}

        {%- if collection != blank -%}
          {%- for product in collection.products limit: product_limit -%}
            <a href="{{ product.url }}" class="featured-collection__card">
              <div class="featured-collection__card-image-wrapper">
                {%- if product.featured_image -%}
                  {{ product.featured_image | image_url: width: 600, height: 750, crop: 'center' | image_tag: loading: 'lazy' }}
                {%- else -%}
                  {{ 'product-1' | placeholder_svg_tag: 'featured-collection__placeholder' }}
                {%- endif -%}
              </div>
              <div class="featured-collection__card-info">
                <div class="featured-collection__card-details">
                  <h3 class="featured-collection__card-title">{{ product.title }}</h3>
                  {%- if product.variants.first.title != 'Default Title' -%}
                    <p class="featured-collection__card-variant">{{ product.variants.first.title }}</p>
                  {%- elsif product.type != blank -%}
                    <p class="featured-collection__card-variant">{{ product.type }}</p>
                  {%- endif -%}
                </div>
                <p class="featured-collection__card-price">{{ product.price | money }}</p>
              </div>
            </a>
          {%- endfor -%}
        {%- else -%}
          {%- for i in (1..10) -%}
            <div class="featured-collection__card">
              <div class="featured-collection__card-image-wrapper">
                {{ 'product-1' | placeholder_svg_tag: 'featured-collection__placeholder' }}
              </div>
              <div class="featured-collection__card-info">
                <div class="featured-collection__card-details">
                  <h3 class="featured-collection__card-title">Product Title</h3>
                  <p class="featured-collection__card-variant">Variant</p>
                </div>
                <p class="featured-collection__card-price">$0.00</p>
              </div>
            </div>
          {%- endfor -%}
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
  .featured-collection {
    background-color: var(--fc-bg);
    padding: var(--fc-padding-top) 0 var(--fc-padding-bottom);
    overflow: hidden;
  }

  .featured-collection__inner {
    display: grid;
    grid-template-columns: minmax(240px, 360px) 1fr;
    gap: 4rem;
    padding-left: var(--page-margin);
    align-items: start;
  }

  .featured-collection__header {
    position: sticky;
    top: 120px;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    padding-right: 2rem;
  }

  .featured-collection__text {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .featured-collection__heading {
    font-family: var(--font-heading-family);
    font-size: var(--fc-heading-size);
    font-weight: var(--fc-heading-weight);
    color: var(--fc-heading-color);
    line-height: 1.1;
    margin: 0;
  }

  .featured-collection__description {
    font-size: var(--fc-description-size);
    font-weight: var(--fc-description-weight);
    color: var(--fc-description-color);
    line-height: 1.6;
    margin: 0;
  }

  .featured-collection__description--mobile {
    display: none;
  }

  .featured-collection__nav {
    display: flex;
    gap: 0.5rem;
  }

  .featured-collection__arrow {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    border: 1px solid var(--fc-arrow-color);
    background-color: var(--fc-arrow-bg);
    color: var(--fc-arrow-color);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.2s ease, color 0.2s ease, opacity 0.2s ease;
  }

  .featured-collection__arrow:hover:not(:disabled) {
    background-color: var(--fc-arrow-color);
    color: var(--fc-arrow-bg);
  }

  .featured-collection__arrow:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  /* Carousel - extends to viewport edge */
  .featured-collection__carousel {
    overflow: visible;
    position: relative;
  }

  .featured-collection__track {
    display: flex;
    gap: 1.5rem;
    transition: transform 0.5s cubic-bezier(0.25, 0.1, 0.25, 1);
    padding-right: var(--page-margin);
  }

  /* Product Card - Modern elevated design */
  .featured-collection__card {
    flex: 0 0 auto;
    width: var(--fc-card-width);
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    background-color: var(--fc-card-bg);
    border-radius: var(--fc-card-radius);
    box-shadow: 0 2px 8px rgba(0, 0, 0, calc(var(--fc-card-shadow) * 0.5)),
                0 8px 24px rgba(0, 0, 0, calc(var(--fc-card-shadow) * 0.3));
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .featured-collection__card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 12px rgba(0, 0, 0, calc(var(--fc-card-shadow) * 0.6)),
                0 12px 32px rgba(0, 0, 0, calc(var(--fc-card-shadow) * 0.4));
  }

  .featured-collection__card-image-wrapper {
    aspect-ratio: 4/5;
    overflow: hidden;
    background-color: #f8f8f8;
  }

  .featured-collection__card-image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .featured-collection__card:hover .featured-collection__card-image-wrapper img {
    transform: scale(1.05);
  }

  .featured-collection__placeholder {
    width: 100%;
    height: 100%;
    background-color: #e8e8e8;
  }

  .featured-collection__card-info {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    padding: var(--fc-card-padding);
  }

  .featured-collection__card-details {
    flex: 1;
    min-width: 0;
  }

  .featured-collection__card-title {
    font-size: var(--fc-title-size);
    font-weight: var(--fc-title-weight);
    color: var(--fc-title-color);
    margin: 0 0 0.25rem;
    line-height: 1.3;
  }

  .featured-collection__card-variant {
    font-size: var(--fc-variant-size);
    font-weight: var(--fc-variant-weight);
    color: var(--fc-variant-color);
    margin: 0;
  }

  .featured-collection__card-price {
    font-size: var(--fc-price-size);
    font-weight: var(--fc-price-weight);
    color: var(--fc-price-color);
    margin: 0;
    flex-shrink: 0;
  }

  /* Mobile Styles */
  @media screen and (max-width: 768px) {
    .featured-collection {
      padding: var(--fc-padding-top) 0 var(--fc-padding-bottom);
    }

    .featured-collection__inner {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
      padding-left: var(--page-margin);
      padding-right: 0;
    }

    .featured-collection__header {
      position: relative;
      top: auto;
      padding-right: var(--page-margin);
    }

    .featured-collection__heading {
      font-size: var(--fc-heading-size-mobile);
    }

    .featured-collection__description--desktop {
      display: none;
    }

    .featured-collection__description--mobile {
      display: block;
    }

    .featured-collection__nav {
      display: none;
    }

    .featured-collection__carousel {
      overflow-x: auto;
      overflow-y: visible;
      scroll-snap-type: x mandatory;
      scrollbar-width: none;
      -ms-overflow-style: none;
      padding-bottom: 8px;
    }

    .featured-collection__carousel::-webkit-scrollbar {
      display: none;
    }

    .featured-collection__track {
      transition: none;
      padding-right: var(--page-margin);
    }

    .featured-collection__card {
      width: 260px;
      scroll-snap-align: start;
    }

    .featured-collection__card:hover {
      transform: none;
    }
  }
{% endstylesheet %}

{% javascript %}
  const section = document.currentScript.closest('.featured-collection');
  if (section) {
    const carousel = section.querySelector('[data-fc-carousel]');
    const track = section.querySelector('[data-fc-track]');
    const prevBtn = section.querySelector('[data-fc-prev]');
    const nextBtn = section.querySelector('[data-fc-next]');

    if (carousel && track && prevBtn && nextBtn) {
      const cards = track.querySelectorAll('.featured-collection__card');
      const gap = 24; // 1.5rem gap
      let currentIndex = 0;

      function getCardWidth() {
        const card = cards[0];
        return card ? card.offsetWidth + gap : 0;
      }

      function getMaxIndex() {
        const cardWidth = getCardWidth();
        const visibleWidth = carousel.offsetWidth;
        const totalCards = cards.length;
        const visibleCards = Math.floor(visibleWidth / cardWidth);
        return Math.max(0, totalCards - visibleCards);
      }

      function updateCarousel() {
        const cardWidth = getCardWidth();
        const offset = currentIndex * cardWidth;
        track.style.transform = `translateX(-${offset}px)`;

        prevBtn.disabled = currentIndex === 0;
        nextBtn.disabled = currentIndex >= getMaxIndex();
      }

      prevBtn.addEventListener('click', () => {
        if (currentIndex > 0) {
          currentIndex--;
          updateCarousel();
        }
      });

      nextBtn.addEventListener('click', () => {
        const maxIndex = getMaxIndex();
        if (currentIndex < maxIndex) {
          currentIndex++;
          updateCarousel();
        }
      });

      // Initial setup
      updateCarousel();

      // Recalculate on resize
      let resizeTimeout;
      window.addEventListener('resize', () => {
        clearTimeout(resizeTimeout);
        resizeTimeout = setTimeout(() => {
          const maxIndex = getMaxIndex();
          if (currentIndex > maxIndex) {
            currentIndex = maxIndex;
          }
          updateCarousel();
        }, 150);
      });
    }
  }
{% endjavascript %}

