<script>
  document.addEventListener('DOMContentLoaded', function() {
    const section = document.getElementById('featured-collection-{{ section.id }}');
    if (!section) return;

    const carousel = section.querySelector('[data-fc-carousel]');
    const track = section.querySelector('[data-fc-track]');
    const prevBtn = section.querySelector('[data-fc-prev]');
    const nextBtn = section.querySelector('[data-fc-next]');
    const mobilePrevBtn = section.querySelector('[data-fc-mobile-prev]');
    const mobileNextBtn = section.querySelector('[data-fc-mobile-next]');

    if (!carousel || !track) return;

    const cards = track.querySelectorAll('[data-fc-card]');
    const gap = 24;
    const maxVisible = 3;
    let currentIndex = 0;

    function getCardWidth() {
      const card = cards[0];
      return card ? card.offsetWidth + gap : 0;
    }

    function getMaxIndex() {
      const totalCards = cards.length;
      return Math.max(0, totalCards - maxVisible);
    }

    function updateCardOpacity() {
      if (window.innerWidth <= 768) return;

      cards.forEach(function(card, index) {
        if (index >= currentIndex && index < currentIndex + maxVisible) {
          card.classList.remove('is-faded');
        } else {
          card.classList.add('is-faded');
        }
      });
    }

    function updateCarousel() {
      const cardWidth = getCardWidth();
      const offset = currentIndex * cardWidth;
      track.style.transform = 'translateX(-' + offset + 'px)';

      if (prevBtn) prevBtn.disabled = currentIndex === 0;
      if (nextBtn) nextBtn.disabled = currentIndex >= getMaxIndex();

      updateCardOpacity();
    }

    if (prevBtn) {
      prevBtn.addEventListener('click', function() {
        if (currentIndex > 0) {
          currentIndex--;
          updateCarousel();
        }
      });
    }

    if (nextBtn) {
      nextBtn.addEventListener('click', function() {
        const maxIndex = getMaxIndex();
        if (currentIndex < maxIndex) {
          currentIndex++;
          updateCarousel();
        }
      });
    }

    // Mobile: use transform-based scrolling (same as desktop)
    let mobileIndex = 0;

    function getMobileMaxIndex() {
      return Math.max(0, cards.length - 1);
    }

    function updateMobileCarousel() {
      const card = cards[0];
      if (!card) return;
      const cardWidth = card.offsetWidth + gap;
      const offset = mobileIndex * cardWidth;
      track.style.transform = 'translateX(-' + offset + 'px)';
      track.style.transition = 'transform 0.3s ease';
    }

    if (mobilePrevBtn) {
      mobilePrevBtn.addEventListener('click', function(e) {
        e.preventDefault();
        if (mobileIndex > 0) {
          mobileIndex--;
          updateMobileCarousel();
        }
      });
    }

    if (mobileNextBtn) {
      mobileNextBtn.addEventListener('click', function(e) {
        e.preventDefault();
        if (mobileIndex < getMobileMaxIndex()) {
          mobileIndex++;
          updateMobileCarousel();
        }
      });
    }

    updateCarousel();

    let resizeTimeout;
    window.addEventListener('resize', function() {
      clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(function() {
        const maxIndex = getMaxIndex();
        if (currentIndex > maxIndex) {
          currentIndex = maxIndex;
        }
        updateCarousel();
      }, 150);
    });
  });
</script>

