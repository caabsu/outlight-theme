<section
  class="hero-banner full-width {% if section.settings.enable_transparent_header %}hero-banner--transparent-header{% endif %}"
  style="
    --hero-bg: {{ section.settings.background_color }};
    --hero-min-height-desktop: {{ section.settings.min_height_desktop }}vh;
    --hero-min-height-mobile: {{ section.settings.min_height_mobile }}vh;
    --hero-padding-desktop: {{ section.settings.padding_desktop }}px;
    --hero-padding-mobile: {{ section.settings.padding_mobile }}px;
    --hero-content-width: {{ section.settings.content_width }}%;

    --hero-eyebrow-color: {{ section.settings.eyebrow_color }};
    --hero-eyebrow-size-desktop: {{ section.settings.eyebrow_size_desktop }}px;
    --hero-eyebrow-size-mobile: {{ section.settings.eyebrow_size_mobile }}px;
    --hero-eyebrow-weight: {{ section.settings.eyebrow_weight }};
    --hero-eyebrow-spacing: {{ section.settings.eyebrow_letter_spacing }}em;

    --hero-heading-color: {{ section.settings.heading_color }};
    --hero-heading-size-desktop: {{ section.settings.heading_size_desktop }}px;
    --hero-heading-size-mobile: {{ section.settings.heading_size_mobile }}px;
    --hero-heading-weight: {{ section.settings.heading_weight }};

    --hero-subheading-color: {{ section.settings.subheading_color }};
    --hero-subheading-size-desktop: {{ section.settings.subheading_size_desktop }}px;
    --hero-subheading-size-mobile: {{ section.settings.subheading_size_mobile }}px;
    --hero-subheading-weight: {{ section.settings.subheading_weight }};

    --hero-button-bg: {{ section.settings.button_bg_color }};
    --hero-button-text: {{ section.settings.button_text_color }};
    --hero-button-size-desktop: {{ section.settings.button_size_desktop }}px;
    --hero-button-size-mobile: {{ section.settings.button_size_mobile }}px;
    --hero-button-weight: {{ section.settings.button_weight }};
    --hero-button-radius: {{ section.settings.button_border_radius }}px;
    --hero-button-padding-x: {{ section.settings.button_padding_x }}px;
    --hero-button-padding-y: {{ section.settings.button_padding_y }}px;

    --hero-overlay-opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
  "
>
  {%- comment -%} Background - Desktop {%- endcomment -%}
  <div class="hero-banner__bg hero-banner__bg--desktop">
    {%- if section.settings.video_desktop != blank -%}
      {{ section.settings.video_desktop | video_tag: autoplay: true, loop: true, muted: true, playsinline: true, class: 'hero-banner__bg-video' }}
    {%- elsif section.settings.image_desktop -%}
      {{ section.settings.image_desktop | image_url: width: 2400 | image_tag: class: 'hero-banner__bg-img', loading: 'eager' }}
    {%- endif -%}
    <div class="hero-banner__overlay"></div>
  </div>

  {%- comment -%} Background - Mobile {%- endcomment -%}
  <div class="hero-banner__bg hero-banner__bg--mobile">
    {%- if section.settings.video_mobile != blank -%}
      {{ section.settings.video_mobile | video_tag: autoplay: true, loop: true, muted: true, playsinline: true, class: 'hero-banner__bg-video' }}
    {%- elsif section.settings.video_desktop != blank -%}
      {{ section.settings.video_desktop | video_tag: autoplay: true, loop: true, muted: true, playsinline: true, class: 'hero-banner__bg-video' }}
    {%- elsif section.settings.image_mobile -%}
      {{ section.settings.image_mobile | image_url: width: 1200 | image_tag: class: 'hero-banner__bg-img', loading: 'eager' }}
    {%- elsif section.settings.image_desktop -%}
      {{ section.settings.image_desktop | image_url: width: 1200 | image_tag: class: 'hero-banner__bg-img', loading: 'eager' }}
    {%- endif -%}
    <div class="hero-banner__overlay"></div>
  </div>

  {%- comment -%} Play/Pause Button (only if video exists) {%- endcomment -%}
  {%- if section.settings.video_desktop != blank or section.settings.video_mobile != blank -%}
    <button class="hero-banner__play-btn" data-hero-video-toggle aria-label="Play/Pause video">
      <svg class="hero-banner__play-icon" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M8 5v14l11-7z"/>
      </svg>
      <svg class="hero-banner__pause-icon" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z"/>
      </svg>
    </button>
  {%- endif -%}

  {%- comment -%} Content {%- endcomment -%}
  <div class="hero-banner__container">
    <div class="hero-banner__content">
      {%- if section.settings.eyebrow != blank -%}
        <span class="hero-banner__eyebrow hero-banner__eyebrow--desktop">{{ section.settings.eyebrow }}</span>
      {%- endif -%}
      {%- if section.settings.eyebrow_mobile != blank -%}
        <span class="hero-banner__eyebrow hero-banner__eyebrow--mobile">{{ section.settings.eyebrow_mobile }}</span>
      {%- elsif section.settings.eyebrow != blank -%}
        <span class="hero-banner__eyebrow hero-banner__eyebrow--mobile">{{ section.settings.eyebrow }}</span>
      {%- endif -%}

      {%- if section.settings.heading != blank -%}
        <h1 class="hero-banner__heading hero-banner__heading--desktop">{{ section.settings.heading }}</h1>
      {%- endif -%}
      {%- if section.settings.heading_mobile != blank -%}
        <h1 class="hero-banner__heading hero-banner__heading--mobile">{{ section.settings.heading_mobile }}</h1>
      {%- elsif section.settings.heading != blank -%}
        <h1 class="hero-banner__heading hero-banner__heading--mobile">{{ section.settings.heading }}</h1>
      {%- endif -%}

      {%- if section.settings.subheading != blank -%}
        <p class="hero-banner__subheading hero-banner__subheading--desktop">{{ section.settings.subheading }}</p>
      {%- endif -%}
      {%- if section.settings.subheading_mobile != blank -%}
        <p class="hero-banner__subheading hero-banner__subheading--mobile">{{ section.settings.subheading_mobile }}</p>
      {%- elsif section.settings.subheading != blank -%}
        <p class="hero-banner__subheading hero-banner__subheading--mobile">{{ section.settings.subheading }}</p>
      {%- endif -%}

      {%- if section.settings.button_text != blank -%}
        <a href="{{ section.settings.button_link }}" class="hero-banner__button hero-banner__button--desktop">
          {{ section.settings.button_text }}
        </a>
      {%- endif -%}
      {%- if section.settings.button_text_mobile != blank -%}
        <a href="{{ section.settings.button_link_mobile | default: section.settings.button_link }}" class="hero-banner__button hero-banner__button--mobile">
          {{ section.settings.button_text_mobile }}
        </a>
      {%- elsif section.settings.button_text != blank -%}
        <a href="{{ section.settings.button_link }}" class="hero-banner__button hero-banner__button--mobile">
          {{ section.settings.button_text }}
        </a>
      {%- endif -%}
    </div>
  </div>
</section>

{% stylesheet %}
  .hero-banner {
    position: relative;
    width: 100%;
    min-height: var(--hero-min-height-desktop);
    background-color: var(--hero-bg);
    overflow: hidden;
  }

  .hero-banner--transparent-header {
    margin-top: calc(-3.5rem);
  }

  /* Background */
  .hero-banner__bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .hero-banner__bg--mobile {
    display: none;
  }

  .hero-banner__bg-img,
  .hero-banner__bg-video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-banner__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, var(--hero-overlay-opacity));
  }

  /* Content */
  .hero-banner__container {
    position: relative;
    z-index: 1;
    min-height: var(--hero-min-height-desktop);
    padding: var(--hero-padding-desktop);
    display: flex;
    align-items: center;
  }

  .hero-banner__content {
    max-width: var(--hero-content-width);
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 20px;
  }

  .hero-banner__eyebrow {
    font-family: var(--font-primary-family);
    font-size: var(--hero-eyebrow-size-desktop);
    font-weight: var(--hero-eyebrow-weight);
    color: var(--hero-eyebrow-color);
    text-transform: uppercase;
    letter-spacing: var(--hero-eyebrow-spacing);
  }

  .hero-banner__eyebrow--mobile {
    display: none;
  }

  .hero-banner__heading {
    font-family: var(--font-heading-family);
    font-size: var(--hero-heading-size-desktop);
    font-weight: var(--hero-heading-weight);
    color: var(--hero-heading-color);
    line-height: 1.1;
    margin: 0;
  }

  .hero-banner__heading--mobile {
    display: none;
  }

  .hero-banner__subheading {
    font-family: var(--font-primary-family);
    font-size: var(--hero-subheading-size-desktop);
    font-weight: var(--hero-subheading-weight);
    color: var(--hero-subheading-color);
    line-height: 1.5;
    margin: 0;
    max-width: 400px;
  }

  .hero-banner__subheading--mobile {
    display: none;
  }

  .hero-banner__button {
    display: inline-block;
    background-color: var(--hero-button-bg);
    color: var(--hero-button-text);
    font-family: var(--font-primary-family);
    font-size: var(--hero-button-size-desktop);
    font-weight: var(--hero-button-weight);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    text-decoration: none;
    padding: var(--hero-button-padding-y) var(--hero-button-padding-x);
    border-radius: var(--hero-button-radius);
    margin-top: 12px;
    transition: opacity 0.2s ease;
  }

  .hero-banner__button:hover {
    opacity: 0.9;
  }

  .hero-banner__button--mobile {
    display: none;
  }

  @media screen and (max-width: 768px) {
    .hero-banner {
      min-height: var(--hero-min-height-mobile);
    }

    .hero-banner__bg--desktop {
      display: none;
    }

    .hero-banner__bg--mobile {
      display: block;
    }

    .hero-banner__container {
      min-height: var(--hero-min-height-mobile);
      padding: var(--hero-padding-mobile);
      align-items: flex-end;
      padding-top: calc(3.5rem + var(--hero-padding-mobile));
    }

    .hero-banner__content {
      max-width: 100%;
      gap: 16px;
    }

    .hero-banner__eyebrow--desktop {
      display: none;
    }

    .hero-banner__eyebrow--mobile {
      display: block;
      font-size: var(--hero-eyebrow-size-mobile);
    }

    .hero-banner__heading--desktop {
      display: none;
    }

    .hero-banner__heading--mobile {
      display: block;
      font-size: var(--hero-heading-size-mobile);
    }

    .hero-banner__subheading--desktop {
      display: none;
    }

    .hero-banner__subheading--mobile {
      display: block;
      font-size: var(--hero-subheading-size-mobile);
    }

    .hero-banner__button--desktop {
      display: none;
    }

    .hero-banner__button--mobile {
      display: inline-block;
      width: 100%;
      text-align: center;
      font-size: var(--hero-button-size-mobile);
    }
  }

  /* Play/Pause Button */
  .hero-banner__play-btn {
    position: absolute;
    bottom: 16px;
    right: 16px;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.15);
    border: 1px solid rgba(255, 255, 255, 0.25);
    border-radius: 50%;
    cursor: pointer;
    color: rgba(255, 255, 255, 0.7);
    transition: background 0.2s ease, color 0.2s ease;
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
  }

  .hero-banner__play-btn:hover {
    background: rgba(255, 255, 255, 0.25);
    color: rgba(255, 255, 255, 0.9);
  }

  .hero-banner__play-icon {
    display: none;
  }

  .hero-banner__pause-icon {
    display: block;
  }

  .hero-banner__play-btn.is-paused .hero-banner__play-icon {
    display: block;
  }

  .hero-banner__play-btn.is-paused .hero-banner__pause-icon {
    display: none;
  }

  @media screen and (min-width: 769px) {
    .hero-banner__play-btn {
      bottom: 24px;
      right: 24px;
    }
  }

  @media screen and (min-width: 1024px) {
    .hero-banner__play-btn {
      bottom: 32px;
      right: 32px;
    }
  }
{% endstylesheet %}

{% javascript %}
  (function() {
    const section = document.querySelector('.hero-banner');
    if (!section) return;

    const toggleBtn = section.querySelector('[data-hero-video-toggle]');
    if (!toggleBtn) return;

    const getVisibleVideo = () => {
      const isMobile = window.innerWidth <= 768;
      const bgSelector = isMobile ? '.hero-banner__bg--mobile' : '.hero-banner__bg--desktop';
      const bg = section.querySelector(bgSelector);
      return bg?.querySelector('video');
    };

    toggleBtn.addEventListener('click', () => {
      const video = getVisibleVideo();
      if (!video) return;

      if (video.paused) {
        video.play();
        toggleBtn.classList.remove('is-paused');
      } else {
        video.pause();
        toggleBtn.classList.add('is-paused');
      }
    });

    window.addEventListener('resize', () => {
      const video = getVisibleVideo();
      if (video) {
        toggleBtn.classList.toggle('is-paused', video.paused);
      }
    });
  })();
{% endjavascript %}

