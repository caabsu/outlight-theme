{% comment %}
  Shop the Look Section
  - Displays a lifestyle image with product hotspots
  - Products can be selected and added to cart together
  - Separate hotspot positioning for desktop and mobile
{% endcomment %}

<section
  id="shop-the-look-{{ section.id }}"
  class="shop-the-look"
  style="
    --stl-bg: {{ section.settings.background_color }};
    --stl-text-color: {{ section.settings.text_color }};
    --stl-heading-size-mobile: {{ section.settings.heading_size_mobile }}px;
    --stl-heading-size-desktop: {{ section.settings.heading_size_desktop }}px;
    --stl-heading-weight: {{ section.settings.heading_weight }};
    --stl-subheading-size-mobile: {{ section.settings.subheading_size_mobile }}px;
    --stl-subheading-size-desktop: {{ section.settings.subheading_size_desktop }}px;
    --stl-subheading-weight: {{ section.settings.subheading_weight }};
    --stl-product-title-size-mobile: {{ section.settings.product_title_size_mobile }}px;
    --stl-product-title-size-desktop: {{ section.settings.product_title_size_desktop }}px;
    --stl-product-title-weight: {{ section.settings.product_title_weight }};
    --stl-price-size-mobile: {{ section.settings.price_size_mobile }}px;
    --stl-price-size-desktop: {{ section.settings.price_size_desktop }}px;
    --stl-price-weight: {{ section.settings.price_weight }};
    --stl-hotspot-color: {{ section.settings.hotspot_color }};
    --stl-hotspot-size: {{ section.settings.hotspot_size }}px;
    --stl-accent-color: {{ section.settings.accent_color | default: section.settings.hotspot_color }};
    --stl-card-bg: {{ section.settings.card_background }};
    --stl-card-border: {{ section.settings.card_border_color }};
    --stl-button-bg: {{ section.settings.button_background }};
    --stl-button-text: {{ section.settings.button_text_color }};
    --stl-padding-top-mobile: {{ section.settings.padding_top_mobile }}px;
    --stl-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}px;
    --stl-padding-top-desktop: {{ section.settings.padding_top_desktop }}px;
    --stl-padding-bottom-desktop: {{ section.settings.padding_bottom_desktop }}px;
  "
>
  <div class="shop-the-look__container">
    {%- comment -%} Desktop Layout {%- endcomment -%}
    <div class="shop-the-look__inner">
      {%- comment -%} Image Side with Hotspots {%- endcomment -%}
      <div class="shop-the-look__image-wrapper">
        {%- if section.settings.image != blank -%}
          <div class="shop-the-look__image shop-the-look__image--desktop">
            {{ section.settings.image | image_url: width: 1200 | image_tag: loading: 'lazy', class: 'shop-the-look__img' }}

            {%- comment -%} Desktop Hotspots {%- endcomment -%}
            {%- for block in section.blocks -%}
              {%- if block.type == 'product' and block.settings.product != blank -%}
                <a
                  href="{{ block.settings.product.url }}"
                  class="shop-the-look__hotspot shop-the-look__hotspot--desktop"
                  style="
                    --hotspot-x: {{ block.settings.hotspot_x_desktop }}%;
                    --hotspot-y: {{ block.settings.hotspot_y_desktop }}%;
                  "
                  data-stl-hotspot="{{ forloop.index }}"
                  data-stl-product-index="{{ forloop.index }}"
                  aria-label="{{ 'sections.shop_the_look.view_product' | t: product: block.settings.product.title }}"
                  {{ block.shopify_attributes }}
                >
                  <span class="shop-the-look__hotspot-ring"></span>
                  <span class="shop-the-look__hotspot-dot"></span>
                </a>
              {%- endif -%}
            {%- endfor -%}
          </div>

          {%- comment -%} Mobile Image {%- endcomment -%}
          <div class="shop-the-look__image shop-the-look__image--mobile">
            {%- if section.settings.image_mobile != blank -%}
              {{ section.settings.image_mobile | image_url: width: 800 | image_tag: loading: 'lazy', class: 'shop-the-look__img' }}
            {%- else -%}
              {{ section.settings.image | image_url: width: 800 | image_tag: loading: 'lazy', class: 'shop-the-look__img' }}
            {%- endif -%}

            {%- comment -%} Mobile Hotspots {%- endcomment -%}
            {%- for block in section.blocks -%}
              {%- if block.type == 'product' and block.settings.product != blank -%}
                <a
                  href="{{ block.settings.product.url }}"
                  class="shop-the-look__hotspot shop-the-look__hotspot--mobile"
                  style="
                    --hotspot-x: {{ block.settings.hotspot_x_mobile }}%;
                    --hotspot-y: {{ block.settings.hotspot_y_mobile }}%;
                  "
                  data-stl-hotspot="{{ forloop.index }}"
                  data-stl-product-index="{{ forloop.index }}"
                  aria-label="{{ 'sections.shop_the_look.view_product' | t: product: block.settings.product.title }}"
                  {{ block.shopify_attributes }}
                >
                  <span class="shop-the-look__hotspot-ring"></span>
                  <span class="shop-the-look__hotspot-dot"></span>
                </a>
              {%- endif -%}
            {%- endfor -%}
          </div>
        {%- else -%}
          <div class="shop-the-look__image shop-the-look__image--placeholder">
            {{ 'lifestyle-1' | placeholder_svg_tag: 'shop-the-look__placeholder' }}
          </div>
        {%- endif -%}
      </div>

      {%- comment -%} Content Side {%- endcomment -%}
      <div class="shop-the-look__content">
        <div class="shop-the-look__header">
          {%- if section.settings.heading != blank -%}
            <h2 class="shop-the-look__heading">{{ section.settings.heading }}</h2>
          {%- endif -%}

          {%- if section.settings.subheading != blank -%}
            <p class="shop-the-look__subheading">{{ section.settings.subheading }}</p>
          {%- endif -%}
        </div>

        <div class="shop-the-look__products" data-stl-products>
          {%- for block in section.blocks -%}
            {%- if block.type == 'product' -%}
              {%- assign product = block.settings.product -%}
              {%- if product != blank -%}
                {%- assign variant = product.selected_or_first_available_variant -%}
                <div
                  class="shop-the-look__product-card"
                  data-stl-product-card="{{ forloop.index }}"
                  data-variant-id="{{ variant.id }}"
                  data-price="{{ variant.price }}"
                  {{ block.shopify_attributes }}
                >
                  <div class="shop-the-look__card-accent"></div>

                  {%- comment -%} Mobile Layout {%- endcomment -%}
                  <div class="shop-the-look__card-mobile">
                    <a href="{{ product.url }}" class="shop-the-look__product-image-wrapper">
                      {%- if product.featured_image != blank -%}
                        {{ product.featured_image | image_url: width: 160, height: 160, crop: 'center' | image_tag: loading: 'lazy', class: 'shop-the-look__product-image' }}
                      {%- endif -%}
                    </a>
                    <div class="shop-the-look__product-info">
                      <a href="{{ product.url }}" class="shop-the-look__product-title-link">
                        <h3 class="shop-the-look__product-title">{{ block.settings.custom_title | default: product.title }}</h3>
                      </a>
                      <span class="shop-the-look__product-price">{{ variant.price | money }}</span>
                      <button
                        class="shop-the-look__add-link"
                        data-stl-add-single
                        data-variant-id="{{ variant.id }}"
                      >
                        {{ 'sections.shop_the_look.add_to_cart' | t | default: 'ADD TO CART' }}
                      </button>
                    </div>
                  </div>

                  {%- comment -%} Desktop Layout {%- endcomment -%}
                  <div class="shop-the-look__card-desktop">
                    <div class="shop-the-look__card-header">
                      <span class="shop-the-look__product-number">{{ forloop.index | prepend: '0' | slice: -2, 2 }}</span>
                      <span class="shop-the-look__stock-badge {% if variant.available %}shop-the-look__stock-badge--in-stock{% else %}shop-the-look__stock-badge--waitlist{% endif %}">
                        {%- if variant.available -%}
                          {{ 'sections.shop_the_look.in_stock' | t | default: 'IN STOCK' }}
                        {%- else -%}
                          {{ 'sections.shop_the_look.waitlist' | t | default: 'WAITLIST' }}
                        {%- endif -%}
                      </span>
                    </div>

                    <div class="shop-the-look__card-body">
                      <a href="{{ product.url }}" class="shop-the-look__product-image-wrapper">
                        {%- if product.featured_image != blank -%}
                          {{ product.featured_image | image_url: width: 200, height: 200, crop: 'center' | image_tag: loading: 'lazy', class: 'shop-the-look__product-image' }}
                        {%- endif -%}
                      </a>

                      <div class="shop-the-look__product-info">
                        <a href="{{ product.url }}" class="shop-the-look__product-title-link">
                          <h3 class="shop-the-look__product-title">{{ block.settings.custom_title | default: product.title }}</h3>
                        </a>
                        {%- if product.metafields.descriptors.subtitle != blank -%}
                          <span class="shop-the-look__product-subtitle">{{ product.metafields.descriptors.subtitle }}</span>
                        {%- endif -%}
                        <span class="shop-the-look__product-price">{{ variant.price | money }}</span>
                      </div>
                    </div>

                    <button
                      class="shop-the-look__add-btn"
                      data-stl-add-single
                      data-variant-id="{{ variant.id }}"
                      aria-label="{{ 'sections.shop_the_look.add_product' | t: product: product.title }}"
                    >
                      {%- if variant.available -%}
                        {{ 'sections.shop_the_look.add_to_cart' | t | default: 'ADD TO CART' }}
                      {%- else -%}
                        {{ 'sections.shop_the_look.pre_order' | t | default: 'PRE-ORDER' }}
                      {%- endif -%}
                    </button>
                  </div>
                </div>
              {%- endif -%}
            {%- endif -%}
          {%- endfor -%}
        </div>

              </div>
    </div>
  </div>
</section>

{% stylesheet %}
  .shop-the-look {
    background-color: var(--stl-bg);
    color: var(--stl-text-color);
    padding: var(--stl-padding-top-mobile) 0 var(--stl-padding-bottom-mobile);
    width: 100%;
  }

  .shop-the-look__container {
    width: 100%;
  }

  .shop-the-look__inner {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  @media screen and (min-width: 769px) {
    .shop-the-look {
      padding: var(--stl-padding-top-desktop) 40px var(--stl-padding-bottom-desktop);
    }

    .shop-the-look__inner {
      gap: 32px;
    }
  }

  @media screen and (min-width: 1200px) {
    .shop-the-look {
      padding: var(--stl-padding-top-desktop) 60px var(--stl-padding-bottom-desktop);
    }
  }

  /* Image Wrapper */
  .shop-the-look__image-wrapper {
    position: relative;
    width: 100%;
  }

  .shop-the-look__image {
    position: relative;
    overflow: hidden;
  }

  .shop-the-look__image--desktop {
    display: none;
  }

  .shop-the-look__image--mobile {
    display: block;
  }

  @media screen and (min-width: 769px) {
    .shop-the-look__image--desktop {
      display: block;
    }

    .shop-the-look__image--mobile {
      display: none;
    }
  }

  .shop-the-look__img {
    width: 100%;
    height: auto;
    display: block;
  }

  .shop-the-look__placeholder {
    width: 100%;
    height: auto;
    background: #f0f0f0;
  }

  /* Hotspots - Minimal Modern Design */
  .shop-the-look__hotspot {
    position: absolute;
    left: var(--hotspot-x);
    top: var(--hotspot-y);
    transform: translate(-50%, -50%);
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: transparent;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
    padding: 0;
    text-decoration: none;
  }

  .shop-the-look__hotspot:hover .shop-the-look__hotspot-ring {
    transform: scale(1.15);
    opacity: 0.5;
  }

  .shop-the-look__hotspot:hover .shop-the-look__hotspot-dot {
    transform: scale(1.1);
  }

  .shop-the-look__hotspot--desktop {
    display: none;
  }

  .shop-the-look__hotspot--mobile {
    display: flex;
  }

  @media screen and (min-width: 769px) {
    .shop-the-look__hotspot--desktop {
      display: flex;
    }

    .shop-the-look__hotspot--mobile {
      display: none;
    }
  }

  .shop-the-look__hotspot-ring {
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    border: 1.5px solid var(--stl-hotspot-color);
    opacity: 0.3;
    animation: stl-ring-pulse 3s ease-out infinite;
    transition: transform 0.2s ease, opacity 0.2s ease;
  }

  @keyframes stl-ring-pulse {
    0% {
      transform: scale(1);
      opacity: 0.3;
    }
    50% {
      transform: scale(1.5);
      opacity: 0;
    }
    100% {
      transform: scale(1.5);
      opacity: 0;
    }
  }

  .shop-the-look__hotspot-dot {
    position: relative;
    width: 14px;
    height: 14px;
    border-radius: 50%;
    background-color: var(--stl-hotspot-color);
    z-index: 1;
    transition: transform 0.2s ease;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
  }

  .shop-the-look__hotspot-dot::before,
  .shop-the-look__hotspot-dot::after {
    content: '';
    position: absolute;
    background-color: #fff;
  }

  .shop-the-look__hotspot-dot::before {
    width: 8px;
    height: 1.5px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .shop-the-look__hotspot-dot::after {
    width: 1.5px;
    height: 8px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  /* Content */
  .shop-the-look__content {
    display: flex;
    flex-direction: column;
    gap: 16px;
    padding: 0;
    width: 100%;
  }

  @media screen and (min-width: 769px) {
    .shop-the-look__content {
      gap: 24px;
    }
  }

  .shop-the-look__header {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .shop-the-look__heading {
    font-size: var(--stl-heading-size-mobile);
    font-weight: var(--stl-heading-weight);
    margin: 0;
    line-height: 1.2;
  }

  .shop-the-look__subheading {
    font-size: var(--stl-subheading-size-mobile);
    font-weight: var(--stl-subheading-weight);
    margin: 0;
    opacity: 0.7;
    line-height: 1.4;
  }

  @media screen and (min-width: 769px) {
    .shop-the-look__heading {
      font-size: var(--stl-heading-size-desktop);
    }

    .shop-the-look__subheading {
      font-size: var(--stl-subheading-size-desktop);
    }
  }

  /* Product Cards */
  .shop-the-look__products {
    display: grid;
    grid-template-columns: 1fr;
    gap: 0;
  }

  @media screen and (min-width: 769px) {
    .shop-the-look__products {
      grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
      gap: 24px;
    }
  }

  .shop-the-look__product-card {
    background-color: var(--stl-card-bg);
    border: none;
    border-radius: 0;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  /* Accent Line at Top */
  .shop-the-look__card-accent {
    height: 3px;
    background-color: var(--stl-accent-color, #c9a227);
    width: 100%;
  }

  /* Mobile Layout */
  .shop-the-look__card-mobile {
    display: flex;
    padding: 16px;
    gap: 16px;
    align-items: flex-start;
  }

  .shop-the-look__card-mobile .shop-the-look__product-image-wrapper {
    width: 80px;
    height: 80px;
    flex-shrink: 0;
  }

  .shop-the-look__card-mobile .shop-the-look__product-info {
    display: flex;
    flex-direction: column;
    gap: 4px;
    flex: 1;
  }

  .shop-the-look__card-mobile .shop-the-look__product-title {
    font-family: var(--font-heading-family), serif;
    font-size: var(--stl-product-title-size-mobile);
    font-weight: var(--stl-product-title-weight);
    margin: 0;
    line-height: 1.2;
    color: var(--stl-text-color);
  }

  .shop-the-look__card-mobile .shop-the-look__product-price {
    font-size: var(--stl-price-size-mobile);
    font-weight: var(--stl-price-weight);
    color: var(--stl-text-color);
    margin-top: 2px;
  }

  .shop-the-look__add-link {
    background: none;
    border: none;
    padding: 0;
    margin-top: 8px;
    font-size: 12px;
    font-weight: 500;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: var(--stl-accent-color, #c9a227);
    cursor: pointer;
    text-decoration: underline;
    text-underline-offset: 3px;
    text-align: left;
  }

  .shop-the-look__add-link:hover {
    opacity: 0.7;
  }

  /* Desktop Layout */
  .shop-the-look__card-desktop {
    display: none;
  }

  @media screen and (min-width: 769px) {
    .shop-the-look__card-mobile {
      display: none;
    }

    .shop-the-look__card-desktop {
      display: flex;
      flex-direction: column;
      padding: 20px 24px 24px;
      flex: 1;
    }
  }

  /* Card Header - Number and Stock Badge (Desktop only) */
  .shop-the-look__card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
  }

  .shop-the-look__product-number {
    font-family: var(--font-heading-family), serif;
    font-style: italic;
    font-size: 24px;
    font-weight: 400;
    color: var(--stl-text-color);
  }

  .shop-the-look__stock-badge {
    font-size: 10px;
    font-weight: 500;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    padding: 6px 12px;
    border-radius: 0;
  }

  .shop-the-look__stock-badge--in-stock {
    background-color: #f5f5f4;
    color: #57534e;
  }

  .shop-the-look__stock-badge--waitlist {
    background-color: #1c1917;
    color: #ffffff;
  }

  /* Card Body - Image and Info (Desktop) */
  .shop-the-look__card-body {
    display: flex;
    gap: 20px;
    margin-bottom: 24px;
  }

  .shop-the-look__card-desktop .shop-the-look__product-image-wrapper {
    width: 110px;
    height: 110px;
    flex-shrink: 0;
    display: block;
  }

  .shop-the-look__product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 0;
  }

  .shop-the-look__card-desktop .shop-the-look__product-info {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 6px;
  }

  .shop-the-look__product-title-link {
    text-decoration: none;
    color: inherit;
  }

  .shop-the-look__product-title-link:hover .shop-the-look__product-title {
    opacity: 0.7;
  }

  .shop-the-look__card-desktop .shop-the-look__product-title {
    font-family: var(--font-heading-family), serif;
    font-size: var(--stl-product-title-size-desktop);
    font-weight: var(--stl-product-title-weight);
    margin: 0;
    line-height: 1.3;
    color: var(--stl-text-color);
  }

  .shop-the-look__product-subtitle {
    font-size: 14px;
    color: #78716c;
    line-height: 1.3;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .shop-the-look__card-desktop .shop-the-look__product-price {
    font-size: var(--stl-price-size-desktop);
    font-weight: var(--stl-price-weight);
    color: var(--stl-text-color);
    margin-top: 8px;
  }

  /* Add to Cart Button (Desktop) */
  .shop-the-look__add-btn {
    width: 100%;
    padding: 16px 24px;
    font-size: 12px;
    font-weight: 500;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    cursor: pointer;
    transition: opacity 0.2s ease;
    text-decoration: none;
    border-radius: 0;
    text-align: center;
    margin-top: auto;
    background-color: var(--stl-button-bg, #1c1917);
    color: var(--stl-button-text, #ffffff);
    border: 1px solid var(--stl-button-bg, #1c1917);
  }

  .shop-the-look__add-btn:hover {
    opacity: 0.85;
  }
{% endstylesheet %}

{% javascript %}
  document.addEventListener('DOMContentLoaded', function() {
    const section = document.getElementById('shop-the-look-{{ section.id }}');
    if (!section) return;

    const addBtns = section.querySelectorAll('[data-stl-add-single]');

    // Add to cart function
    async function addToCart(variantId) {
      try {
        const response = await fetch('/cart/add.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            items: [{ id: parseInt(variantId, 10), quantity: 1 }]
          })
        });

        if (!response.ok) {
          throw new Error('Failed to add to cart');
        }

        // Trigger cart drawer open or redirect
        const cartDrawer = document.querySelector('[data-cart-drawer]');
        if (cartDrawer) {
          cartDrawer.setAttribute('data-cart-drawer', 'open');
          document.body.style.overflow = 'hidden';
        } else {
          window.location.href = '/cart';
        }

        // Dispatch event for other scripts
        document.dispatchEvent(new CustomEvent('cart:updated'));

      } catch (error) {
        console.error('Add to cart error:', error);
      }
    }

    // Add single product
    addBtns.forEach(function(btn) {
      btn.addEventListener('click', function() {
        const variantId = this.dataset.variantId;
        if (variantId) {
          addToCart(variantId);
        }
      });
    });
  });
{% endjavascript %}

