  "tag": "section",
  "class": "section-shop-the-look",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.shop_the_look.settings.header_image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.shop_the_look.settings.image.label"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "t:sections.shop_the_look.settings.image_mobile.label",
      "info": "t:sections.shop_the_look.settings.image_mobile.info"
    },
    {
      "type": "header",
      "content": "t:sections.shop_the_look.settings.header_content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.shop_the_look.settings.heading.label",
      "default": "The Sleep Sanctuary"
    },
    {
      "type": "textarea",
