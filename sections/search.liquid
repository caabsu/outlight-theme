{% comment %}
  Search page with hero banner and product grid matching collection style
{% endcomment %}

<div class="search-page" data-search-page>
  {%- comment -%} Hero Section {%- endcomment -%}
  <div class="search-hero full-width" style="
    --hero-height-mobile: {{ section.settings.hero_height_mobile }}px;
    --hero-height-desktop: {{ section.settings.hero_height_desktop }}px;
    --hero-overlay-opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    --hero-bg-color: {{ section.settings.hero_bg_color }};
    --content-align-h: {{ section.settings.content_align_horizontal }};
    --content-align-v: {{ section.settings.content_align_vertical }};
    --content-padding-x-mobile: {{ section.settings.content_padding_x_mobile }}px;
    --content-padding-x-desktop: {{ section.settings.content_padding_x_desktop }}px;
    --content-padding-y-mobile: {{ section.settings.content_padding_y_mobile }}px;
    --content-padding-y-desktop: {{ section.settings.content_padding_y_desktop }}px;
    --title-size-mobile: {{ section.settings.title_size_mobile }}px;
    --title-size-desktop: {{ section.settings.title_size_desktop }}px;
    --title-color: {{ section.settings.title_color }};
    --title-weight: {{ section.settings.title_weight }};
    --subtitle-size-mobile: {{ section.settings.subtitle_size_mobile }}px;
    --subtitle-size-desktop: {{ section.settings.subtitle_size_desktop }}px;
    --subtitle-color: {{ section.settings.subtitle_color }};
    --subtitle-weight: {{ section.settings.subtitle_weight }};
  ">
    <div class="search-hero__image-wrapper">
      {%- if section.settings.hero_image != blank -%}
        {{ section.settings.hero_image | image_url: width: 1920 | image_tag: class: 'search-hero__image', loading: 'eager' }}
      {%- else -%}
        <div class="search-hero__placeholder"></div>
      {%- endif -%}
      <div class="search-hero__overlay"></div>
    </div>

    <div class="search-hero__content">
      <h1 class="search-hero__title">{{ section.settings.title | default: 'Search' }}</h1>
      {%- if section.settings.subtitle != blank -%}
        <p class="search-hero__subtitle">{{ section.settings.subtitle }}</p>
      {%- elsif search.performed and search.results_count > 0 -%}
        <p class="search-hero__subtitle">{{ search.results_count }} results for "{{ search.terms }}"</p>
      {%- elsif search.performed and search.results_count == 0 -%}
        <p class="search-hero__subtitle">No results found for "{{ search.terms }}"</p>
      {%- endif -%}
    </div>
  </div>

  {%- comment -%} Search Results Grid {%- endcomment -%}
  <div class="search-products" style="
    --products-gap: {{ section.settings.products_gap }}px;
    --products-padding-x-mobile: {{ section.settings.products_padding_x_mobile }}px;
    --products-padding-x-desktop: {{ section.settings.products_padding_x_desktop }}px;
    --products-padding-top: {{ section.settings.products_padding_top }}px;
    --products-padding-bottom: {{ section.settings.products_padding_bottom }}px;
    --product-title-size: {{ section.settings.product_title_size }}px;
    --product-title-color: {{ section.settings.product_title_color }};
    --product-title-weight: {{ section.settings.product_title_weight }};
    --product-price-size: {{ section.settings.product_price_size }}px;
    --product-price-color: {{ section.settings.product_price_color }};
    --product-price-weight: {{ section.settings.product_price_weight }};
  ">
    {% if search.performed %}
      {% if search.results_count == 0 %}
        <div class="search-no-results">
          <p>{{ 'search.no_results_html' | t: terms: search.terms | default: 'No results found. Try a different search term.' }}</p>
        </div>
      {% else %}
        {% paginate search.results by section.settings.products_per_page %}
          <div class="search-products__grid" data-products-grid>
            {% for result in search.results %}
              {% if result.object_type == 'product' %}
                <a href="{{ result.url }}" class="search-product">
                  <div class="search-product__image-wrapper">
                    {% if result.featured_image %}
                      {{ result.featured_image | image_url: width: 600, height: 600, crop: 'center' | image_tag: class: 'search-product__image', loading: 'lazy' }}
                    {% else %}
                      <div class="search-product__placeholder"></div>
                    {% endif %}
                  </div>
                  <div class="search-product__content">
                    <h3 class="search-product__title">{{ result.title }}</h3>
                    <p class="search-product__price">{{ result.price | money }}</p>
                  </div>
                </a>
              {% elsif result.object_type == 'collection' %}
                <a href="{{ result.url }}" class="search-product search-product--collection">
                  <div class="search-product__image-wrapper">
                    {% if result.featured_image %}
                      {{ result.featured_image | image_url: width: 600, height: 600, crop: 'center' | image_tag: class: 'search-product__image', loading: 'lazy' }}
                    {% else %}
                      <div class="search-product__placeholder"></div>
                    {% endif %}
                  </div>
                  <div class="search-product__content">
                    <span class="search-product__type">Collection</span>
                    <h3 class="search-product__title">{{ result.title }}</h3>
                  </div>
                </a>
              {% endif %}
            {% endfor %}
          </div>

          {%- if paginate.pages > 1 -%}
            <div class="search-pagination">
              {{ paginate | default_pagination }}
            </div>
          {%- endif -%}
        {% endpaginate %}
      {% endif %}
    {% else %}
      <div class="search-no-results">
        <p>Enter a search term to find products and collections.</p>
      </div>
    {% endif %}
  </div>
</div>

{% stylesheet %}
  .search-page {
    width: 100%;
  }

  /* Hero Section */
  .search-hero {
    position: relative;
    width: 100vw;
    margin-left: calc(-50vw + 50%);
    height: var(--hero-height-mobile, 250px);
    overflow: hidden;
  }

  .search-hero__image-wrapper {
    position: absolute;
    inset: 0;
  }

  .search-hero__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .search-hero__placeholder {
    width: 100%;
    height: 100%;
    background: var(--hero-bg-color, linear-gradient(135deg, #1C1917 0%, #44403C 100%));
  }

  .search-hero__overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, var(--hero-overlay-opacity, 0.3));
  }

  .search-hero__content {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    justify-content: var(--content-align-v, flex-end);
    align-items: var(--content-align-h, flex-start);
    padding: var(--content-padding-y-mobile, 24px) var(--content-padding-x-mobile, 24px);
    z-index: 1;
    text-align: left;
  }

  .search-hero__content[style*="--content-align-h: center"] {
    text-align: center;
  }

  .search-hero__content[style*="--content-align-h: flex-end"] {
    text-align: right;
  }

  .search-hero__title {
    font-family: var(--font-heading-family), serif;
    font-size: var(--title-size-mobile, 36px);
    font-weight: var(--title-weight, 400);
    color: var(--title-color, #ffffff);
    margin: 0;
    line-height: 1.1;
  }

  .search-hero__subtitle {
    font-family: var(--font-body-family), sans-serif;
    font-size: var(--subtitle-size-mobile, 14px);
    font-weight: var(--subtitle-weight, 400);
    color: var(--subtitle-color, rgba(255, 255, 255, 0.8));
    margin: 8px 0 0;
    line-height: 1.4;
  }

  /* Products Grid */
  .search-products {
    padding-top: var(--products-padding-top, 24px);
    padding-bottom: var(--products-padding-bottom, 48px);
    padding-left: var(--products-padding-x-mobile, 12px);
    padding-right: var(--products-padding-x-mobile, 12px);
  }

  .search-products__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--products-gap, 16px);
  }

  .search-product {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .search-product__image-wrapper {
    aspect-ratio: 1 / 1;
    overflow: hidden;
    background-color: #f5f5f5;
    margin-bottom: 12px;
  }

  .search-product__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .search-product:hover .search-product__image {
    transform: scale(1.03);
  }

  .search-product__placeholder {
    width: 100%;
    height: 100%;
    background-color: #e5e5e5;
  }

  .search-product__content {
    display: flex;
    flex-direction: column;
    gap: 4px;
    padding: 0 4px;
  }

  .search-product__type {
    font-family: var(--font-body-family), sans-serif;
    font-size: 10px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #78716C;
  }

  .search-product__title {
    font-family: var(--font-heading-family), serif;
    font-size: var(--product-title-size, 16px);
    font-weight: var(--product-title-weight, 400);
    color: var(--product-title-color, #1C1917);
    margin: 0;
    line-height: 1.3;
  }

  .search-product__price {
    font-family: var(--font-body-family), sans-serif;
    font-size: var(--product-price-size, 14px);
    font-weight: var(--product-price-weight, 400);
    color: var(--product-price-color, #78716C);
    margin: 0;
  }

  .search-no-results {
    text-align: center;
    padding: 60px 20px;
    color: #78716C;
    font-family: var(--font-body-family), sans-serif;
    font-size: 16px;
  }

  .search-pagination {
    margin-top: 48px;
    margin-bottom: 16px;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 4px;
    flex-wrap: wrap;
  }

  .search-pagination a,
  .search-pagination span {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 40px;
    height: 40px;
    padding: 0 12px;
    font-family: var(--font-body-family), sans-serif;
    font-size: 14px;
    font-weight: 500;
    color: #57534E;
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.2s ease;
  }

  .search-pagination a:hover {
    background: #F5F5F4;
    color: #1C1917;
  }

  .search-pagination span.current {
    background: #1C1917;
    color: #ffffff;
    font-weight: 600;
  }

  .search-pagination span.deco {
    min-width: auto;
    padding: 0 4px;
    color: #A8A29E;
  }

  /* Desktop */
  @media (min-width: 768px) {
    .search-hero {
      height: var(--hero-height-desktop, 350px);
    }

    .search-hero__content {
      padding: var(--content-padding-y-desktop, 60px) var(--content-padding-x-desktop, 60px);
    }

    .search-hero__title {
      font-size: var(--title-size-desktop, 56px);
    }

    .search-hero__subtitle {
      font-size: var(--subtitle-size-desktop, 16px);
      margin-top: 12px;
    }

    .search-products {
      padding-left: var(--products-padding-x-desktop, 24px);
      padding-right: var(--products-padding-x-desktop, 24px);
    }

    .search-products__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: var(--products-gap, 24px);
    }

    .search-product__image-wrapper {
      margin-bottom: 16px;
    }

    .search-product__title {
      font-size: calc(var(--product-title-size, 16px) + 2px);
    }
  }

  @media (min-width: 1024px) {
    .search-products__grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  @media (max-width: 767px) {
    .search-pagination {
      gap: 2px;
    }

    .search-pagination a,
    .search-pagination span {
      min-width: 36px;
      height: 36px;
      padding: 0 8px;
      font-size: 13px;
      border-radius: 6px;
    }
  }
{% endstylesheet %}

