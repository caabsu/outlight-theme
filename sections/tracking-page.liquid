{% comment %}
  Tracking page section - 17TRACK order tracking iframe
{% endcomment %}

<div class="tracking-page" style="
  --tp-bg: {{ section.settings.page_bg_color }};
  --tp-bg-mobile: {{ section.settings.page_bg_color_mobile }};
  --tp-heading-size: {{ section.settings.heading_size }}px;
  --tp-heading-size-mobile: {{ section.settings.heading_size_mobile }}px;
  --tp-heading-color: {{ section.settings.heading_color }};
  --tp-heading-weight: {{ section.settings.heading_weight }};
  --tp-subtitle-size: {{ section.settings.subtitle_size }}px;
  --tp-subtitle-color: {{ section.settings.subtitle_color }};
  --tp-back-color: {{ section.settings.back_link_color }};
">
  <div class="tracking-page__container">
    {%- comment -%} Back Navigation {%- endcomment -%}
    <a href="{{ section.settings.back_link }}" class="tracking-page__back">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M15 18l-6-6 6-6"/>
      </svg>
      <span>{{ section.settings.back_text }}</span>
    </a>

    {%- comment -%} Header {%- endcomment -%}
    <div class="tracking-page__header">
      <h1 class="tracking-page__title">{{ section.settings.heading }}</h1>
      {%- if section.settings.subtitle != blank -%}
        <p class="tracking-page__subtitle">{{ section.settings.subtitle }}</p>
      {%- endif -%}
    </div>

    {%- comment -%} 17TRACK Tracking Iframe {%- endcomment -%}
    <div class="tracking-page__iframe-wrapper">
      <iframe
        title="trackpage"
        class="tracking-page__iframe"
        id="yq-tracking-page"
        src="https://shopify-proxy.17track.net/iframe?shop=put1rp-iq{% if section.settings.language != blank %}&lang={{ section.settings.language }}{% endif %}"
        scrolling="no"
        frameborder="0"
      ></iframe>
    </div>
  </div>
</div>

{% javascript %}
  (function() {
    const iframe = document.querySelector("#yq-tracking-page");
    if (iframe) {
      window.addEventListener("message", function(event) {
        if (
          event.data &&
          event.data.type === "resize" &&
          typeof event.data.scrollHeight === "number"
        ) {
          iframe.style.height = event.data.scrollHeight + "px";
        }
      });
    }
  })();
{% endjavascript %}

{% stylesheet %}
  .tracking-page {
    background-color: var(--tp-bg, #f5f5f5);
    padding: 1.5rem 1.5rem 2rem;
  }

  .tracking-page__container {
    max-width: 900px;
    margin: 0 auto;
  }

  /* Back Navigation */
  .tracking-page__back {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--tp-back-color, #78716C);
    text-decoration: none;
    margin-bottom: 1rem;
    transition: color 0.2s ease;
  }

  .tracking-page__back:hover {
    color: var(--tp-heading-color, #1C1917);
  }

  .tracking-page__back svg {
    flex-shrink: 0;
  }

  /* Header */
  .tracking-page__header {
    text-align: center;
    margin-bottom: 1.5rem;
  }

  .tracking-page__title {
    font-family: var(--font-heading-family), serif;
    font-weight: var(--tp-heading-weight, 400);
    font-size: var(--tp-heading-size, 32px);
    color: var(--tp-heading-color, #1C1917);
    margin: 0 0 0.5rem;
  }

  .tracking-page__subtitle {
    font-size: var(--tp-subtitle-size, 16px);
    color: var(--tp-subtitle-color, #78716C);
    margin: 0;
  }

  /* Iframe */
  .tracking-page__iframe-wrapper {
    background: #ffffff;
    border: 1px solid #E5E5E5;
    overflow: hidden;
  }

  .tracking-page__iframe {
    width: 100%;
    min-height: 600px;
    border: none;
  }

  /* Mobile Styles */
  @media screen and (max-width: 768px) {
    .tracking-page {
      padding: 1.5rem 1rem 3rem;
      background-color: var(--tp-bg-mobile, #ffffff);
    }

    .tracking-page__back {
      margin-bottom: 1rem;
    }

    .tracking-page__header {
      margin-bottom: 1.5rem;
    }

    .tracking-page__title {
      font-size: var(--tp-heading-size-mobile, 24px);
    }

    .tracking-page__subtitle {
      font-size: 14px;
    }

    .tracking-page__iframe-wrapper {
      margin: 0 -1rem;
      border-left: none;
      border-right: none;
    }

    .tracking-page__iframe {
      min-height: 500px;
    }
  }
{% endstylesheet %}

