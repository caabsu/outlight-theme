{% comment %}
  Article Text Section
  Numbered section with title and body text with drop cap
  Optional image support with different layouts
{% endcomment %}

{%- assign has_image = false -%}
{%- if section.settings.image != blank -%}
  {%- assign has_image = true -%}
{%- endif -%}

<section
  class="article-section {% if has_image %}article-section--has-image{% endif %}"
  style="
    --as-bg: {{ section.settings.background_color }};
    --as-number-color: {{ section.settings.number_color }};
    --as-title-color: {{ section.settings.title_color }};
    --as-title-size: {{ section.settings.title_size }}px;
    --as-title-size-mobile: {{ section.settings.title_size_mobile }}px;
    --as-text-color: {{ section.settings.text_color }};
    --as-text-size: {{ section.settings.text_size }}px;
    --as-text-size-mobile: {{ section.settings.text_size_mobile }}px;
    --as-dropcap-color: {{ section.settings.dropcap_color }};
    --as-dropcap-size: {{ section.settings.dropcap_size }}px;
    --as-dropcap-size-mobile: {{ section.settings.dropcap_size_mobile }}px;
    --as-divider-color: {{ section.settings.divider_color }};
    --as-caption-color: {{ section.settings.caption_color }};
    --as-padding-top: {{ section.settings.padding_top }}px;
    --as-padding-bottom: {{ section.settings.padding_bottom }}px;
    --as-padding-top-mobile: {{ section.settings.padding_top_mobile }}px;
    --as-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}px;
    --as-materials-accent: {{ section.settings.materials_accent_color }};
    --as-materials-color: {{ section.settings.materials_text_color }};
  "
>
  <div class="article-section__container">
    {%- if has_image -%}
      {%- comment -%} Layout WITH image {%- endcomment -%}

      {%- comment -%} Mobile layout {%- endcomment -%}
      <div class="article-section__mobile">
        <div class="article-section__header">
          <div class="article-section__divider"></div>
          {%- if section.settings.section_number != blank or section.settings.section_label != blank -%}
            <p class="article-section__number">
              {%- if section.settings.section_number != blank -%}
                {{ section.settings.section_number }}.
              {%- endif -%}
              {%- if section.settings.section_label != blank -%}
                {{ section.settings.section_label | upcase }}
              {%- endif -%}
            </p>
          {%- endif -%}
          {%- if section.settings.title != blank -%}
            <h2 class="article-section__title">{{ section.settings.title }}</h2>
          {%- endif -%}
        </div>

        <div class="article-section__image-wrapper">
          <div class="article-section__image">
            {%- if section.settings.image_mobile != blank -%}
              {{ section.settings.image_mobile | image_url: width: 1200 | image_tag: loading: 'lazy' }}
            {%- else -%}
              {{ section.settings.image | image_url: width: 1200 | image_tag: loading: 'lazy' }}
            {%- endif -%}
          </div>
          {%- if section.settings.caption != blank -%}
            <p class="article-section__caption">{{ section.settings.caption }}</p>
          {%- endif -%}
        </div>

        <div class="article-section__content">
          {%- if section.settings.body_text != blank -%}
            <div class="article-section__text {% if section.settings.enable_dropcap %}article-section__text--dropcap{% endif %}">
              {{ section.settings.body_text }}
            </div>
          {%- endif -%}
          {%- if section.settings.body_text_2 != blank -%}
            <div class="article-section__text article-section__text--secondary">
              {{ section.settings.body_text_2 }}
            </div>
          {%- endif -%}
        </div>

        {%- if section.blocks.size > 0 -%}
          <ul class="article-section__materials article-section__materials--mobile">
            {%- for block in section.blocks -%}
              <li class="article-section__materials-item" {{ block.shopify_attributes }}>
                {{ block.settings.text | upcase }}
              </li>
            {%- endfor -%}
          </ul>
        {%- endif -%}
      </div>

      {%- comment -%} Desktop layout {%- endcomment -%}
      <div class="article-section__desktop">
        <div class="article-section__grid-image">
          <div class="article-section__image-wrapper">
            <div class="article-section__image">
              {{ section.settings.image | image_url: width: 1200 | image_tag: loading: 'lazy' }}
            </div>
            {%- if section.settings.caption != blank -%}
              <p class="article-section__caption">{{ section.settings.caption }}</p>
            {%- endif -%}
          </div>

          <div class="article-section__right">
            <div class="article-section__header">
              {%- if section.settings.section_number != blank or section.settings.section_label != blank -%}
                <p class="article-section__number">
                  {%- if section.settings.section_number != blank -%}
                    {{ section.settings.section_number }}.
                  {%- endif -%}
                  {%- if section.settings.section_label != blank -%}
                    {{ section.settings.section_label | upcase }}
                  {%- endif -%}
                </p>
              {%- endif -%}
              {%- if section.settings.title != blank -%}
                <h2 class="article-section__title">{{ section.settings.title }}</h2>
              {%- endif -%}
            </div>

            <div class="article-section__content">
              {%- if section.settings.body_text != blank -%}
                <div class="article-section__text {% if section.settings.enable_dropcap %}article-section__text--dropcap{% endif %}">
                  {{ section.settings.body_text }}
                </div>
              {%- endif -%}
              {%- if section.settings.body_text_2 != blank -%}
                <div class="article-section__text article-section__text--secondary">
                  {{ section.settings.body_text_2 }}
                </div>
              {%- endif -%}
            </div>

            {%- if section.blocks.size > 0 -%}
              <ul class="article-section__materials">
                {%- for block in section.blocks -%}
                  <li class="article-section__materials-item" {{ block.shopify_attributes }}>
                    {{ block.settings.text | upcase }}
                  </li>
                {%- endfor -%}
              </ul>
            {%- endif -%}
          </div>
        </div>
      </div>

    {%- else -%}
      {%- comment -%} Layout WITHOUT image (original) {%- endcomment -%}
      <div class="article-section__grid">
        <div class="article-section__header">
          <div class="article-section__divider"></div>
          {%- if section.settings.section_number != blank or section.settings.section_label != blank -%}
            <p class="article-section__number">
              {%- if section.settings.section_number != blank -%}
                {{ section.settings.section_number }}.
              {%- endif -%}
              {%- if section.settings.section_label != blank -%}
                {{ section.settings.section_label | upcase }}
              {%- endif -%}
            </p>
          {%- endif -%}
          {%- if section.settings.title != blank -%}
            <h2 class="article-section__title">{{ section.settings.title }}</h2>
          {%- endif -%}
        </div>

        <div class="article-section__content">
          {%- if section.settings.body_text != blank -%}
            <div class="article-section__text {% if section.settings.enable_dropcap %}article-section__text--dropcap{% endif %}">
              {{ section.settings.body_text }}
            </div>
          {%- endif -%}
          {%- if section.settings.body_text_2 != blank -%}
            <div class="article-section__text article-section__text--secondary">
              {{ section.settings.body_text_2 }}
            </div>
          {%- endif -%}
        </div>
      </div>
    {%- endif -%}
  </div>
</section>

{% stylesheet %}
  .article-section {
    background-color: var(--as-bg);
    padding: var(--as-padding-top-mobile) 16px var(--as-padding-bottom-mobile);
  }

  .article-section__container {
    max-width: 1400px;
    margin: 0 auto;
  }

  /* ===================== */
  /* Layout WITHOUT image  */
  /* ===================== */
  .article-section__grid {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .article-section__header {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .article-section__divider {
    width: 60px;
    height: 1px;
    background-color: var(--as-divider-color);
    margin-bottom: 1rem;
  }

  .article-section__number {
    font-family: var(--font-body-family), sans-serif;
    font-size: 10px;
    font-weight: 500;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--as-number-color);
    margin: 0 0 0.75rem;
  }

  .article-section__title {
    font-family: var(--font-heading-family), serif;
    font-size: var(--as-title-size-mobile);
    font-weight: 400;
    color: var(--as-title-color);
    margin: 0;
    line-height: 1.2;
  }

  .article-section__content {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .article-section__text {
    font-family: var(--font-heading-family), serif;
    font-size: var(--as-text-size-mobile);
    font-weight: 400;
    color: var(--as-text-color);
    line-height: 1.7;
    margin: 0;
    width: 100%;
  }

  .article-section__text--secondary {
    clear: both;
  }

  .article-section__text p {
    margin: 0 0 1.25em;
  }

  .article-section__text p:last-child {
    margin-bottom: 0;
  }

  /* Drop cap styling */
  .article-section__text--dropcap p:first-of-type::first-letter,
  .article-section__text--dropcap > *:first-child::first-letter {
    font-family: var(--font-heading-family), serif;
    font-size: var(--as-dropcap-size-mobile);
    font-weight: 400;
    font-style: italic;
    color: var(--as-dropcap-color);
    float: left;
    line-height: 0.8;
    margin-right: 0.15em;
    margin-top: 0.1em;
  }

  /* Materials list - mobile */
  .article-section__materials--mobile {
    list-style: none;
    margin: 0;
    padding: 0 0 0 1rem;
    border-left: 2px solid var(--as-materials-accent, #D97706);
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .article-section__materials-item {
    font-family: var(--font-body-family), sans-serif;
    font-size: 12px;
    font-weight: 500;
    letter-spacing: 0.1em;
    color: var(--as-materials-color, #78716C);
    line-height: 1.6;
  }

  /* ===================== */
  /* Layout WITH image     */
  /* ===================== */
  .article-section--has-image .article-section__desktop {
    display: none;
  }

  .article-section--has-image .article-section__mobile {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .article-section__image-wrapper {
    width: 100%;
  }

  .article-section__image {
    width: 100%;
  }

  .article-section__image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .article-section__caption {
    font-family: var(--font-body-family), sans-serif;
    font-size: 10px;
    font-weight: 500;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--as-caption-color);
    margin: 1rem 0 0;
  }

  /* Hide divider in image layout mobile */
  .article-section--has-image .article-section__mobile .article-section__divider {
    display: none;
  }

  @media (min-width: 768px) {
    .article-section {
      padding: var(--as-padding-top) 40px var(--as-padding-bottom);
    }

    /* Desktop WITHOUT image */
    .article-section__grid {
      display: grid;
      grid-template-columns: 280px 1fr;
      gap: 6rem;
      align-items: flex-start;
    }

    .article-section__header {
      position: sticky;
      top: 120px;
    }

    .article-section__number {
      font-size: 11px;
    }

    .article-section__title {
      font-size: var(--as-title-size);
    }

    .article-section__text {
      font-size: var(--as-text-size);
    }

    .article-section__text--dropcap p:first-of-type::first-letter,
    .article-section__text--dropcap > *:first-child::first-letter {
      font-size: var(--as-dropcap-size);
      margin-right: 0.2em;
    }

    .article-section__content {
      gap: 2rem;
    }

    /* Desktop WITH image */
    .article-section--has-image .article-section__mobile {
      display: none;
    }

    .article-section--has-image .article-section__desktop {
      display: block;
    }

    .article-section--has-image .article-section__header {
      position: static;
    }

    .article-section__grid-image {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 5rem;
      align-items: flex-start;
    }

    .article-section__grid-image .article-section__image-wrapper {
      max-width: 100%;
    }

    .article-section__grid-image .article-section__caption {
      font-size: 11px;
      margin-top: 1.25rem;
    }

    .article-section__right {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
      padding-top: 0.5rem;
    }

    .article-section__right .article-section__header {
      /* No divider in image layout desktop */
    }

    .article-section__right .article-section__divider {
      display: none;
    }

    .article-section__right .article-section__number {
      margin-bottom: 0.5rem;
    }

    .article-section__right .article-section__content {
      max-width: 100%;
    }

    /* Hide mobile materials on desktop */
    .article-section__materials--mobile {
      display: none;
    }

    /* Materials list - desktop only */
    .article-section__materials:not(.article-section__materials--mobile) {
      list-style: none;
      margin: 1rem 0 0;
      padding: 0 0 0 1.25rem;
      border-left: 2px solid var(--as-materials-accent, #D97706);
      display: flex;
      flex-direction: column;
      gap: 0.625rem;
    }

    .article-section__materials:not(.article-section__materials--mobile) .article-section__materials-item {
      font-size: 13px;
    }
  }
{% endstylesheet %}

