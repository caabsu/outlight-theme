{% comment %}
  Support Center section - Help page with search and category cards
{% endcomment %}

<div class="support-center" style="
  --sc-bg: {{ section.settings.page_bg_color }};
  --sc-bg-mobile: {{ section.settings.page_bg_color_mobile }};
  --sc-heading-size: {{ section.settings.heading_size }}px;
  --sc-heading-size-mobile: {{ section.settings.heading_size_mobile }}px;
  --sc-heading-color: {{ section.settings.heading_color }};
  --sc-heading-weight: {{ section.settings.heading_weight }};
  --sc-subtitle-size: {{ section.settings.subtitle_size }}px;
  --sc-subtitle-color: {{ section.settings.subtitle_color }};
  --sc-card-bg: {{ section.settings.card_bg_color }};
  --sc-card-radius: {{ section.settings.card_border_radius }}px;
  --sc-icon-bg: {{ section.settings.icon_bg_color }};
  --sc-icon-color: {{ section.settings.icon_color }};
  --sc-card-title-size: {{ section.settings.card_title_size }}px;
  --sc-card-title-weight: {{ section.settings.card_title_weight }};
  --sc-card-title-color: {{ section.settings.card_title_color }};
  --sc-card-desc-size: {{ section.settings.card_desc_size }}px;
  --sc-card-desc-color: {{ section.settings.card_desc_color }};
  --sc-contact-color: {{ section.settings.contact_link_color }};
