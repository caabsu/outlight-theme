{% comment %}
  Support Center / Help Center section with dark header, tabs, and FAQ
{% endcomment %}

<div class="help-center" style="
  --hc-page-bg: {{ section.settings.page_bg_color }};
  --hc-header-bg: {{ section.settings.header_bg_color }};
  --hc-header-overlay-opacity: {{ section.settings.header_overlay_opacity | divided_by: 100.0 }};
  --hc-title-size: {{ section.settings.title_size }}px;
  --hc-title-size-mobile: {{ section.settings.title_size_mobile }}px;
  --hc-title-color: {{ section.settings.title_color }};
  --hc-title-weight: {{ section.settings.title_weight }};
  --hc-btn-bg: {{ section.settings.button_bg_color }};
  --hc-btn-text: {{ section.settings.button_text_color }};
  --hc-btn-border: {{ section.settings.button_border_color }};
  --hc-card-bg: {{ section.settings.card_bg_color }};
  --hc-card-radius: {{ section.settings.card_border_radius }}px;
  --hc-tab-color: {{ section.settings.tab_color }};
  --hc-tab-active-color: {{ section.settings.tab_active_color }};
  --hc-question-size: {{ section.settings.question_size }}px;
  --hc-question-size-mobile: {{ section.settings.question_size_mobile }}px;
  --hc-question-color: {{ section.settings.question_color }};
  --hc-question-weight: {{ section.settings.question_weight }};
  --hc-answer-size: {{ section.settings.answer_size }}px;
  --hc-answer-size-mobile: {{ section.settings.answer_size_mobile }}px;
  --hc-answer-color: {{ section.settings.answer_color }};
">
  {%- comment -%} Dark Header {%- endcomment -%}
  <div class="help-center__header">
    {%- if section.settings.header_bg_image != blank -%}
      <div class="help-center__header-bg">
        {{ section.settings.header_bg_image | image_url: width: 1920 | image_tag: class: 'help-center__header-img' }}
      </div>
    {%- endif -%}
    <div class="help-center__header-overlay"></div>
    <div class="help-center__header-content">
      <h1 class="help-center__title">{{ section.settings.heading }}</h1>
      <div class="help-center__actions">
        {%- if section.settings.track_button_text != blank -%}
          <a href="{{ section.settings.track_button_link }}" class="help-center__btn">
            {{ section.settings.track_button_text }}
          </a>
        {%- endif -%}
        {%- if section.settings.return_button_text != blank -%}
          <a href="{{ section.settings.return_button_link }}" class="help-center__btn">
            {{ section.settings.return_button_text }}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>

  {%- comment -%} Main Content Card {%- endcomment -%}
  <div class="help-center__body">
    <div class="help-center__card">
      {%- comment -%} Tabs {%- endcomment -%}
      {%- assign tabs = section.blocks | where: "type", "tab" -%}
      {%- if tabs.size > 0 -%}
        <div class="help-center__tabs" role="tablist">
          {%- for block in tabs -%}
            <button
              class="help-center__tab{% if forloop.first %} help-center__tab--active{% endif %}"
              role="tab"
              aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"
              aria-controls="tab-panel-{{ block.id }}"
              data-tab-index="{{ forloop.index0 }}"
              {{ block.shopify_attributes }}
            >
              {{ block.settings.tab_title }}
            </button>
          {%- endfor -%}
        </div>

        {%- comment -%} Tab Panels {%- endcomment -%}
        <div class="help-center__panels">
          {%- for block in tabs -%}
            <div
              class="help-center__panel{% if forloop.first %} help-center__panel--active{% endif %}"
              role="tabpanel"
              id="tab-panel-{{ block.id }}"
              data-panel-index="{{ forloop.index0 }}"
            >
              {%- comment -%} Desktop FAQ Layout {%- endcomment -%}
              <div class="help-center__faq help-center__faq--desktop">
                {%- if block.settings.question_1 != blank -%}
                  <div class="help-center__faq-item">
                    <h3 class="help-center__question">{{ block.settings.question_1 }}</h3>
                    <p class="help-center__answer">{{ block.settings.answer_1 }}</p>
                  </div>
                {%- endif -%}
                {%- if block.settings.question_2 != blank -%}
                  <div class="help-center__faq-item">
                    <h3 class="help-center__question">{{ block.settings.question_2 }}</h3>
                    <p class="help-center__answer">{{ block.settings.answer_2 }}</p>
                  </div>
                {%- endif -%}
                {%- if block.settings.question_3 != blank -%}
                  <div class="help-center__faq-item">
                    <h3 class="help-center__question">{{ block.settings.question_3 }}</h3>
                    <p class="help-center__answer">{{ block.settings.answer_3 }}</p>
                  </div>
                {%- endif -%}
                {%- if block.settings.question_4 != blank -%}
                  <div class="help-center__faq-item">
                    <h3 class="help-center__question">{{ block.settings.question_4 }}</h3>
                    <p class="help-center__answer">{{ block.settings.answer_4 }}</p>
                  </div>
                {%- endif -%}
                {%- if block.settings.question_5 != blank -%}
                  <div class="help-center__faq-item">
                    <h3 class="help-center__question">{{ block.settings.question_5 }}</h3>
                    <p class="help-center__answer">{{ block.settings.answer_5 }}</p>
                  </div>
                {%- endif -%}
              </div>

              {%- comment -%} Mobile FAQ Layout {%- endcomment -%}
              <div class="help-center__faq help-center__faq--mobile">
                {%- if block.settings.question_1 != blank -%}
                  <div class="help-center__faq-row">
                    <span class="help-center__faq-label">{{ block.settings.mobile_label_1 | default: block.settings.question_1 }}</span>
                    <span class="help-center__faq-value">{{ block.settings.mobile_value_1 | default: block.settings.answer_1 | truncate: 50 }}</span>
                  </div>
                {%- endif -%}
                {%- if block.settings.question_2 != blank -%}
                  <div class="help-center__faq-row">
                    <span class="help-center__faq-label">{{ block.settings.mobile_label_2 | default: block.settings.question_2 }}</span>
                    <span class="help-center__faq-value">{{ block.settings.mobile_value_2 | default: block.settings.answer_2 | truncate: 50 }}</span>
                  </div>
                {%- endif -%}
                {%- if block.settings.question_3 != blank -%}
                  <div class="help-center__faq-row">
                    <span class="help-center__faq-label">{{ block.settings.mobile_label_3 | default: block.settings.question_3 }}</span>
                    <span class="help-center__faq-value">{{ block.settings.mobile_value_3 | default: block.settings.answer_3 | truncate: 50 }}</span>
                  </div>
                {%- endif -%}
