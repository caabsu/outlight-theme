  </div>
</div>

{% javascript %}
  (function() {
    const tabs = document.querySelectorAll('.help-center__tab');
    const panels = document.querySelectorAll('.help-center__panel');

    tabs.forEach(tab => {
      tab.addEventListener('click', function() {
        const index = this.getAttribute('data-tab-index');

        // Update tabs
        tabs.forEach(t => {
          t.classList.remove('help-center__tab--active');
          t.setAttribute('aria-selected', 'false');
        });
        this.classList.add('help-center__tab--active');
        this.setAttribute('aria-selected', 'true');

        // Update panels
        panels.forEach(p => {
          p.classList.remove('help-center__panel--active');
        });
        document.querySelector(`[data-panel-index="${index}"]`).classList.add('help-center__panel--active');
      });
    });
  })();
{% endjavascript %}

{% stylesheet %}
  .help-center {
    min-height: 100vh;
    background-color: var(--hc-page-bg, #E8E4DD);
  }

  /* Header */
  .help-center__header {
    position: relative;
    background-color: var(--hc-header-bg, #1C1917);
    padding: 2.5rem 1.5rem;
    overflow: hidden;
  }

  .help-center__header-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .help-center__header-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .help-center__header-overlay {
    position: absolute;
    inset: 0;
    background-color: var(--hc-header-bg, #1C1917);
    opacity: var(--hc-header-overlay-opacity, 0.85);
    z-index: 1;
  }

  .help-center__header-content {
    position: relative;
    z-index: 2;
    max-width: 900px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .help-center__title {
    font-family: var(--font-heading-family), serif;
    font-size: var(--hc-title-size, 32px);
    font-weight: var(--hc-title-weight, 500);
    color: var(--hc-title-color, #ffffff);
    margin: 0;
  }

  .help-center__actions {
    display: flex;
    gap: 0.75rem;
  }

  .help-center__btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.625rem 1.25rem;
    font-family: var(--font-primary-family), sans-serif;
    font-size: 0.8125rem;
    font-weight: 500;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    text-decoration: none;
    color: var(--hc-btn-text, #ffffff);
    background-color: var(--hc-btn-bg, #1C1917);
    border: 1px solid var(--hc-btn-border, #ffffff);
    transition: all 0.2s ease;
  }

  .help-center__btn:hover {
    background-color: var(--hc-btn-text, #ffffff);
    color: var(--hc-btn-bg, #1C1917);
  }

  /* Body */
  .help-center__body {
    padding: 0 1.5rem 3rem;
    max-width: 932px;
    margin: 0 auto;
    margin-top: -1px;
  }

  .help-center__card {
    background: var(--hc-card-bg, #ffffff);
    border-radius: var(--hc-card-radius, 12px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    overflow: hidden;
  }

  /* Tabs */
  .help-center__tabs {
    display: flex;
    border-bottom: 1px solid #E5E5E5;
  }

  .help-center__tab {
    flex: 1;
    padding: 1.25rem 1rem;
    font-family: var(--font-primary-family), sans-serif;
    font-size: 0.8125rem;
    font-weight: 500;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: var(--hc-tab-color, #78716C);
    background: none;
    border: none;
    border-bottom: 2px solid transparent;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .help-center__tab:hover {
    color: var(--hc-tab-active-color, #D97706);
  }

  .help-center__tab--active {
    color: var(--hc-tab-active-color, #D97706);
    border-bottom-color: var(--hc-tab-active-color, #D97706);
  }

  /* Panels */
  .help-center__panels {
    padding: 2rem;
  }

  .help-center__panel {
    display: none;
  }

  .help-center__panel--active {
    display: block;
  }

  /* FAQ - Desktop */
  .help-center__faq--desktop {
    display: flex;
    flex-direction: column;
    gap: 1.75rem;
  }

  .help-center__faq--mobile {
    display: none;
  }

  .help-center__faq-item {
    padding-bottom: 1.5rem;
    border-bottom: 1px solid #F0F0F0;
  }

  .help-center__faq-item:last-child {
    padding-bottom: 0;
    border-bottom: none;
  }

  .help-center__question {
    font-family: var(--font-primary-family), sans-serif;
    font-size: var(--hc-question-size, 15px);
    font-weight: var(--hc-question-weight, 600);
    color: var(--hc-question-color, #1C1917);
    margin: 0 0 0.5rem;
  }

  .help-center__answer {
    font-family: var(--font-primary-family), sans-serif;
    font-size: var(--hc-answer-size, 14px);
    line-height: 1.6;
    color: var(--hc-answer-color, #57534E);
    margin: 0;
  }

  /* FAQ - Mobile rows */
  .help-center__faq-row {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    padding: 1rem 0;
    border-bottom: 1px solid #F0F0F0;
  }

  .help-center__faq-row:last-child {
    border-bottom: none;
  }

  .help-center__faq-label {
    font-family: var(--font-primary-family), sans-serif;
    font-size: var(--hc-question-size-mobile, 14px);
    font-weight: var(--hc-question-weight, 600);
    color: var(--hc-question-color, #1C1917);
  }

  .help-center__faq-value {
    font-family: var(--font-primary-family), sans-serif;
    font-size: var(--hc-answer-size-mobile, 13px);
    color: var(--hc-answer-color, #57534E);
  }

  /* Mobile Styles */
  @media screen and (max-width: 768px) {
    .help-center__header {
      padding: 2rem 1rem;
    }

    .help-center__header-content {
      flex-direction: column;
      align-items: flex-start;
      gap: 1.25rem;
    }

    .help-center__title {
      font-size: var(--hc-title-size-mobile, 28px);
    }

    .help-center__actions {
      width: 100%;
    }

    .help-center__btn {
      flex: 1;
      text-align: center;
    }

    .help-center__body {
      padding: 0 1rem 2rem;
    }

    .help-center__card {
      border-radius: 0;
      margin: 0 -1rem;
      box-shadow: none;
    }

    .help-center__tabs {
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
    }

    .help-center__tab {
      padding: 1rem 0.75rem;
      font-size: 0.75rem;
      white-space: nowrap;
    }

    .help-center__panels {
      padding: 1rem;
    }

    .help-center__faq--desktop {
      display: none;
    }

    .help-center__faq--mobile {
      display: block;
    }
  }
{% endstylesheet %}

