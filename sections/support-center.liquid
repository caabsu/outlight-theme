                      <p>{{ block.settings.answer_5 }}</p>
                    </div>
                  </details>
                {%- endif -%}
              </div>
            </div>
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

{% stylesheet %}
  .help-center {
    background-color: var(--hc-page-bg, #E8E4DD);
    width: 100vw;
    margin-left: calc(-50vw + 50%);
  }

  /* Header - Full Width */
  .help-center__header {
    position: relative;
    background-color: var(--hc-header-bg, #1C1917);
    padding: 2rem 2rem;
    overflow: hidden;
  }

  .help-center__header-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .help-center__header-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .help-center__header-overlay {
    position: absolute;
    inset: 0;
    background-color: var(--hc-header-bg, #1C1917);
    opacity: var(--hc-header-overlay-opacity, 0.85);
    z-index: 1;
  }

  .help-center__header-content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.25rem;
  }

  .help-center__title {
    font-family: var(--font-heading-family), serif;
    font-size: var(--hc-title-size, 32px);
    font-weight: var(--hc-title-weight, 500);
    color: var(--hc-title-color, #ffffff);
    margin: 0;
    text-align: center;
  }

  .help-center__actions {
    display: flex;
    gap: 0.5rem;
  }

  .help-center__btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem 1rem;
    font-family: var(--font-primary-family), sans-serif;
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .help-center__btn--track {
    color: var(--hc-track-btn-text, #ffffff);
    background-color: var(--hc-track-btn-bg, transparent);
    border: 1px solid var(--hc-track-btn-border, #ffffff);
  }

  .help-center__btn--track:hover {
    background-color: var(--hc-track-btn-text, #ffffff);
    color: var(--hc-track-btn-bg, #1C1917);
  }

  .help-center__btn--return {
    color: var(--hc-return-btn-text, #ffffff);
    background-color: var(--hc-return-btn-bg, transparent);
    border: 1px solid var(--hc-return-btn-border, #ffffff);
  }

  .help-center__btn--return:hover {
    background-color: var(--hc-return-btn-text, #ffffff);
    color: var(--hc-return-btn-bg, #1C1917);
  }

  /* Body - Full Width */
  .help-center__body {
    padding: 0;
  }

  .help-center__card {
    background: var(--hc-card-bg, #ffffff);
    border-radius: 0;
    overflow: hidden;
  }

  /* Categories */
  .help-center__categories {
    display: flex;
    flex-direction: column;
  }

  .help-center__category {
    border-bottom: 1px solid #E5E5E5;
  }

  .help-center__category:last-child {
    border-bottom: none;
  }

  .help-center__category-title {
    font-family: var(--font-heading-family), serif;
    font-size: var(--hc-category-title-size, 20px);
    font-weight: var(--hc-category-title-weight, 600);
    color: var(--hc-category-title-color, #1C1917);
    margin: 0;
    padding: 1.5rem 2rem 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* FAQ - Desktop */
  .help-center__faq--desktop {
    display: flex;
    flex-direction: column;
  }

  .help-center__faq--mobile {
    display: none;
  }

  .help-center__faq-item {
    padding: 1.5rem 2rem;
    background-color: var(--hc-faq-bg, #ffffff);
  }

  .help-center__faq-item--alt {
    background-color: var(--hc-faq-alt-bg, #F9F9F8);
  }

  .help-center__question {
    font-family: var(--font-primary-family), sans-serif;
    font-size: var(--hc-question-size, 15px);
    font-weight: var(--hc-question-weight, 600);
    color: var(--hc-question-color, #1C1917);
    margin: 0 0 0.5rem;
  }

  .help-center__answer {
    font-family: var(--font-primary-family), sans-serif;
    font-size: var(--hc-answer-size, 14px);
    line-height: 1.6;
    color: var(--hc-answer-color, #57534E);
    margin: 0;
  }

  /* Mobile Accordion */
  .help-center__accordion {
    background: var(--hc-mobile-faq-bg, #ffffff);
    border-radius: var(--hc-mobile-faq-radius, 8px);
    margin-bottom: 0.75rem;
    overflow: hidden;
    border: 1px solid #E5E5E5;
  }

  .help-center__accordion-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.25rem;
    cursor: pointer;
    list-style: none;
  }

  .help-center__accordion-header::-webkit-details-marker {
    display: none;
  }

  .help-center__accordion-title {
    font-family: var(--font-primary-family), sans-serif;
    font-size: var(--hc-question-size-mobile, 13px);
    font-weight: 500;
    letter-spacing: 0.03em;
    text-transform: uppercase;
    color: var(--hc-question-color, #1C1917);
  }

  .help-center__accordion-icon {
    position: relative;
    width: 16px;
    height: 16px;
    flex-shrink: 0;
  }

  .help-center__accordion-icon::before,
  .help-center__accordion-icon::after {
    content: '';
    position: absolute;
    background-color: var(--hc-mobile-icon-color, #D97706);
    transition: transform 0.2s ease;
  }

  .help-center__accordion-icon::before {
    width: 16px;
    height: 2px;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
  }

  .help-center__accordion-icon::after {
    width: 2px;
    height: 16px;
    left: 50%;
    top: 0;
    transform: translateX(-50%);
  }

  .help-center__accordion[open] .help-center__accordion-icon::after {
    transform: translateX(-50%) rotate(90deg);
  }

  .help-center__accordion-content {
    padding: 0 1.25rem 1rem;
  }

  .help-center__accordion-content p {
    font-family: var(--font-primary-family), sans-serif;
    font-size: var(--hc-answer-size-mobile, 13px);
    line-height: 1.6;
    color: var(--hc-answer-color, #57534E);
    margin: 0;
  }

  /* Mobile Styles */
  @media screen and (max-width: 768px) {
    .help-center__header {
      padding: 1.5rem 1rem;
    }

    .help-center__header-content {
      align-items: center;
      gap: 1rem;
    }

    .help-center__title {
      font-size: var(--hc-title-size-mobile, 28px);
      text-align: center;
    }

    .help-center__actions {
      width: 100%;
      justify-content: center;
    }

    .help-center__btn {
      flex: 1;
      max-width: 140px;
      text-align: center;
      padding: 0.625rem 1rem;
    }

    .help-center__category-title {
      font-size: var(--hc-category-title-size-mobile, 16px);
      padding: 1.25rem 1rem 0.75rem;
    }

    .help-center__faq--mobile {
      padding: 0 1rem 1rem;
    }

    .help-center__faq--desktop {
      display: none;
    }

    .help-center__faq--mobile {
      display: block;
    }
  }
{% endstylesheet %}

