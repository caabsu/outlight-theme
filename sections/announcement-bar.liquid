{% comment %}
  Announcement Bar - Dismissible banner with customizable text and styling
{% endcomment %}

<div
  class="announcement-bar full-width"
  id="announcement-bar-{{ section.id }}"
  style="
    --ab-bg: {{ section.settings.bg_color }};
    --ab-text-color: {{ section.settings.text_color }};
    --ab-link-color: {{ section.settings.link_color }};
    --ab-padding-top: {{ section.settings.padding_top }}px;
    --ab-padding-bottom: {{ section.settings.padding_bottom }}px;
    --ab-padding-top-mobile: {{ section.settings.padding_top_mobile }}px;
    --ab-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}px;
    --ab-text-size: {{ section.settings.text_size }}px;
    --ab-text-size-mobile: {{ section.settings.text_size_mobile }}px;
    --ab-text-weight: {{ section.settings.text_weight }};
    --ab-link-size: {{ section.settings.link_size }}px;
    --ab-link-size-mobile: {{ section.settings.link_size_mobile }}px;
    --ab-link-weight: {{ section.settings.link_weight }};
    --ab-close-color: {{ section.settings.close_color }};
  "
>
  <div class="announcement-bar__container">
    <div class="announcement-bar__content">
      {%- comment -%} Desktop content {%- endcomment -%}
      <div class="announcement-bar__desktop">
        <p class="announcement-bar__text">
          {{ section.settings.text }}
          {%- if section.settings.link_text != blank -%}
            <a href="{{ section.settings.link_url }}" class="announcement-bar__link">{{ section.settings.link_text }}</a>
          {%- endif -%}
        </p>
      </div>

      {%- comment -%} Mobile content {%- endcomment -%}
      <div class="announcement-bar__mobile">
        <p class="announcement-bar__text">{{ section.settings.text_mobile | default: section.settings.text }}</p>
        {%- if section.settings.link_text_mobile != blank or section.settings.link_text != blank -%}
          <a href="{{ section.settings.link_url }}" class="announcement-bar__link">
            {{ section.settings.link_text_mobile | default: section.settings.link_text }}
          </a>
        {%- endif -%}
      </div>
    </div>

    {%- if section.settings.show_close -%}
      <button class="announcement-bar__close" aria-label="Close announcement" data-announcement-close>
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M12 4L4 12M4 4L12 12"/>
        </svg>
      </button>
    {%- endif -%}
  </div>
</div>

{% stylesheet %}
  .announcement-bar {
    background: var(--ab-bg);
    padding: var(--ab-padding-top-mobile) 0 var(--ab-padding-bottom-mobile);
    width: 100%;
    position: relative;
    z-index: 102;
  }

  .announcement-bar.is-hidden {
    display: none;
  }

  .announcement-bar__container {
    width: 100%;
    max-width: none;
    margin: 0;
    padding: 0 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .announcement-bar__content {
    flex: 1;
    text-align: center;
  }

  .announcement-bar__desktop {
    display: none;
  }

  .announcement-bar__mobile {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
  }

  .announcement-bar__text {
    font-family: var(--font-body-family), sans-serif;
    font-size: var(--ab-text-size-mobile);
    font-weight: var(--ab-text-weight);
    color: var(--ab-text-color);
    margin: 0;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    line-height: 1.4;
  }

  .announcement-bar__link {
    font-family: var(--font-body-family), sans-serif;
    font-size: var(--ab-link-size-mobile);
    font-weight: var(--ab-link-weight);
    color: var(--ab-link-color);
    text-decoration: underline;
    text-underline-offset: 3px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: opacity 0.2s ease;
  }

  .announcement-bar__link:hover {
    opacity: 0.7;
  }

  .announcement-bar__close {
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    padding: 0.5rem;
    cursor: pointer;
    color: var(--ab-close-color);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.2s ease;
  }

  .announcement-bar__close:hover {
    opacity: 0.6;
  }

  /* Desktop styles */
  @media (min-width: 768px) {
    .announcement-bar {
      padding: var(--ab-padding-top) 0 var(--ab-padding-bottom);
    }

    .announcement-bar__container {
      padding: 0 3rem;
    }

    .announcement-bar__desktop {
      display: block;
    }

    .announcement-bar__mobile {
      display: none;
    }

    .announcement-bar__text {
      font-size: var(--ab-text-size);
      display: inline;
    }

    .announcement-bar__desktop .announcement-bar__link {
      font-size: var(--ab-link-size);
      margin-left: 0.5rem;
    }

    .announcement-bar__close {
      right: 2rem;
    }
  }
{% endstylesheet %}

{% javascript %}
  (function() {
    const bar = document.querySelector('.announcement-bar');
    const closeBtn = bar ? bar.querySelector('[data-announcement-close]') : null;
    const storageKey = 'announcement-bar-closed-' + bar?.id;

    function updateHeaderOffset() {
      if (bar && !bar.classList.contains('is-hidden')) {
        const barHeight = bar.offsetHeight;
        document.documentElement.style.setProperty('--announcement-bar-height', barHeight + 'px');
      } else {
        document.documentElement.style.setProperty('--announcement-bar-height', '0px');
      }
    }

    if (bar && sessionStorage.getItem(storageKey)) {
      bar.classList.add('is-hidden');
    }

    updateHeaderOffset();
    window.addEventListener('resize', updateHeaderOffset);

    if (closeBtn) {
      closeBtn.addEventListener('click', function() {
        bar.classList.add('is-hidden');
        sessionStorage.setItem(storageKey, 'true');
        updateHeaderOffset();
      });
    }
  })();
{% endjavascript %}

