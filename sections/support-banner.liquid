<div
  class="support-banner full-width"
  style="
    --section-bg: {{ section.settings.section_bg }};
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    --card-bg: {{ section.settings.card_bg }};
    --icon-bg: {{ section.settings.icon_bg }};
    --icon-color: {{ section.settings.icon_color }};
    --title-color: {{ section.settings.title_color }};
    --description-color: {{ section.settings.description_color }};
    --btn-primary-bg: {{ section.settings.btn_primary_bg }};
    --btn-primary-color: {{ section.settings.btn_primary_color }};
    --btn-secondary-bg: {{ section.settings.btn_secondary_bg }};
    --btn-secondary-color: {{ section.settings.btn_secondary_color }};
    --btn-secondary-border: {{ section.settings.btn_secondary_border }};
  "
>
  <div class="support-banner__container">
    <div class="support-banner__card">
      <div class="support-banner__icon">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="10"/>
          <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/>
          <line x1="12" y1="17" x2="12.01" y2="17"/>
        </svg>
      </div>

      <div class="support-banner__content">
        {%- if section.settings.title != blank -%}
          <h2 class="support-banner__title">{{ section.settings.title }}</h2>
        {%- endif -%}

        {%- if section.settings.description != blank -%}
          <p class="support-banner__description">{{ section.settings.description }}</p>
        {%- endif -%}
      </div>

      <div class="support-banner__buttons">
        {%- if section.settings.btn_primary_text != blank -%}
          <a href="{{ section.settings.btn_primary_url }}" class="support-banner__btn support-banner__btn--primary">
            {{ section.settings.btn_primary_text }}
          </a>
        {%- endif -%}

        {%- if section.settings.btn_secondary_text != blank -%}
          <a href="{{ section.settings.btn_secondary_url }}" class="support-banner__btn support-banner__btn--secondary">
            {{ section.settings.btn_secondary_text }}
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="5" y1="12" x2="19" y2="12"/>
              <polyline points="12 5 19 12 12 19"/>
            </svg>
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
  .support-banner {
    background: var(--section-bg);
    padding: var(--section-padding-top) 0 var(--section-padding-bottom);
  }

  .support-banner__container {
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 var(--page-margin);
  }

  .support-banner__card {
    background: var(--card-bg);
    padding: 24px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
  }

  .support-banner__icon {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: var(--icon-bg);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--icon-color);
    flex-shrink: 0;
  }

  .support-banner__icon svg {
    width: 22px;
    height: 22px;
  }

  .support-banner__content {
    text-align: center;
  }

  .support-banner__title {
    font-family: var(--font-body-family), sans-serif;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--title-color);
    margin: 0 0 4px;
  }

  .support-banner__description {
    font-family: var(--font-body-family), sans-serif;
    font-size: 14px;
    font-weight: 400;
    color: var(--description-color);
    margin: 0;
    line-height: 1.5;
  }

  .support-banner__buttons {
    display: flex;
    gap: 12px;
    width: 100%;
  }

  .support-banner__btn {
    flex: 1;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    padding: 12px 20px;
    font-family: var(--font-body-family), sans-serif;
    font-size: 13px;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .support-banner__btn--primary {
    background: var(--btn-primary-bg);
    color: var(--btn-primary-color);
  }

  .support-banner__btn--primary:hover {
    opacity: 0.9;
  }

  .support-banner__btn--secondary {
    background: var(--btn-secondary-bg);
    color: var(--btn-secondary-color);
    border: 1px solid var(--btn-secondary-border);
  }

  .support-banner__btn--secondary:hover {
    background: #f9f9f9;
  }

  .support-banner__btn--secondary svg {
    display: none;
  }

  @media (min-width: 768px) {
    .support-banner__card {
      flex-direction: row;
      align-items: center;
      padding: 28px 32px;
      gap: 24px;
    }

    .support-banner__icon {
      width: 56px;
      height: 56px;
    }

    .support-banner__icon svg {
      width: 26px;
      height: 26px;
    }

    .support-banner__content {
      flex: 1;
      text-align: left;
    }

    .support-banner__title {
      font-size: 13px;
      margin-bottom: 2px;
    }

    .support-banner__description {
      font-size: 15px;
    }

    .support-banner__buttons {
      width: auto;
      flex-shrink: 0;
    }

    .support-banner__btn {
      flex: none;
      padding: 12px 24px;
      font-size: 14px;
    }

    .support-banner__btn--secondary {
      background: transparent;
      border: 1px solid var(--btn-secondary-border);
    }

    .support-banner__btn--secondary svg {
      display: block;
      width: 14px;
      height: 14px;
    }
  }
{% endstylesheet %}

