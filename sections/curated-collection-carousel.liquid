{% comment %}
  Curated Collection Carousel
  Displays products from a collection that the current product belongs to.
  Merchant selects which collections to check - section finds the match.
{% endcomment %}

{%- liquid
  assign matched_collection = nil
  assign curated_collections = section.blocks | where: "type", "collection"

  for block in curated_collections
    assign check_collection = collections[block.settings.collection]
    if check_collection != blank
      for col_product in check_collection.products
        if col_product.id == product.id
          assign matched_collection = check_collection
          break
        endif
      endfor
    endif
    if matched_collection != blank
      break
    endif
  endfor
-%}

{%- if matched_collection != blank -%}
{%- assign product_count = 0 -%}
{%- assign fetch_limit = section.settings.products_limit | plus: 1 -%}
{%- for col_product in matched_collection.products limit: fetch_limit -%}
  {%- unless col_product.id == product.id -%}
    {%- if product_count < section.settings.products_limit -%}
      {%- assign product_count = product_count | plus: 1 -%}
    {%- endif -%}
  {%- endunless -%}
{%- endfor -%}

<div
  class="curated-carousel full-width"
  data-product-count="{{ product_count }}"
  style="
    --cc-bg: {{ section.settings.section_bg }};
    --cc-padding-top: {{ section.settings.padding_top }}px;
    --cc-padding-bottom: {{ section.settings.padding_bottom }}px;
    --cc-padding-top-mobile: {{ section.settings.padding_top_mobile }}px;
    --cc-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}px;
    --cc-title-color: {{ section.settings.title_color }};
    --cc-title-size: {{ section.settings.title_size }}px;
    --cc-title-size-mobile: {{ section.settings.title_size_mobile }}px;
    --cc-title-weight: {{ section.settings.title_weight }};
    --cc-name-color: {{ section.settings.product_name_color }};
    --cc-name-size: {{ section.settings.product_name_size }}px;
    --cc-name-size-mobile: {{ section.settings.product_name_size_mobile }}px;
    --cc-name-weight: {{ section.settings.product_name_weight }};
    --cc-price-color: {{ section.settings.price_color }};
    --cc-price-size: {{ section.settings.price_size }}px;
    --cc-price-size-mobile: {{ section.settings.price_size_mobile }}px;
    --cc-price-weight: {{ section.settings.price_weight }};
    --cc-text-bg: {{ section.settings.text_overlay_bg }};
    --cc-products-mobile: {{ section.settings.products_per_row_mobile }};
    --cc-gap-mobile: {{ section.settings.grid_gap_mobile }}px;
    --cc-gap-desktop: {{ section.settings.grid_gap }}px;
    --cc-card-width: {{ section.settings.card_width }}px;
    --cc-nav-color: {{ section.settings.nav_color }};
    --cc-nav-bg: {{ section.settings.nav_bg }};
    --cc-btn-color: {{ section.settings.view_all_color }};
    --cc-btn-size: {{ section.settings.view_all_size }}px;
    --cc-btn-weight: {{ section.settings.view_all_weight }};
  "
>
  <div class="curated-carousel__container">
    {%- capture section_title -%}
      {%- if section.settings.title_prefix != blank -%}
        {{ section.settings.title_prefix }} {{ matched_collection.title }}
      {%- else -%}
        {{ matched_collection.title }}
      {%- endif -%}
    {%- endcapture -%}

    <h2 class="curated-carousel__title">{{ section_title }}</h2>

    <div class="curated-carousel__wrapper">
      <button class="curated-carousel__nav curated-carousel__nav--prev" data-carousel-prev aria-label="Previous">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M15 18L9 12L15 6"/>
        </svg>
      </button>

      <div class="curated-carousel__track" data-carousel-track>
        {%- assign product_count = 0 -%}
        {%- for col_product in matched_collection.products limit: fetch_limit -%}
          {%- unless col_product.id == product.id -%}
            {%- if product_count < section.settings.products_limit -%}
              {%- assign product_count = product_count | plus: 1 -%}
              <a href="{{ col_product.url }}" class="curated-carousel__card">
                <div class="curated-carousel__image">
                  {%- if col_product.featured_image != blank -%}
                    {{ col_product.featured_image | image_url: width: 800 | image_tag: loading: 'lazy' }}
                  {%- else -%}
                    {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  {%- endif -%}
                  <div class="curated-carousel__overlay">
                    <span class="curated-carousel__name">{{ col_product.title }}</span>
                    <span class="curated-carousel__price">{{ col_product.price | money }}</span>
                  </div>
                </div>
              </a>
            {%- endif -%}
          {%- endunless -%}
        {%- endfor -%}
      </div>

      <button class="curated-carousel__nav curated-carousel__nav--next" data-carousel-next aria-label="Next">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M9 18L15 12L9 6"/>
        </svg>
      </button>
    </div>

    {%- if section.settings.show_view_all -%}
      <div class="curated-carousel__footer">
        <a href="{{ matched_collection.url }}" class="curated-carousel__view-all">
          {{ section.settings.view_all_text }}
        </a>
      </div>
    {%- endif -%}
  </div>
</div>
{%- endif -%}

{% stylesheet %}
  .curated-carousel {
    background: var(--cc-bg);
    padding: var(--cc-padding-top-mobile) 0 var(--cc-padding-bottom-mobile);
  }

  .curated-carousel__container {
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 var(--page-margin);
  }

  .curated-carousel__title {
    font-family: var(--font-heading-family), serif;
    font-size: var(--cc-title-size-mobile);
    font-weight: var(--cc-title-weight);
    color: var(--cc-title-color);
    margin: 0 0 1.5rem;
    text-align: center;
  }

  .curated-carousel__wrapper {
    position: relative;
  }

  /* Hide nav arrows on mobile */
  .curated-carousel__nav {
    display: none;
  }

  /* Mobile: Grid layout */
  .curated-carousel__track {
    display: grid;
    grid-template-columns: repeat(var(--cc-products-mobile), 1fr);
    gap: var(--cc-gap-mobile);
  }

  .curated-carousel__card {
    text-decoration: none;
    display: block;
    overflow: hidden;
  }

  .curated-carousel__image {
    position: relative;
    aspect-ratio: 1 / 1;
    overflow: hidden;
    background: #f5f5f5;
  }

  .curated-carousel__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .curated-carousel__card:hover .curated-carousel__image img {
    transform: scale(1.05);
  }

  .curated-carousel__overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem;
    background: var(--cc-text-bg);
    gap: 0.5rem;
  }

  .curated-carousel__name {
    font-family: var(--font-body-family), sans-serif;
    font-size: var(--cc-name-size-mobile);
    font-weight: var(--cc-name-weight);
    color: var(--cc-name-color);
    line-height: 1.3;
    flex: 1;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .curated-carousel__price {
    font-family: var(--font-body-family), sans-serif;
    font-size: var(--cc-price-size-mobile);
    font-weight: var(--cc-price-weight);
    color: var(--cc-price-color);
    white-space: nowrap;
    flex-shrink: 0;
  }

  .curated-carousel__footer {
    text-align: center;
    margin-top: 1.5rem;
  }

  .curated-carousel__view-all {
    display: inline-block;
    font-family: var(--font-body-family), sans-serif;
    font-size: var(--cc-btn-size);
    font-weight: var(--cc-btn-weight);
    color: var(--cc-btn-color);
    text-decoration: underline;
    text-underline-offset: 3px;
    transition: opacity 0.2s ease;
  }

  .curated-carousel__view-all:hover {
    opacity: 0.7;
  }

  /* Desktop styles - horizontal carousel */
  @media (min-width: 768px) {
    .curated-carousel {
      padding: var(--cc-padding-top) 0 var(--cc-padding-bottom);
    }

    .curated-carousel__title {
      font-size: var(--cc-title-size);
      margin-bottom: 2rem;
    }

    .curated-carousel__wrapper {
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    /* Show nav arrows on desktop */
    .curated-carousel__nav {
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
      width: 40px;
      height: 40px;
      background: var(--cc-nav-bg);
      color: var(--cc-nav-color);
      border: 1px solid var(--cc-nav-color);
      border-radius: 0;
      cursor: pointer;
      transition: opacity 0.2s ease, background 0.2s ease;
    }

    .curated-carousel__nav:hover {
      background: var(--cc-nav-color);
      color: var(--cc-nav-bg);
    }

    .curated-carousel__nav:disabled {
      opacity: 0.3;
      cursor: not-allowed;
    }

    .curated-carousel__nav:disabled:hover {
      background: var(--cc-nav-bg);
      color: var(--cc-nav-color);
    }

    /* Desktop: Horizontal scroll */
    .curated-carousel__track {
      display: flex;
      gap: var(--cc-gap-desktop);
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      scrollbar-width: none;
      -webkit-overflow-scrolling: touch;
      flex: 1;
      justify-content: center;
    }

    .curated-carousel__track::-webkit-scrollbar {
      display: none;
    }

    .curated-carousel__card {
      flex: 0 0 var(--cc-card-width);
      scroll-snap-align: start;
    }

    .curated-carousel__overlay {
      padding: 1rem 1.25rem;
    }

    .curated-carousel__name {
      font-size: var(--cc-name-size);
    }

    .curated-carousel__price {
      font-size: var(--cc-price-size);
    }

    .curated-carousel__footer {
      margin-top: 2rem;
    }
  }
{% endstylesheet %}

{% javascript %}
  (function() {
    const section = document.querySelector('.curated-carousel');
    if (!section) return;

    const track = section.querySelector('[data-carousel-track]');
    const prevBtn = section.querySelector('[data-carousel-prev]');
    const nextBtn = section.querySelector('[data-carousel-next]');

    if (!track || !prevBtn || !nextBtn) return;

    const getScrollAmount = () => {
      const card = track.querySelector('.curated-carousel__card');
      if (card) {
        const style = window.getComputedStyle(track);
        const gap = parseInt(style.gap) || 20;
        return card.offsetWidth + gap;
      }
      return 260;
    };

    const updateNavState = () => {
      const isAtStart = track.scrollLeft <= 1;
      const isAtEnd = track.scrollLeft >= track.scrollWidth - track.clientWidth - 1;

      prevBtn.disabled = isAtStart;
      nextBtn.disabled = isAtEnd;
    };

    prevBtn.addEventListener('click', () => {
      track.scrollBy({ left: -getScrollAmount(), behavior: 'smooth' });
    });

    nextBtn.addEventListener('click', () => {
      track.scrollBy({ left: getScrollAmount(), behavior: 'smooth' });
    });

    track.addEventListener('scroll', updateNavState, { passive: true });
    updateNavState();
  })();
{% endjavascript %}

