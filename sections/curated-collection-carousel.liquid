{% comment %}
  Curated Collection Grid
  Displays products from a collection that the current product belongs to.
  Merchant selects which collections to check - section finds the match.
{% endcomment %}

{%- liquid
  assign matched_collection = nil
  assign curated_collections = section.blocks | where: "type", "collection"

  for block in curated_collections
    assign check_collection = collections[block.settings.collection]
    if check_collection != blank
      for col_product in check_collection.products
        if col_product.id == product.id
          assign matched_collection = check_collection
          break
        endif
      endfor
    endif
    if matched_collection != blank
      break
    endif
  endfor
-%}

{%- if matched_collection != blank -%}
<div
  class="curated-grid full-width"
  style="
    --cg-bg: {{ section.settings.section_bg }};
    --cg-padding-top: {{ section.settings.padding_top }}px;
    --cg-padding-bottom: {{ section.settings.padding_bottom }}px;
    --cg-padding-top-mobile: {{ section.settings.padding_top_mobile }}px;
    --cg-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}px;
    --cg-title-color: {{ section.settings.title_color }};
    --cg-title-size: {{ section.settings.title_size }}px;
    --cg-title-size-mobile: {{ section.settings.title_size_mobile }}px;
    --cg-title-weight: {{ section.settings.title_weight }};
    --cg-name-color: {{ section.settings.product_name_color }};
    --cg-name-size: {{ section.settings.product_name_size }}px;
    --cg-name-size-mobile: {{ section.settings.product_name_size_mobile }}px;
    --cg-name-weight: {{ section.settings.product_name_weight }};
    --cg-price-color: {{ section.settings.price_color }};
    --cg-price-size: {{ section.settings.price_size }}px;
    --cg-price-size-mobile: {{ section.settings.price_size_mobile }}px;
    --cg-price-weight: {{ section.settings.price_weight }};
    --cg-text-bg: {{ section.settings.text_overlay_bg }};
    --cg-products-mobile: {{ section.settings.products_per_row_mobile }};
    --cg-products-desktop: {{ section.settings.products_per_row_desktop }};
    --cg-gap: {{ section.settings.grid_gap }}px;
    --cg-gap-mobile: {{ section.settings.grid_gap_mobile }}px;
    --cg-btn-color: {{ section.settings.view_all_color }};
    --cg-btn-size: {{ section.settings.view_all_size }}px;
    --cg-btn-weight: {{ section.settings.view_all_weight }};
  "
>
  <div class="curated-grid__container">
    {%- capture section_title -%}
      {%- if section.settings.title_prefix != blank -%}
        {{ section.settings.title_prefix }} {{ matched_collection.title }}
      {%- else -%}
        {{ matched_collection.title }}
      {%- endif -%}
    {%- endcapture -%}

    <h2 class="curated-grid__title">{{ section_title }}</h2>

    <div class="curated-grid__products">
      {%- assign product_count = 0 -%}
      {%- assign fetch_limit = section.settings.products_limit | plus: 1 -%}
      {%- for col_product in matched_collection.products limit: fetch_limit -%}
        {%- unless col_product.id == product.id -%}
          {%- if product_count < section.settings.products_limit -%}
            {%- assign product_count = product_count | plus: 1 -%}
            <a href="{{ col_product.url }}" class="curated-grid__card">
            <div class="curated-grid__image">
              {%- if col_product.featured_image != blank -%}
                {{ col_product.featured_image | image_url: width: 800 | image_tag: loading: 'lazy' }}
              {%- else -%}
                {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
              {%- endif -%}
              <div class="curated-grid__overlay">
                <span class="curated-grid__name">{{ col_product.title }}</span>
                <span class="curated-grid__price">{{ col_product.price | money }}</span>
              </div>
            </div>
          </a>
          {%- endif -%}
        {%- endunless -%}
      {%- endfor -%}
    </div>

    {%- if section.settings.show_view_all -%}
      <div class="curated-grid__footer">
        <a href="{{ matched_collection.url }}" class="curated-grid__view-all">
          {{ section.settings.view_all_text }}
        </a>
      </div>
    {%- endif -%}
  </div>
</div>
{%- endif -%}

{% stylesheet %}
  .curated-grid {
    background: var(--cg-bg);
    padding: var(--cg-padding-top-mobile) 0 var(--cg-padding-bottom-mobile);
  }

  .curated-grid__container {
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 var(--page-margin);
  }

  .curated-grid__title {
    font-family: var(--font-heading-family), serif;
    font-size: var(--cg-title-size-mobile);
    font-weight: var(--cg-title-weight);
    color: var(--cg-title-color);
    margin: 0 0 1.5rem;
    text-align: center;
  }

  .curated-grid__products {
    display: grid;
    grid-template-columns: repeat(var(--cg-products-mobile), 1fr);
    gap: var(--cg-gap-mobile);
  }

  .curated-grid__card {
    text-decoration: none;
    display: block;
    overflow: hidden;
  }

  .curated-grid__image {
    position: relative;
    aspect-ratio: 1 / 1;
    overflow: hidden;
    background: #f5f5f5;
  }

  .curated-grid__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .curated-grid__card:hover .curated-grid__image img {
    transform: scale(1.05);
  }

  .curated-grid__overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem;
    background: var(--cg-text-bg);
    gap: 0.5rem;
  }

  .curated-grid__name {
    font-family: var(--font-body-family), sans-serif;
    font-size: var(--cg-name-size-mobile);
    font-weight: var(--cg-name-weight);
    color: var(--cg-name-color);
    line-height: 1.3;
    flex: 1;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .curated-grid__price {
    font-family: var(--font-body-family), sans-serif;
    font-size: var(--cg-price-size-mobile);
    font-weight: var(--cg-price-weight);
    color: var(--cg-price-color);
    white-space: nowrap;
    flex-shrink: 0;
  }

  .curated-grid__footer {
    text-align: center;
    margin-top: 1.5rem;
  }

  .curated-grid__view-all {
    display: inline-block;
    font-family: var(--font-body-family), sans-serif;
    font-size: var(--cg-btn-size);
    font-weight: var(--cg-btn-weight);
    color: var(--cg-btn-color);
    text-decoration: underline;
    text-underline-offset: 3px;
    transition: opacity 0.2s ease;
  }

  .curated-grid__view-all:hover {
    opacity: 0.7;
  }

  /* Desktop styles */
  @media (min-width: 768px) {
    .curated-grid {
      padding: var(--cg-padding-top) 0 var(--cg-padding-bottom);
    }

    .curated-grid__title {
      font-size: var(--cg-title-size);
      margin-bottom: 2rem;
    }

    .curated-grid__products {
      grid-template-columns: repeat(var(--cg-products-desktop), 1fr);
      gap: var(--cg-gap);
    }

    .curated-grid__overlay {
      padding: 1rem 1.25rem;
    }

    .curated-grid__name {
      font-size: var(--cg-name-size);
    }

    .curated-grid__price {
      font-size: var(--cg-price-size);
    }

    .curated-grid__footer {
      margin-top: 2rem;
    }
  }
{% endstylesheet %}

