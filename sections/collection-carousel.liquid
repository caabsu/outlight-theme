{%- assign products_mobile = section.settings.products_limit_mobile -%}
{%- assign products_desktop = section.settings.products_limit_desktop -%}
{%- assign max_products = products_mobile | at_least: products_desktop -%}
{%- assign fetch_limit = max_products | plus: 1 -%}
{%- assign collection = collections[section.settings.collection] -%}
{%- assign current_product_id = product.id -%}

{%- comment -%} Count products excluding current product if on PDP {%- endcomment -%}
{%- assign visible_count = 0 -%}
{%- if collection != blank -%}
  {%- for col_product in collection.products limit: fetch_limit -%}
    {%- unless col_product.id == current_product_id -%}
      {%- if visible_count < max_products -%}
        {%- assign visible_count = visible_count | plus: 1 -%}
      {%- endif -%}
    {%- endunless -%}
  {%- endfor -%}
{%- endif -%}

<div
  class="collection-carousel full-width"
  data-product-count="{{ visible_count }}"
  style="
    --cc-bg: {{ section.settings.section_bg }};
    --cc-padding-top: {{ section.settings.padding_top }}px;
    --cc-padding-bottom: {{ section.settings.padding_bottom }}px;
    --cc-padding-top-mobile: {{ section.settings.padding_top_mobile }}px;
    --cc-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}px;
    --cc-title-color: {{ section.settings.title_color }};
    --cc-title-size: {{ section.settings.title_size }}px;
    --cc-title-size-mobile: {{ section.settings.title_size_mobile }}px;
    --cc-title-weight: {{ section.settings.title_weight }};
    --cc-name-color: {{ section.settings.product_name_color }};
    --cc-name-size: {{ section.settings.product_name_size }}px;
    --cc-name-size-mobile: {{ section.settings.product_name_size_mobile }}px;
    --cc-name-weight: {{ section.settings.product_name_weight }};
    --cc-price-color: {{ section.settings.price_color }};
    --cc-price-size: {{ section.settings.price_size }}px;
    --cc-price-size-mobile: {{ section.settings.price_size_mobile }}px;
    --cc-price-weight: {{ section.settings.price_weight }};
    --cc-text-bg: {{ section.settings.text_overlay_bg }};
    --cc-products-mobile: {{ section.settings.products_per_row_mobile }};
    --cc-limit-mobile: {{ section.settings.products_limit_mobile }};
    --cc-limit-desktop: {{ section.settings.products_limit_desktop }};
    --cc-gap-mobile: {{ section.settings.grid_gap_mobile }}px;
    --cc-gap-desktop: {{ section.settings.grid_gap_desktop }}px;
    --cc-card-width: {{ section.settings.card_width }}px;
    --cc-nav-color: {{ section.settings.nav_color }};
    --cc-nav-bg: {{ section.settings.nav_bg }};
    --cc-btn-color: {{ section.settings.view_all_color }};
    --cc-btn-size: {{ section.settings.view_all_size }}px;
    --cc-btn-weight: {{ section.settings.view_all_weight }};
    --cc-subtitle-color: {{ section.settings.subtitle_color }};
    --cc-subtitle-size: {{ section.settings.subtitle_size }}px;
    --cc-subtitle-size-mobile: {{ section.settings.subtitle_size_mobile }}px;
    --cc-subtitle-weight: {{ section.settings.subtitle_weight }};
    --cc-subtitle-spacing: {{ section.settings.subtitle_letter_spacing }}em;
    --cc-subtitle-spacing-mobile: {{ section.settings.subtitle_letter_spacing_mobile }}em;
    --cc-divider-color: {{ section.settings.divider_color }};
    --cc-divider-width: {{ section.settings.divider_width }}px;
    --cc-divider-opacity: {{ section.settings.divider_opacity | divided_by: 100.0 }};
  "
>
  {% render 'scroll-animation' %}
  <div class="collection-carousel__container">
    <div class="collection-carousel__header scroll-animate">
      {%- if section.settings.title != blank -%}
        <h2 class="collection-carousel__title">{{ section.settings.title }}</h2>
      {%- endif -%}

      {%- if section.settings.subtitle != blank -%}
        <div class="collection-carousel__subtitle-wrapper">
          <span class="collection-carousel__divider"></span>
          <p class="collection-carousel__subtitle">{{ section.settings.subtitle }}</p>
        </div>
      {%- endif -%}
    </div>

    <div class="collection-carousel__wrapper scroll-animate">
      <button class="collection-carousel__nav collection-carousel__nav--prev" data-carousel-prev aria-label="Previous">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M15 18L9 12L15 6"/>
        </svg>
      </button>

      <div class="collection-carousel__track" data-carousel-track>
        {%- if collection != blank and collection.products.size > 0 -%}
          {%- assign product_index = 0 -%}
          {%- for col_product in collection.products limit: fetch_limit -%}
            {%- unless col_product.id == current_product_id -%}
              {%- if product_index < max_products -%}
                {%- assign product_index = product_index | plus: 1 -%}
                <a href="{{ col_product.url }}" class="collection-carousel__card" data-index="{{ product_index }}">
                  <div class="collection-carousel__image">
                    {%- if col_product.featured_image != blank -%}
                      {{ col_product.featured_image | image_url: width: 800 | image_tag: loading: 'lazy' }}
                    {%- else -%}
                      {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                    {%- endif -%}
                    <div class="collection-carousel__overlay">
                      <span class="collection-carousel__name">{{ col_product.title }}</span>
                      <span class="collection-carousel__price">{{ col_product.price | money }}</span>
                    </div>
                  </div>
                </a>
              {%- endif -%}
            {%- endunless -%}
          {%- endfor -%}
        {%- else -%}
          {%- for i in (1..4) -%}
            <div class="collection-carousel__card" data-index="{{ i }}">
              <div class="collection-carousel__image">
                {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                <div class="collection-carousel__overlay">
                  <span class="collection-carousel__name">Product Title</span>
                  <span class="collection-carousel__price">$0.00</span>
                </div>
              </div>
            </div>
          {%- endfor -%}
        {%- endif -%}
      </div>

      <button class="collection-carousel__nav collection-carousel__nav--next" data-carousel-next aria-label="Next">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M9 18L15 12L9 6"/>
        </svg>
      </button>
    </div>

    {%- if section.settings.show_view_all and collection != blank -%}
      <div class="collection-carousel__footer scroll-animate">
        <a href="{{ collection.url }}" class="collection-carousel__view-all">
          {{ section.settings.view_all_text }}
        </a>
      </div>
    {%- endif -%}
  </div>
</div>

<style>
  /* Hide products beyond mobile limit on mobile */
  @media (max-width: 767px) {
    {%- for i in (1..12) -%}
      {%- if i > products_mobile -%}
    .collection-carousel__card[data-index="{{ i }}"] { display: none; }
      {%- endif -%}
    {%- endfor -%}
  }
  /* Hide products beyond desktop limit on desktop */
  @media (min-width: 768px) {
    {%- for i in (1..12) -%}
      {%- if i > products_desktop -%}
    .collection-carousel__card[data-index="{{ i }}"] { display: none; }
      {%- endif -%}
    {%- endfor -%}
  }
</style>

{% stylesheet %}
  .collection-carousel {
    background: var(--cc-bg);
    padding: var(--cc-padding-top-mobile) 0 var(--cc-padding-bottom-mobile);
  }

  .collection-carousel__container {
    width: 100%;
    padding: 0 var(--page-margin);
  }

  .collection-carousel__header {
    text-align: center;
    margin-bottom: 1.5rem;
  }

  .collection-carousel__title {
    font-family: var(--font-heading-family), serif;
    font-size: var(--cc-title-size-mobile);
    font-weight: var(--cc-title-weight);
    color: var(--cc-title-color);
    margin: 0;
  }

  .collection-carousel__subtitle-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 0.75rem;
  }

  .collection-carousel__divider {
    display: block;
    width: var(--cc-divider-width);
    height: 1px;
    background-color: var(--cc-divider-color);
    opacity: var(--cc-divider-opacity);
    margin-bottom: 0.75rem;
  }

  .collection-carousel__subtitle {
    font-family: var(--font-body-family), sans-serif;
    font-size: var(--cc-subtitle-size-mobile);
    font-weight: var(--cc-subtitle-weight);
    color: var(--cc-subtitle-color);
    letter-spacing: var(--cc-subtitle-spacing-mobile);
    text-transform: uppercase;
    margin: 0;
    line-height: 1.4;
  }

  .collection-carousel__wrapper {
    position: relative;
  }

  /* Hide nav arrows on mobile */
  .collection-carousel__nav {
    display: none;
  }

  /* Mobile: Grid layout */
  .collection-carousel__track {
    display: grid;
    grid-template-columns: repeat(var(--cc-products-mobile), 1fr);
    gap: var(--cc-gap-mobile);
  }

  .collection-carousel__card {
    text-decoration: none;
    display: block;
    overflow: hidden;
  }

  .collection-carousel__image {
    position: relative;
    aspect-ratio: 1 / 1;
    overflow: hidden;
    background: #f5f5f5;
  }

  .collection-carousel__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .collection-carousel__card:hover .collection-carousel__image img {
    transform: scale(1.05);
  }

  .collection-carousel__overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem;
    background: var(--cc-text-bg);
    gap: 0.5rem;
  }

  .collection-carousel__name {
    font-family: var(--font-body-family), sans-serif;
    font-size: var(--cc-name-size-mobile);
    font-weight: var(--cc-name-weight);
    color: var(--cc-name-color);
    line-height: 1.3;
    flex: 1;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .collection-carousel__price {
    font-family: var(--font-body-family), sans-serif;
    font-size: var(--cc-price-size-mobile);
    font-weight: var(--cc-price-weight);
    color: var(--cc-price-color);
    white-space: nowrap;
    flex-shrink: 0;
  }

  .collection-carousel__footer {
    text-align: center;
    margin-top: 1.5rem;
  }

  .collection-carousel__view-all {
    display: inline-block;
    font-family: var(--font-body-family), sans-serif;
    font-size: var(--cc-btn-size);
    font-weight: var(--cc-btn-weight);
    color: var(--cc-btn-color);
    text-decoration: underline;
    text-underline-offset: 3px;
    transition: opacity 0.2s ease;
  }

  .collection-carousel__view-all:hover {
    opacity: 0.7;
  }

  /* Desktop styles - horizontal carousel */
  @media (min-width: 768px) {
    .collection-carousel {
      padding: var(--cc-padding-top) 0 var(--cc-padding-bottom);
    }

    .collection-carousel__container {
      padding: 0 40px;
    }

    .collection-carousel__header {
      margin-bottom: 2rem;
    }

    .collection-carousel__title {
      font-size: var(--cc-title-size);
    }

    .collection-carousel__subtitle-wrapper {
      margin-top: 1rem;
    }

    .collection-carousel__divider {
      margin-bottom: 1rem;
    }

    .collection-carousel__subtitle {
      font-size: var(--cc-subtitle-size);
      letter-spacing: var(--cc-subtitle-spacing);
    }

    .collection-carousel__wrapper {
      position: relative;
    }

    /* Show nav arrows on desktop - minimal overlay style */
    .collection-carousel__nav {
      display: flex;
      align-items: center;
      justify-content: center;
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      z-index: 2;
      width: 36px;
      height: 36px;
      background: transparent;
      color: var(--cc-nav-color);
      border: none;
      border-radius: 0;
      cursor: pointer;
      transition: opacity 0.2s ease;
    }

    .collection-carousel__nav svg {
      filter: drop-shadow(0 1px 2px rgba(0,0,0,0.3));
    }

    .collection-carousel__nav--prev {
      left: 8px;
    }

    .collection-carousel__nav--next {
      right: 8px;
    }

    .collection-carousel__nav:hover {
      opacity: 0.7;
    }

    .collection-carousel__nav:disabled {
      opacity: 0;
      pointer-events: none;
    }

    /* Desktop: Horizontal scroll - full width */
    .collection-carousel__track {
      display: flex;
      gap: var(--cc-gap-desktop);
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      scrollbar-width: none;
      -webkit-overflow-scrolling: touch;
      width: 100%;
      justify-content: flex-start;
    }

    .collection-carousel__track::-webkit-scrollbar {
      display: none;
    }

    .collection-carousel__card {
      flex: 0 0 var(--cc-card-width);
      scroll-snap-align: start;
    }

    .collection-carousel__overlay {
      padding: 1rem 1.25rem;
    }

    .collection-carousel__name {
      font-size: var(--cc-name-size);
    }

    .collection-carousel__price {
      font-size: var(--cc-price-size);
    }

    .collection-carousel__footer {
      margin-top: 2rem;
    }
  }

  @media (min-width: 1200px) {
    .collection-carousel__container {
      padding: 0 60px;
    }
  }
{% endstylesheet %}

{% javascript %}
  (function() {
    const section = document.querySelector('.collection-carousel');
    if (!section) return;

    const track = section.querySelector('[data-carousel-track]');
    const prevBtn = section.querySelector('[data-carousel-prev]');
    const nextBtn = section.querySelector('[data-carousel-next]');

    if (!track || !prevBtn || !nextBtn) return;

    const getScrollAmount = () => {
      const card = track.querySelector('.collection-carousel__card');
      if (card) {
        const style = window.getComputedStyle(track);
        const gap = parseInt(style.gap) || 20;
        return card.offsetWidth + gap;
      }
      return 260;
    };

    const updateNavState = () => {
      const isAtStart = track.scrollLeft <= 1;
      const isAtEnd = track.scrollLeft >= track.scrollWidth - track.clientWidth - 1;

      prevBtn.disabled = isAtStart;
      nextBtn.disabled = isAtEnd;
    };

    prevBtn.addEventListener('click', () => {
      track.scrollBy({ left: -getScrollAmount(), behavior: 'smooth' });
    });

    nextBtn.addEventListener('click', () => {
      track.scrollBy({ left: getScrollAmount(), behavior: 'smooth' });
    });

    track.addEventListener('scroll', updateNavState, { passive: true });
    updateNavState();
  })();
{% endjavascript %}

