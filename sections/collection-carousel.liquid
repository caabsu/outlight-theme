<div
  class="collection-carousel full-width"
  style="
    --section-bg: {{ section.settings.section_bg }};
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    --title-color: {{ section.settings.title_color }};
    --title-size-desktop: {{ section.settings.title_size_desktop }}px;
    --title-size-mobile: {{ section.settings.title_size_mobile }}px;
    --card-radius: {{ section.settings.card_radius }}px;
    --card-info-bg: {{ section.settings.card_info_bg }};
    --product-name-color: {{ section.settings.product_name_color }};
    --product-subtitle-color: {{ section.settings.product_subtitle_color }};
    --price-color: {{ section.settings.price_color }};
  "
>
  <div class="collection-carousel__container">
    {%- if section.settings.title != blank -%}
      <h2 class="collection-carousel__title">{{ section.settings.title }}</h2>
    {%- endif -%}

    <div class="collection-carousel__track" data-carousel-track>
      {%- assign collection = collections[section.settings.collection] -%}
      {%- if collection != blank and collection.products.size > 0 -%}
        {%- for product in collection.products limit: section.settings.products_limit -%}
          <a href="{{ product.url }}" class="collection-carousel__card">
            <div class="collection-carousel__image">
              {%- if product.featured_image != blank -%}
                {{ product.featured_image | image_url: width: 800 | image_tag: loading: 'lazy' }}
              {%- else -%}
                {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
              {%- endif -%}
            </div>
            <div class="collection-carousel__info">
              <div class="collection-carousel__details">
                <h3 class="collection-carousel__name">{{ product.title }}</h3>
                {%- if product.metafields.custom.subtitle != blank -%}
                  <p class="collection-carousel__subtitle">{{ product.metafields.custom.subtitle }}</p>
                {%- elsif product.type != blank -%}
                  <p class="collection-carousel__subtitle">{{ product.type }}</p>
                {%- endif -%}
              </div>
              <div class="collection-carousel__price">
                {{ product.price | money }}
              </div>
            </div>
            <!-- Mobile overlay info -->
            <div class="collection-carousel__info-mobile">
              <h3 class="collection-carousel__name-mobile">{{ product.title }}</h3>
              <p class="collection-carousel__price-mobile">{{ product.price | money }}</p>
            </div>
          </a>
        {%- endfor -%}
      {%- else -%}
        {%- for i in (1..4) -%}
          <div class="collection-carousel__card">
            <div class="collection-carousel__image">
              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
            <div class="collection-carousel__info">
              <div class="collection-carousel__details">
                <h3 class="collection-carousel__name">Product Title</h3>
                <p class="collection-carousel__subtitle">Subtitle</p>
              </div>
              <div class="collection-carousel__price">$0.00</div>
            </div>
            <div class="collection-carousel__info-mobile">
              <h3 class="collection-carousel__name-mobile">Product Title</h3>
              <p class="collection-carousel__price-mobile">$0.00</p>
            </div>
          </div>
        {%- endfor -%}
      {%- endif -%}
    </div>
  </div>
</div>

{% stylesheet %}
  .collection-carousel {
    background: var(--section-bg);
    padding: var(--section-padding-top) 0 var(--section-padding-bottom);
  }

  .collection-carousel__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .collection-carousel__title {
    font-family: var(--font-heading-family, Georgia, serif);
    font-size: var(--title-size-mobile);
    font-weight: 400;
    font-style: normal;
    color: var(--title-color);
    margin: 0 0 24px;
  }

  .collection-carousel__track {
    display: flex;
    gap: 16px;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scrollbar-width: none;
    -webkit-overflow-scrolling: touch;
    margin: 0 -24px;
    padding: 0 24px;
  }

  .collection-carousel__track::-webkit-scrollbar {
    display: none;
  }

  .collection-carousel__card {
    flex: 0 0 75%;
    max-width: 320px;
    scroll-snap-align: start;
    border-radius: var(--card-radius);
    overflow: hidden;
    text-decoration: none;
    position: relative;
    display: block;
  }

  .collection-carousel__image {
    aspect-ratio: 3 / 4;
    overflow: hidden;
    background: #f5f5f5;
  }

  .collection-carousel__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Desktop info - hidden on mobile */
  .collection-carousel__info {
    display: none;
  }

  /* Mobile overlay info */
  .collection-carousel__info-mobile {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 60px 16px 16px;
    background: linear-gradient(to top, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0) 100%);
  }

  .collection-carousel__name-mobile {
    font-size: 18px;
    font-weight: 600;
    color: #ffffff;
    margin: 0 0 4px;
  }

  .collection-carousel__price-mobile {
    font-size: 15px;
    color: #ffffff;
    margin: 0;
    opacity: 0.9;
  }

  /* Desktop styles */
  @media (min-width: 768px) {
    .collection-carousel__container {
      padding: 0 48px;
    }

    .collection-carousel__title {
      font-size: var(--title-size-desktop);
      font-style: italic;
      margin: 0 0 32px;
    }

    .collection-carousel__track {
      overflow-x: visible;
      scroll-snap-type: none;
      margin: 0;
      padding: 0;
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 24px;
    }

    .collection-carousel__card {
      flex: none;
      max-width: none;
    }

    /* Hide mobile overlay, show desktop info */
    .collection-carousel__info-mobile {
      display: none;
    }

    .collection-carousel__info {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      padding: 16px 20px;
      background: var(--card-info-bg);
      position: absolute;
      bottom: 16px;
      left: 16px;
      right: 16px;
      border-radius: 8px;
    }

    .collection-carousel__details {
      flex: 1;
      min-width: 0;
    }

    .collection-carousel__name {
      font-size: 18px;
      font-weight: 600;
      color: var(--product-name-color);
      margin: 0 0 4px;
    }

    .collection-carousel__subtitle {
      font-size: 14px;
      color: var(--product-subtitle-color);
      margin: 0;
    }

    .collection-carousel__price {
      font-size: 18px;
      font-weight: 500;
      color: var(--price-color);
      flex-shrink: 0;
      margin-left: 16px;
    }
  }

  @media (min-width: 1024px) {
    .collection-carousel__track {
      gap: 32px;
    }
  }
{% endstylesheet %}

