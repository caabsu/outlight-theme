<div
  class="collection-carousel full-width"
  style="
    --section-bg: {{ section.settings.section_bg }};
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    --title-color: {{ section.settings.title_color }};
    --title-size-desktop: {{ section.settings.title_size_desktop }}px;
    --title-size-mobile: {{ section.settings.title_size_mobile }}px;
    --title-weight: {{ section.settings.title_weight }};
    --card-info-bg: {{ section.settings.card_info_bg }};
    --card-info-opacity: {{ section.settings.card_info_opacity | divided_by: 100.0 }};
    --product-name-color: {{ section.settings.product_name_color }};
    --product-name-size-desktop: {{ section.settings.product_name_size_desktop }}px;
    --product-name-size-mobile: {{ section.settings.product_name_size_mobile }}px;
    --product-name-weight: {{ section.settings.product_name_weight }};
    --product-subtitle-color: {{ section.settings.product_subtitle_color }};
    --product-subtitle-size: {{ section.settings.product_subtitle_size }}px;
    --product-subtitle-weight: {{ section.settings.product_subtitle_weight }};
    --price-color: {{ section.settings.price_color }};
    --price-size-desktop: {{ section.settings.price_size_desktop }}px;
    --price-size-mobile: {{ section.settings.price_size_mobile }}px;
    --price-weight: {{ section.settings.price_weight }};
    --mobile-name-color: {{ section.settings.mobile_name_color }};
    --mobile-price-color: {{ section.settings.mobile_price_color }};
  "
>
  <div class="collection-carousel__container">
    {%- if section.settings.title != blank -%}
      <h2 class="collection-carousel__title">{{ section.settings.title }}</h2>
    {%- endif -%}

    <div class="collection-carousel__wrapper">
      <button class="collection-carousel__nav collection-carousel__nav--prev" data-carousel-prev aria-label="Previous">
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M12.5 15L7.5 10L12.5 5"/>
        </svg>
      </button>

      <div class="collection-carousel__track" data-carousel-track>
      {%- assign collection = collections[section.settings.collection] -%}
      {%- if collection != blank and collection.products.size > 0 -%}
        {%- for product in collection.products limit: section.settings.products_limit -%}
          <a href="{{ product.url }}" class="collection-carousel__card">
            <div class="collection-carousel__image">
              {%- if product.featured_image != blank -%}
                {{ product.featured_image | image_url: width: 800 | image_tag: loading: 'lazy' }}
              {%- else -%}
                {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
              {%- endif -%}
            </div>
            <div class="collection-carousel__info">
              <div class="collection-carousel__details">
                <h3 class="collection-carousel__name">{{ product.title }}</h3>
                {%- if product.metafields.descriptors.subtitle != blank -%}
                  <p class="collection-carousel__subtitle">{{ product.metafields.descriptors.subtitle }}</p>
                {%- elsif product.type != blank -%}
                  <p class="collection-carousel__subtitle">{{ product.type }}</p>
                {%- endif -%}
              </div>
              <div class="collection-carousel__price">
                {{ product.price | money }}
              </div>
            </div>
            <!-- Mobile overlay info -->
            <div class="collection-carousel__info-mobile">
              <h3 class="collection-carousel__name-mobile">{{ product.title }}</h3>
              <p class="collection-carousel__price-mobile">{{ product.price | money }}</p>
            </div>
          </a>
        {%- endfor -%}
      {%- else -%}
        {%- for i in (1..4) -%}
          <div class="collection-carousel__card">
            <div class="collection-carousel__image">
              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
            <div class="collection-carousel__info">
              <div class="collection-carousel__details">
                <h3 class="collection-carousel__name">Product Title</h3>
                <p class="collection-carousel__subtitle">Subtitle</p>
              </div>
              <div class="collection-carousel__price">$0.00</div>
            </div>
            <div class="collection-carousel__info-mobile">
              <h3 class="collection-carousel__name-mobile">Product Title</h3>
              <p class="collection-carousel__price-mobile">$0.00</p>
            </div>
          </div>
        {%- endfor -%}
      {%- endif -%}
      </div>

      <button class="collection-carousel__nav collection-carousel__nav--next" data-carousel-next aria-label="Next">
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M7.5 15L12.5 10L7.5 5"/>
        </svg>
      </button>
    </div>
  </div>
</div>

{% stylesheet %}
  .collection-carousel {
    background: var(--section-bg);
    padding: var(--section-padding-top) 0 var(--section-padding-bottom);
  }

  .collection-carousel__container {
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 var(--page-margin);
  }

  .collection-carousel__title {
    font-size: var(--title-size-mobile);
    font-weight: var(--title-weight);
    font-style: normal;
    color: var(--title-color);
    margin: 0 0 24px;
    text-align: center;
  }

  .collection-carousel__wrapper {
    position: relative;
  }

  .collection-carousel__nav {
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 40px;
    height: 40px;
    background: transparent;
    border: none;
    cursor: pointer;
    z-index: 10;
    transition: opacity 0.2s ease;
    color: #1C1917;
  }

  .collection-carousel__nav:hover {
    opacity: 0.6;
  }

  .collection-carousel__nav--prev {
    left: 4px;
  }

  .collection-carousel__nav--next {
    right: 4px;
  }

  .collection-carousel__nav:disabled {
    opacity: 0.2;
    cursor: not-allowed;
  }

  .collection-carousel__track {
    display: flex;
    gap: 16px;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scrollbar-width: none;
    -webkit-overflow-scrolling: touch;
    margin: 0 -24px;
    padding: 0 calc(50% - 152px);
  }

  .collection-carousel__track::-webkit-scrollbar {
    display: none;
  }

  .collection-carousel__card {
    flex: 0 0 280px;
    scroll-snap-align: center;
    overflow: hidden;
    text-decoration: none;
    position: relative;
    display: block;
  }

  .collection-carousel__image {
    aspect-ratio: 1 / 1;
    overflow: hidden;
    background: #f5f5f5;
  }

  .collection-carousel__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Desktop info - hidden on mobile */
  .collection-carousel__info {
    display: none;
  }

  /* Mobile overlay info */
  .collection-carousel__info-mobile {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 60px 16px 16px;
    background: linear-gradient(to top, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0) 100%);
  }

  .collection-carousel__name-mobile {
    font-family: var(--font-heading-family), serif;
    font-size: var(--product-name-size-mobile);
    font-weight: 400;
    color: var(--mobile-name-color);
    margin: 0 0 4px;
  }

  .collection-carousel__price-mobile {
    font-size: var(--price-size-mobile);
    font-weight: var(--price-weight);
    color: var(--mobile-price-color);
    margin: 0;
  }

  /* Desktop styles */
  @media (min-width: 768px) {
    .collection-carousel__container {
      padding: 0 var(--page-margin);
    }

    .collection-carousel__title {
      font-size: var(--title-size-desktop);
      font-style: italic;
      margin: 0 0 32px;
    }

    .collection-carousel__track {
      margin: 0 -24px;
      padding: 0 24px;
      gap: 24px;
      scroll-snap-type: x mandatory;
      scroll-padding-left: 24px;
    }

    .collection-carousel__card {
      flex: 0 0 calc(33.333% - 16px);
      min-width: 300px;
      scroll-snap-align: start;
    }

    /* Hide mobile overlay, show desktop info */
    .collection-carousel__info-mobile {
      display: none;
    }

    .collection-carousel__info {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      padding: 16px 20px;
      position: absolute;
      bottom: 16px;
      left: 16px;
      right: 16px;
      isolation: isolate;
    }

    .collection-carousel__info::before {
      content: '';
      position: absolute;
      inset: 0;
      background: var(--card-info-bg);
      opacity: var(--card-info-opacity);
      z-index: -1;
    }

    .collection-carousel__details {
      flex: 1;
      min-width: 0;
    }

    .collection-carousel__name {
      font-family: var(--font-heading-family), serif;
      font-size: var(--product-name-size-desktop);
      font-weight: 400;
      color: var(--product-name-color);
      margin: 0 0 4px;
    }

    .collection-carousel__subtitle {
      font-size: var(--product-subtitle-size);
      font-weight: var(--product-subtitle-weight);
      color: var(--product-subtitle-color);
      margin: 0;
    }

    .collection-carousel__price {
      font-size: var(--price-size-desktop);
      font-weight: var(--price-weight);
      color: var(--price-color);
      flex-shrink: 0;
      margin-left: 16px;
    }
  }

  @media (min-width: 1024px) {
    .collection-carousel__track {
      gap: 32px;
    }

    .collection-carousel__card {
      flex: 0 0 calc(33.333% - 22px);
    }

    .collection-carousel__nav {
      width: 48px;
      height: 48px;
    }

    .collection-carousel__nav--prev {
      left: 16px;
    }

    .collection-carousel__nav--next {
      right: 16px;
    }
  }
{% endstylesheet %}

{% javascript %}
  const carouselTrack = document.querySelector('[data-carousel-track]');
  const prevBtn = document.querySelector('[data-carousel-prev]');
  const nextBtn = document.querySelector('[data-carousel-next]');

  if (carouselTrack && prevBtn && nextBtn) {
    const scrollAmount = () => {
      const card = carouselTrack.querySelector('.collection-carousel__card');
      if (card) {
        const style = window.getComputedStyle(carouselTrack);
        const gap = parseInt(style.gap) || 32;
        return card.offsetWidth + gap;
      }
      return 300;
    };

    prevBtn.addEventListener('click', () => {
      carouselTrack.scrollBy({ left: -scrollAmount(), behavior: 'smooth' });
    });

    nextBtn.addEventListener('click', () => {
      carouselTrack.scrollBy({ left: scrollAmount(), behavior: 'smooth' });
    });
  }
{% endjavascript %}

