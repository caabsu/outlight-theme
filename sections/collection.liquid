{% comment %}
  This section is used in the collection template to render collection page
  listing all products within a collection.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/collection
{% endcomment %}

<div class="collection-page">
  <div class="collection-header">
    <h1 class="collection-title">{{ collection.title }}</h1>
    {%- if collection.description != blank -%}
      <p class="collection-description">{{ collection.description }}</p>
    {%- endif -%}
  </div>

  <div class="collection-products">
    {% paginate collection.products by 20 %}
      {% for product in collection.products %}
        <a href="{{ product.url }}" class="collection-product">
          <div class="collection-product__image-wrapper">
            {% if product.featured_image %}
              {{ product.featured_image | image_url: width: 600, height: 600, crop: 'center' | image_tag: class: 'collection-product__image' }}
            {% else %}
              <div class="collection-product__placeholder"></div>
            {% endif %}
          </div>
          <div class="collection-product__content">
            <h3 class="collection-product__title">{{ product.title }}</h3>
            <p class="collection-product__price">{{ product.price | money }}</p>
          </div>
        </a>
      {% endfor %}

      {{ paginate | default_pagination }}
    {% endpaginate %}
  </div>
</div>

{% stylesheet %}
  .collection-page {
    padding: 2rem var(--page-margin) 4rem;
    max-width: var(--page-width);
    margin: 0 auto;
  }

  .collection-header {
    margin-bottom: 2rem;
  }

  .collection-title {
    font-family: var(--font-heading-family);
    font-size: 2.5rem;
    font-weight: 400;
    margin: 0 0 0.5rem;
    color: #1C1917;
  }

  .collection-description {
    font-size: 1rem;
    color: #78716C;
    margin: 0;
    max-width: 600px;
  }

  .collection-products {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  .collection-product {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .collection-product__image-wrapper {
    aspect-ratio: 1 / 1;
    overflow: hidden;
    background-color: #f5f5f5;
    margin-bottom: 0.75rem;
  }

  .collection-product__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .collection-product:hover .collection-product__image {
    transform: scale(1.03);
  }

  .collection-product__placeholder {
    width: 100%;
    height: 100%;
    background-color: #e5e5e5;
  }

  .collection-product__content {
    padding: 0 0.25rem;
  }

  .collection-product__title {
    font-family: var(--font-heading-family);
    font-size: 1rem;
    font-weight: 400;
    margin: 0 0 0.25rem;
    color: #1C1917;
  }

  .collection-product__price {
    font-size: 0.875rem;
    color: #D97706;
    font-weight: 600;
    margin: 0;
  }

  @media screen and (min-width: 768px) {
    .collection-page {
      padding: 3rem var(--page-margin) 5rem;
    }

    .collection-title {
      font-size: 3rem;
    }

    .collection-products {
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }

    .collection-product__title {
      font-size: 1.125rem;
    }
  }

  @media screen and (min-width: 1024px) {
    .collection-products {
      grid-template-columns: repeat(4, 1fr);
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.collection",
  "settings": []
}
{% endschema %}
