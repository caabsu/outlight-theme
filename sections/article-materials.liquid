{% comment %}
  Article Materials List Section
  List of materials/features with left accent border
{% endcomment %}

<section
  class="article-materials"
  style="
    --am-bg: {{ section.settings.background_color }};
    --am-accent-color: {{ section.settings.accent_color }};
    --am-text-color: {{ section.settings.text_color }};
    --am-text-size: {{ section.settings.text_size }}px;
    --am-text-size-mobile: {{ section.settings.text_size_mobile }}px;
    --am-padding-top: {{ section.settings.padding_top }}px;
    --am-padding-bottom: {{ section.settings.padding_bottom }}px;
    --am-padding-top-mobile: {{ section.settings.padding_top_mobile }}px;
    --am-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}px;
  "
>
  <div class="article-materials__container">
    <ul class="article-materials__list">
      {%- for block in section.blocks -%}
        <li class="article-materials__item" {{ block.shopify_attributes }}>
          {{ block.settings.text | upcase }}
        </li>
      {%- endfor -%}

      {%- if section.blocks.size == 0 -%}
        <li class="article-materials__item">UNLACQUERED BRASS</li>
        <li class="article-materials__item">HONED CARRARA</li>
        <li class="article-materials__item">MOUTH-BLOWN GLASS</li>
      {%- endif -%}
    </ul>
  </div>
</section>

{% stylesheet %}
  .article-materials {
    background-color: var(--am-bg);
    padding: var(--am-padding-top-mobile) 16px var(--am-padding-bottom-mobile);
  }

  .article-materials__container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .article-materials__list {
    list-style: none;
    margin: 0;
    padding: 0 0 0 1rem;
    border-left: 2px solid var(--am-accent-color);
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .article-materials__item {
    font-family: var(--font-body-family), sans-serif;
    font-size: var(--am-text-size-mobile);
    font-weight: 500;
    letter-spacing: 0.1em;
    color: var(--am-text-color);
    line-height: 1.6;
  }

  @media (min-width: 768px) {
    .article-materials {
      padding: var(--am-padding-top) 40px var(--am-padding-bottom);
    }

    .article-materials__list {
      padding-left: 1.25rem;
      gap: 0.625rem;
    }

    .article-materials__item {
      font-size: var(--am-text-size);
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Article materials",
  "settings": [
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#78716C"
    },
    {
      "type": "range",
      "id": "text_size",
      "label": "Text size (desktop)",
      "min": 10,
      "max": 18,
      "step": 1,
      "default": 13,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "text_size_mobile",
      "label": "Text size (mobile)",
      "min": 10,
      "max": 16,
      "step": 1,
      "default": 12,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent border color",
      "default": "#D97706"
    },
    {
      "type": "header",
      "content": "Section style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#F7F5F0"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top (desktop)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 40,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom (desktop)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 40,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "label": "Padding top (mobile)",
      "min": 0,
      "max": 80,
      "step": 5,
      "default": 30,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "label": "Padding bottom (mobile)",
      "min": 0,
      "max": 80,
      "step": 5,
      "default": 30,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "material",
      "name": "Material",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Material name",
          "default": "Unlacquered Brass"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Article materials",
      "blocks": [
        { "type": "material", "settings": { "text": "Unlacquered Brass" } },
        { "type": "material", "settings": { "text": "Honed Carrara" } },
        { "type": "material", "settings": { "text": "Mouth-Blown Glass" } }
      ]
    }
  ],
  "enabled_on": {
    "templates": ["*"],
    "groups": ["*"]
  }
}
{% endschema %}
