{% comment %}
  Article Image with Text Section
  Image with figure caption alongside quote or text
{% endcomment %}

<section
  class="article-image-text"
  style="
    --ait-bg: {{ section.settings.background_color }};
    --ait-caption-color: {{ section.settings.caption_color }};
    --ait-quote-color: {{ section.settings.quote_color }};
    --ait-quote-size: {{ section.settings.quote_size }}px;
    --ait-quote-size-mobile: {{ section.settings.quote_size_mobile }}px;
    --ait-text-bg: {{ section.settings.text_background }};
    --ait-padding-top: {{ section.settings.padding_top }}px;
    --ait-padding-bottom: {{ section.settings.padding_bottom }}px;
    --ait-padding-top-mobile: {{ section.settings.padding_top_mobile }}px;
    --ait-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}px;
  "
>
  {%- comment -%} Mobile layout {%- endcomment -%}
  <div class="article-image-text__mobile">
    {%- if section.settings.image != blank -%}
      <div class="article-image-text__image">
        {{ section.settings.image | image_url: width: 1200 | image_tag: loading: 'lazy' }}
      </div>
    {%- endif -%}
    {%- if section.settings.caption != blank -%}
      <p class="article-image-text__caption">{{ section.settings.caption }}</p>
    {%- endif -%}
    {%- if section.settings.quote != blank -%}
      <blockquote class="article-image-text__quote">
        {{ section.settings.quote }}
      </blockquote>
    {%- endif -%}
  </div>

  {%- comment -%} Desktop layout - image with overlaid text box {%- endcomment -%}
  <div class="article-image-text__desktop">
    <div class="article-image-text__image-container">
      {%- if section.settings.image != blank -%}
        <div class="article-image-text__image">
          {{ section.settings.image | image_url: width: 1800 | image_tag: loading: 'lazy' }}
        </div>
      {%- endif -%}
      <div class="article-image-text__overlay">
        {%- if section.settings.caption != blank -%}
          <p class="article-image-text__caption">{{ section.settings.caption }}</p>
        {%- endif -%}
        {%- if section.settings.quote != blank -%}
          <blockquote class="article-image-text__quote">
            {{ section.settings.quote }}
          </blockquote>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% stylesheet %}
  .article-image-text {
    background-color: var(--ait-bg);
  }

  /* Mobile layout */
  .article-image-text__mobile {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding: var(--ait-padding-top-mobile) var(--page-margin) var(--ait-padding-bottom-mobile);
  }

  .article-image-text__desktop {
    display: none;
  }

  .article-image-text__image {
    width: 100%;
  }

  .article-image-text__image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .article-image-text__caption {
    font-family: var(--font-body-family), sans-serif;
    font-size: 10px;
    font-weight: 500;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--ait-caption-color);
    margin: 0;
  }

  .article-image-text__quote {
    font-family: var(--font-heading-family), serif;
    font-size: var(--ait-quote-size-mobile);
    font-weight: 400;
    font-style: italic;
    color: var(--ait-quote-color);
    line-height: 1.4;
    margin: 0;
    text-align: center;
  }

  @media (min-width: 768px) {
    /* Hide mobile, show desktop */
    .article-image-text__mobile {
      display: none;
    }

    .article-image-text__desktop {
      display: block;
      padding: var(--ait-padding-top) var(--page-margin) var(--ait-padding-bottom);
    }

    .article-image-text__image-container {
      position: relative;
      max-width: var(--page-width);
      margin: 0 auto;
    }

    .article-image-text__overlay {
      position: absolute;
      bottom: 2rem;
      right: 2rem;
      background-color: var(--ait-text-bg, #F7F5F0);
      padding: 2rem;
      max-width: 400px;
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .article-image-text__overlay .article-image-text__caption {
      font-size: 11px;
    }

    .article-image-text__overlay .article-image-text__quote {
      font-size: var(--ait-quote-size);
      text-align: left;
      line-height: 1.5;
    }
  }
{% endstylesheet %}

