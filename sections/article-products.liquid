{% comment %}
  Article Products Section
  Product showcase grid with editorial styling
  Individual product selection with custom title overrides
{% endcomment %}

<section
  class="article-products"
  style="
    --ap-bg: {{ section.settings.background_color }};
    --ap-card-bg: {{ section.settings.card_background }};
    --ap-title-color: {{ section.settings.title_color }};
    --ap-title-size: {{ section.settings.title_size }}px;
    --ap-title-size-mobile: {{ section.settings.title_size_mobile }}px;
    --ap-subtitle-color: {{ section.settings.subtitle_color }};
    --ap-label-color: {{ section.settings.label_color }};
    --ap-link-color: {{ section.settings.link_color }};
    --ap-product-label-color: {{ section.settings.product_label_color }};
    --ap-product-label-size: {{ section.settings.product_label_size }}px;
    --ap-product-label-size-mobile: {{ section.settings.product_label_size_mobile }}px;
    --ap-product-title-color: {{ section.settings.product_title_color }};
    --ap-product-title-size: {{ section.settings.product_title_size }}px;
    --ap-product-title-size-mobile: {{ section.settings.product_title_size_mobile }}px;
    --ap-price-color: {{ section.settings.price_color }};
    --ap-price-size: {{ section.settings.price_size }}px;
    --ap-price-size-mobile: {{ section.settings.price_size_mobile }}px;
    --ap-button-color: {{ section.settings.button_color }};
    --ap-button-text-color: {{ section.settings.button_text_color }};
    --ap-button-hover-bg: {{ section.settings.button_hover_bg }};
    --ap-button-hover-text: {{ section.settings.button_hover_text }};
    --ap-padding-top: {{ section.settings.padding_top }}px;
    --ap-padding-bottom: {{ section.settings.padding_bottom }}px;
    --ap-padding-top-mobile: {{ section.settings.padding_top_mobile }}px;
    --ap-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}px;
  "
>
  <div class="article-products__container">
    <div class="article-products__header">
      <div class="article-products__header-left">
        {%- if section.settings.label != blank -%}
          <span class="article-products__label">{{ section.settings.label | upcase }}</span>
        {%- endif -%}
        {%- if section.settings.title != blank -%}
          <h2 class="article-products__title">{{ section.settings.title }}</h2>
        {%- endif -%}
        {%- if section.settings.subtitle != blank -%}
          <p class="article-products__subtitle">{{ section.settings.subtitle }}</p>
        {%- endif -%}
      </div>
      {%- if section.settings.link_text != blank and section.settings.link_url != blank -%}
        <a href="{{ section.settings.link_url }}" class="article-products__link">{{ section.settings.link_text | upcase }}</a>
      {%- endif -%}
    </div>

    <div class="article-products__grid">
      {%- for block in section.blocks -%}
        {%- assign product = block.settings.product -%}
        {%- if product != blank -%}
          <div class="article-products__card" {{ block.shopify_attributes }}>
            <a href="{{ product.url }}" class="article-products__card-link">
              <div class="article-products__card-image">
                {%- if product.featured_image != blank -%}
                  {{ product.featured_image | image_url: width: 600 | image_tag: loading: 'lazy' }}
                {%- else -%}
                  {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                {%- endif -%}
              </div>
              <div class="article-products__card-info">
                <div class="article-products__card-meta">
                  <span class="article-products__card-label">
                    {%- if block.settings.custom_label != blank -%}
                      {{ block.settings.custom_label | upcase }}
                    {%- else -%}
                      LAYER {{ forloop.index | prepend: '0' | slice: -2, 2 }}
                    {%- endif -%}
                  </span>
                  <span class="article-products__card-price">{{ product.price | money }}</span>
                </div>
                <h3 class="article-products__card-title">
                  {%- if block.settings.custom_title != blank -%}
                    {{ block.settings.custom_title }}
                  {%- else -%}
                    {{ product.title }}
                  {%- endif -%}
                </h3>
              </div>
            </a>
            <button class="article-products__add-to-cart" data-product-id="{{ product.variants.first.id }}">
              {{ section.settings.button_text | default: 'ADD TO CART' | upcase }}
            </button>
          </div>
        {%- else -%}
          {%- comment -%} Placeholder when no product selected {%- endcomment -%}
          <div class="article-products__card" {{ block.shopify_attributes }}>
            <div class="article-products__card-link">
              <div class="article-products__card-image">
                {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
              <div class="article-products__card-info">
                <div class="article-products__card-meta">
                  <span class="article-products__card-label">
                    {%- if block.settings.custom_label != blank -%}
                      {{ block.settings.custom_label | upcase }}
                    {%- else -%}
                      LAYER {{ forloop.index | prepend: '0' | slice: -2, 2 }}
                    {%- endif -%}
                  </span>
                  <span class="article-products__card-price">$0.00</span>
                </div>
                <h3 class="article-products__card-title">
                  {%- if block.settings.custom_title != blank -%}
                    {{ block.settings.custom_title }}
                  {%- else -%}
                    Select a product
                  {%- endif -%}
                </h3>
              </div>
            </div>
            <button class="article-products__add-to-cart" disabled>
              {{ section.settings.button_text | default: 'ADD TO CART' | upcase }}
            </button>
          </div>
        {%- endif -%}
      {%- endfor -%}

      {%- if section.blocks.size == 0 -%}
        {%- for i in (1..3) -%}
          <div class="article-products__card">
            <div class="article-products__card-link">
              <div class="article-products__card-image">
                {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
              <div class="article-products__card-info">
                <div class="article-products__card-meta">
                  <span class="article-products__card-label">LAYER 0{{ i }}</span>
                  <span class="article-products__card-price">$240</span>
                </div>
                <h3 class="article-products__card-title">Product Title</h3>
              </div>
            </div>
            <button class="article-products__add-to-cart">ADD TO CART</button>
          </div>
        {%- endfor -%}
      {%- endif -%}
    </div>
  </div>
</section>

{% stylesheet %}
  .article-products {
    background-color: var(--ap-bg);
    padding: var(--ap-padding-top-mobile) 16px var(--ap-padding-bottom-mobile);
  }

  .article-products__container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .article-products__header {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 2rem;
    text-align: center;
  }

  .article-products__header-left {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .article-products__label {
    font-family: var(--font-body-family), sans-serif;
    font-size: 11px;
    font-weight: 500;
    letter-spacing: 0.15em;
    color: var(--ap-label-color);
  }

  .article-products__title {
    font-family: var(--font-heading-family), serif;
    font-size: var(--ap-title-size-mobile);
    font-weight: 400;
    color: var(--ap-title-color);
    margin: 0;
    line-height: 1.2;
  }

  .article-products__subtitle {
    font-family: var(--font-body-family), sans-serif;
    font-size: 14px;
    font-weight: 400;
    color: var(--ap-subtitle-color);
    margin: 0;
  }

  .article-products__link {
    font-family: var(--font-body-family), sans-serif;
    font-size: 12px;
    font-weight: 500;
    letter-spacing: 0.1em;
    color: var(--ap-link-color);
    text-decoration: underline;
    text-underline-offset: 3px;
    transition: opacity 0.2s ease;
  }

  .article-products__link:hover {
    opacity: 0.7;
  }

  /* Mobile: Horizontal scroll carousel */
  .article-products__grid {
    display: flex;
    flex-direction: row;
    gap: 1rem;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    padding-bottom: 1rem;
    margin-left: -16px;
    margin-right: -16px;
    padding-left: 16px;
    padding-right: 16px;
  }

  /* Hide scrollbar but keep functionality */
  .article-products__grid::-webkit-scrollbar {
    display: none;
  }

  .article-products__grid {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  .article-products__card {
    background-color: var(--ap-card-bg);
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex: 0 0 280px;
    scroll-snap-align: start;
  }

  .article-products__card-link {
    text-decoration: none;
    display: block;
  }

  .article-products__card-image {
    aspect-ratio: 1 / 1;
    overflow: hidden;
    margin-bottom: 1rem;
    background-color: #f5f5f5;
  }

  .article-products__card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .article-products__card:hover .article-products__card-image img {
    transform: scale(1.03);
  }

  .article-products__card-info {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .article-products__card-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .article-products__card-label {
    font-family: var(--font-body-family), sans-serif;
    font-size: var(--ap-product-label-size-mobile);
    font-weight: 500;
    letter-spacing: 0.1em;
    color: var(--ap-product-label-color);
  }

  .article-products__card-price {
    font-family: var(--font-body-family), sans-serif;
    font-size: var(--ap-price-size-mobile);
    font-weight: 400;
    color: var(--ap-price-color);
  }

  .article-products__card-title {
    font-family: var(--font-heading-family), serif;
    font-size: var(--ap-product-title-size-mobile);
    font-weight: 400;
    font-style: italic;
    color: var(--ap-product-title-color);
    margin: 0;
    line-height: 1.3;
  }

  .article-products__add-to-cart {
    margin-top: 1rem;
    padding: 0.875rem 1.5rem;
    font-family: var(--font-body-family), sans-serif;
    font-size: 12px;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--ap-button-text-color);
    background: transparent;
    border: 1px solid var(--ap-button-color);
    cursor: pointer;
    transition: background-color 0.2s ease, color 0.2s ease, border-color 0.2s ease;
  }

  .article-products__add-to-cart:hover {
    background-color: var(--ap-button-hover-bg);
    color: var(--ap-button-hover-text);
    border-color: var(--ap-button-hover-bg);
  }

  .article-products__add-to-cart:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  @media (min-width: 768px) {
    .article-products {
      padding: var(--ap-padding-top) 40px var(--ap-padding-bottom);
    }

    .article-products__header {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-end;
      text-align: left;
      margin-bottom: 2.5rem;
    }

    .article-products__title {
      font-size: var(--ap-title-size);
    }

    .article-products__grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 1.5rem;
      overflow-x: visible;
      margin-left: 0;
      margin-right: 0;
      padding-left: 0;
      padding-right: 0;
    }

    .article-products__card {
      padding: 2rem;
      flex: none;
    }

    .article-products__card-label {
      font-size: var(--ap-product-label-size);
    }

    .article-products__card-price {
      font-size: var(--ap-price-size);
    }

    .article-products__card-title {
      font-size: var(--ap-product-title-size);
    }

    /* Hide add to cart on desktop - show on hover */
    .article-products__add-to-cart {
      display: none;
    }
  }
{% endstylesheet %}

{% javascript %}
  // Add to cart functionality
  document.querySelectorAll('.article-products__add-to-cart').forEach(button => {
    button.addEventListener('click', async function() {
      const variantId = this.dataset.productId;
      if (!variantId) return;

      const originalText = this.textContent;
      this.textContent = 'ADDING...';
      this.disabled = true;

      try {
        const response = await fetch('/cart/add.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            id: variantId,
            quantity: 1
          })
        });

        if (response.ok) {
          this.textContent = 'ADDED!';
          setTimeout(() => {
            this.textContent = originalText;
            this.disabled = false;
          }, 2000);
        } else {
          this.textContent = 'ERROR';
          setTimeout(() => {
            this.textContent = originalText;
            this.disabled = false;
          }, 2000);
        }
      } catch (error) {
        this.textContent = 'ERROR';
        setTimeout(() => {
          this.textContent = originalText;
          this.disabled = false;
        }, 2000);
      }
    });
  });
{% endjavascript %}

