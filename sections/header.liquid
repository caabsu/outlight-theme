  const headerWrapper = document.querySelector('[data-header-wrapper]');
  const isTransparent = headerWrapper && headerWrapper.classList.contains('header-wrapper--transparent');
  const scrollThreshold = 50;
  let megaMenuOpen = false;

  // Header scroll behavior
  if (isTransparent) {
    function updateHeader() {
      if (window.scrollY > scrollThreshold || megaMenuOpen) {
        headerWrapper.classList.add('is-scrolled');
      } else {
        headerWrapper.classList.remove('is-scrolled');
      }
    }

    window.addEventListener('scroll', updateHeader, { passive: true });
    updateHeader();
  }

  // Mobile drawer
  const mobileDrawer = document.querySelector('[data-mobile-drawer]');
  const menuToggle = document.querySelector('[data-menu-toggle]');
  const drawerCloseButtons = document.querySelectorAll('[data-drawer-close]');

  if (menuToggle && mobileDrawer) {
    menuToggle.addEventListener('click', () => {
      mobileDrawer.classList.add('is-open');
      document.body.classList.add('drawer-open');
    });

    drawerCloseButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        mobileDrawer.classList.remove('is-open');
        document.body.classList.remove('drawer-open');
      });
    });
  }

  // Mega menu hover behavior (desktop)
  const megaMenuItems = document.querySelectorAll('[data-mega-menu]');

  megaMenuItems.forEach(item => {
    let timeout;

    item.addEventListener('mouseenter', () => {
      clearTimeout(timeout);
      item.classList.add('is-open');
      megaMenuOpen = true;
      if (isTransparent && headerWrapper) {
        headerWrapper.classList.add('is-scrolled');
      }
    });

    item.addEventListener('mouseleave', () => {
      timeout = setTimeout(() => {
        item.classList.remove('is-open');
        megaMenuOpen = false;
        // Only remove is-scrolled if not actually scrolled
        if (isTransparent && headerWrapper && window.scrollY <= scrollThreshold) {
          headerWrapper.classList.remove('is-scrolled');
        }
      }, 100);
    });
  });

  // Search drawer
  const searchDrawer = document.querySelector('[data-search-drawer]');
  const searchTrigger = document.querySelector('[data-search-trigger]');
  const searchCloseButtons = document.querySelectorAll('[data-search-close]');
  const searchInput = document.querySelector('[data-search-input]');

  function openSearchDrawer() {
    if (searchDrawer) {
      searchDrawer.classList.add('is-open');
      document.body.classList.add('drawer-open');
      if (searchInput) {
        setTimeout(() => searchInput.focus(), 300);
      }
    }
  }

  function closeSearchDrawer() {
    if (searchDrawer) {
      searchDrawer.classList.remove('is-open');
      document.body.classList.remove('drawer-open');
    }
  }

  if (searchTrigger) {
    searchTrigger.addEventListener('click', openSearchDrawer);
  }

  searchCloseButtons.forEach(btn => {
    btn.addEventListener('click', closeSearchDrawer);
  });

  // Close search drawer on ESC key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && searchDrawer && searchDrawer.classList.contains('is-open')) {
      closeSearchDrawer();
    }
  });

  // Predictive Search - Universal function for all search inputs
  const PredictiveSearch = {
    cache: {},
    debounceTimers: {},

    async search(query, callback) {
      if (!query || query.length < 2) {
        callback({ products: [], collections: [] });
        return;
      }

      const cacheKey = query.toLowerCase().trim();
      if (this.cache[cacheKey]) {
        callback(this.cache[cacheKey]);
        return;
      }

      try {
        const response = await fetch(
          `/search/suggest.json?q=${encodeURIComponent(query)}&resources[type]=product,collection&resources[limit]=5`
        );
        const data = await response.json();

        const results = {
          products: data.resources?.results?.products || [],
          collections: data.resources?.results?.collections || []
        };

        this.cache[cacheKey] = results;
        callback(results);
      } catch (error) {
        console.error('Search error:', error);
        callback({ products: [], collections: [] });
      }
    },

    debounce(key, fn, delay = 200) {
      if (this.debounceTimers[key]) {
        clearTimeout(this.debounceTimers[key]);
      }
      this.debounceTimers[key] = setTimeout(fn, delay);
    },

    renderResults(results, container, options = {}) {
      const { products, collections } = results;

      if (products.length === 0 && collections.length === 0) {
        container.innerHTML = '<div class="mobile-drawer__search-no-results">No results found</div>';
        container.classList.add('is-visible');
        return;
      }

      let html = '';

      // Collections
      if (collections.length > 0) {
        html += '<div class="mobile-drawer__search-group">';
        html += '<h4 class="mobile-drawer__search-group-title">Collections</h4>';
        collections.forEach(collection => {
          html += `
            <a href="${collection.url}" class="mobile-drawer__search-item">
              <div class="mobile-drawer__search-item-image">
                ${collection.featured_image?.url
                  ? `<img src="${collection.featured_image.url}&width=88" alt="${collection.title}" loading="lazy">`
                  : ''}
              </div>
              <div class="mobile-drawer__search-item-info">
                <span class="mobile-drawer__search-item-title">${collection.title}</span>
              </div>
            </a>
          `;
        });
        html += '</div>';
      }

      // Products
      if (products.length > 0) {
        html += '<div class="mobile-drawer__search-group">';
        html += '<h4 class="mobile-drawer__search-group-title">Products</h4>';
        products.forEach(product => {
          // Shopify predictive search API returns price in cents
          // Convert cents to dollars for display
          let price = '';
          if (product.price) {
            const priceInDollars = product.price / 100;
            price = new Intl.NumberFormat('en-US', {
              style: 'currency',
              currency: Shopify?.currency?.active || 'USD',
              minimumFractionDigits: priceInDollars % 1 === 0 ? 0 : 2,
              maximumFractionDigits: 2
            }).format(priceInDollars);
          }
          html += `
            <a href="${product.url}" class="mobile-drawer__search-item">
              <div class="mobile-drawer__search-item-image">
                ${product.featured_image?.url
                  ? `<img src="${product.featured_image.url}&width=88" alt="${product.title}" loading="lazy">`
                  : ''}
              </div>
              <div class="mobile-drawer__search-item-info">
                <span class="mobile-drawer__search-item-title">${product.title}</span>
                <span class="mobile-drawer__search-item-meta">${price}</span>
              </div>
            </a>
          `;
        });
        html += '</div>';
      }

      container.innerHTML = html;
      container.classList.add('is-visible');
    },

    hideResults(container) {
      container.classList.remove('is-visible');
    },

    init(inputSelector, resultsSelector, formSelector) {
      const input = document.querySelector(inputSelector);
      const results = document.querySelector(resultsSelector);
      const form = document.querySelector(formSelector);

      if (!input || !results) return;

      input.addEventListener('input', (e) => {
        const query = e.target.value.trim();

        if (query.length < 2) {
          this.hideResults(results);
          return;
        }

        results.innerHTML = '<div class="mobile-drawer__search-loading">Searching...</div>';
        results.classList.add('is-visible');

        this.debounce(inputSelector, () => {
          this.search(query, (data) => {
            this.renderResults(data, results);
          });
        });
      });

      input.addEventListener('focus', () => {
        const query = input.value.trim();
        if (query.length >= 2) {
          results.classList.add('is-visible');
        }
      });

      // Hide results when clicking outside
      document.addEventListener('click', (e) => {
        if (!input.contains(e.target) && !results.contains(e.target)) {
          this.hideResults(results);
        }
      });

      // Form submit goes to search results page
      if (form) {
        form.addEventListener('submit', (e) => {
          const query = input.value.trim();
          if (!query) {
            e.preventDefault();
          }
        });
      }

      // ESC key hides results
      input.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') {
          this.hideResults(results);
          input.blur();
        }
      });
    }
  };

  // Initialize mobile drawer search
  PredictiveSearch.init(
    '[data-mobile-search-input]',
    '[data-mobile-search-results]',
    '[data-mobile-search-form]'
  );

  // Also add predictive search to header search drawer
  const headerSearchInput = document.querySelector('[data-search-input]');
  const headerSearchForm = document.querySelector('.search-drawer__form');

  if (headerSearchInput && headerSearchForm) {
    // Create results container for header search if not exists
    let headerSearchResults = document.querySelector('[data-header-search-results]');
    if (!headerSearchResults) {
      headerSearchResults = document.createElement('div');
      headerSearchResults.className = 'mobile-drawer__search-results';
      headerSearchResults.setAttribute('data-header-search-results', '');
      headerSearchResults.style.position = 'relative';
      headerSearchResults.style.marginTop = '8px';
      headerSearchResults.style.maxHeight = '50vh';
      headerSearchForm.parentNode.insertBefore(headerSearchResults, headerSearchForm.nextSibling);
    }

    headerSearchInput.addEventListener('input', (e) => {
      const query = e.target.value.trim();

      if (query.length < 2) {
        PredictiveSearch.hideResults(headerSearchResults);
        return;
      }

      headerSearchResults.innerHTML = '<div class="mobile-drawer__search-loading">Searching...</div>';
      headerSearchResults.classList.add('is-visible');

      PredictiveSearch.debounce('header-search', () => {
        PredictiveSearch.search(query, (data) => {
          PredictiveSearch.renderResults(data, headerSearchResults);
        });
      });
    });

    headerSearchInput.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        PredictiveSearch.hideResults(headerSearchResults);
      }
    });
  }
