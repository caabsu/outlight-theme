{% javascript %}
  const headerWrapper = document.querySelector('[data-header-wrapper]');
  const isTransparent = headerWrapper && headerWrapper.classList.contains('header-wrapper--transparent');
  const scrollThreshold = 50;
  let megaMenuOpen = false;

  // Header scroll behavior
  if (isTransparent) {
    function updateHeader() {
      if (window.scrollY > scrollThreshold || megaMenuOpen) {
        headerWrapper.classList.add('is-scrolled');
      } else {
        headerWrapper.classList.remove('is-scrolled');
      }
    }

    window.addEventListener('scroll', updateHeader, { passive: true });
    updateHeader();
  }

  // Mobile drawer
  const mobileDrawer = document.querySelector('[data-mobile-drawer]');
  const menuToggle = document.querySelector('[data-menu-toggle]');
  const drawerCloseButtons = document.querySelectorAll('[data-drawer-close]');

  if (menuToggle && mobileDrawer) {
    menuToggle.addEventListener('click', () => {
      mobileDrawer.classList.add('is-open');
      document.body.classList.add('drawer-open');
    });

    drawerCloseButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        mobileDrawer.classList.remove('is-open');
        document.body.classList.remove('drawer-open');
      });
    });
  }

  // Mega menu hover behavior (desktop)
  const megaMenuItems = document.querySelectorAll('[data-mega-menu]');

  megaMenuItems.forEach(item => {
    let timeout;

    item.addEventListener('mouseenter', () => {
      clearTimeout(timeout);
      item.classList.add('is-open');
      megaMenuOpen = true;
      if (isTransparent && headerWrapper) {
        headerWrapper.classList.add('is-scrolled');
      }
    });

    item.addEventListener('mouseleave', () => {
      timeout = setTimeout(() => {
        item.classList.remove('is-open');
        megaMenuOpen = false;
        // Only remove is-scrolled if not actually scrolled
        if (isTransparent && headerWrapper && window.scrollY <= scrollThreshold) {
          headerWrapper.classList.remove('is-scrolled');
        }
      }, 100);
    });
  });
