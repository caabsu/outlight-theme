    },
    {
      "type": "header",
      "content": "t:sections.header.settings.colors.header"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "t:sections.header.settings.colors.background",
      "default": "#F7F5F0"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "t:sections.header.settings.colors.text",
      "default": "#1C1917"
    },
    {
      "type": "color",
      "id": "text_color_transparent",
      "label": "t:sections.header.settings.colors.text_transparent",
      "info": "t:sections.header.settings.colors.text_transparent_info",
      "default": "#FFFFFF"
    }
  ]
}
