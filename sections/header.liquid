<div
  class="header-wrapper full-width {% if section.settings.enable_sticky %}header-wrapper--sticky{% endif %} {% if section.settings.enable_transparent and template.name == 'index' %}header-wrapper--transparent{% endif %}"
  style="
    --header-bg: {{ section.settings.background_color }};
    --header-text: {{ section.settings.text_color }};
    --header-text-hover: {{ section.settings.text_color_hover }};
    --header-text-transparent: {{ section.settings.text_color_transparent }};
    --header-nav-size: {{ section.settings.nav_font_size }}px;
    --header-nav-weight: {{ section.settings.nav_font_weight }};
    --header-height: {{ section.settings.header_height }}px;
    --header-height-mobile: {{ section.settings.header_height_mobile }}px;
    --logo-width: {{ settings.logo_width }}px;
    --logo-width-mobile: {{ settings.logo_width_mobile }}px;
    --mega-menu-bg: {{ section.settings.mega_menu_bg }};
    --mega-menu-header-color: {{ section.settings.mega_menu_header_color }};
    --mega-menu-header-size: {{ section.settings.mega_menu_header_size }}px;
    --mega-menu-header-weight: {{ section.settings.mega_menu_header_weight }};
    --mega-menu-link-color: {{ section.settings.mega_menu_link_color }};
    --mega-menu-link-hover-color: {{ section.settings.mega_menu_link_hover_color }};
    --mega-menu-link-size: {{ section.settings.mega_menu_link_size }}px;
    --mega-menu-link-weight: {{ section.settings.mega_menu_link_weight }};
    --mega-menu-promo-label-color: {{ section.settings.mega_menu_promo_label_color }};
    --mega-menu-promo-label-size: {{ section.settings.mega_menu_promo_label_size }}px;
    --mega-menu-promo-label-weight: {{ section.settings.mega_menu_promo_label_weight }};
    --mega-menu-promo-title-color: {{ section.settings.mega_menu_promo_title_color }};
    --mega-menu-promo-title-size: {{ section.settings.mega_menu_promo_title_size }}px;
    --mega-menu-promo-title-weight: {{ section.settings.mega_menu_promo_title_weight }};
    --mega-menu-promo-image-opacity: {{ section.settings.mega_menu_promo_image_opacity | divided_by: 100.0 }};
  "
  data-header-wrapper
>
  <header class="header">
    {%- comment -%} Mobile menu toggle {%- endcomment -%}
    <button class="header__menu-toggle" aria-label="Menu" data-menu-toggle>
      <svg width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="1.5">
        <path d="M3 5h14M3 10h14M3 15h14"/>
      </svg>
    </button>

    {%- comment -%} Logo - Desktop: left, Mobile: center {%- endcomment -%}
    <a href="{{ routes.root_url }}" class="header__logo-link">
      {%- if settings.logo_dark -%}
        <span class="header__logo-default">
          {{ settings.logo_dark | image_url: width: 600 | image_tag: class: 'header__logo-image', loading: 'eager' }}
        </span>
      {%- endif -%}
      {%- if settings.logo_light -%}
        <span class="header__logo-transparent">
          {{ settings.logo_light | image_url: width: 600 | image_tag: class: 'header__logo-image', loading: 'eager' }}
        </span>
      {%- endif -%}
      {%- unless settings.logo_dark or settings.logo_light -%}
        <span class="header__logo-text">{{ shop.name }}</span>
      {%- endunless -%}
    </a>

    {%- comment -%} Navigation - Desktop: center, Mobile: hidden {%- endcomment -%}
    <nav class="header__nav">
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'menu_item' -%}
          <div class="header__nav-item" {{ block.shopify_attributes }}>
            <a href="{{ block.settings.link }}" class="header__nav-link">
              {{ block.settings.title }}
            </a>
          </div>

        {%- when 'mega_menu' -%}
          <div class="header__nav-item header__nav-item--mega" data-mega-menu {{ block.shopify_attributes }}>
            <button class="header__nav-link header__nav-link--trigger" data-mega-trigger>
              {{ block.settings.title }}
              <span class="header__nav-underline"></span>
            </button>
            <div class="mega-menu" data-mega-panel>
              <div class="mega-menu__container">
                <div class="mega-menu__layout">
                  <div class="mega-menu__top">
                    {%- comment -%} Left side: Two columns of links {%- endcomment -%}
                    <div class="mega-menu__columns">
                      {%- comment -%} Column 1: Indoor Lighting {%- endcomment -%}
                      <div class="mega-menu__column">
                        <a href="{{ block.settings.column_1_url }}" class="mega-menu__column-header">{{ block.settings.column_1_header | default: 'Indoor Lighting' }}</a>
                        <ul class="mega-menu__links">
                          {%- for i in (1..6) -%}
                            {%- assign link_title_key = 'col1_link_' | append: i | append: '_title' -%}
                            {%- assign link_url_key = 'col1_link_' | append: i | append: '_url' -%}
                            {%- assign link_title = block.settings[link_title_key] -%}
                            {%- assign link_url = block.settings[link_url_key] -%}
                            {%- if link_title != blank -%}
                              <li>
                                <a href="{{ link_url }}" class="mega-menu__link">{{ link_title }}</a>
                              </li>
                            {%- endif -%}
                          {%- endfor -%}
                        </ul>
                      </div>

                      {%- comment -%} Column 2: Outdoor Lighting {%- endcomment -%}
                      <div class="mega-menu__column">
                        <a href="{{ block.settings.column_2_url }}" class="mega-menu__column-header">{{ block.settings.column_2_header | default: 'Outdoor Lighting' }}</a>
                        <ul class="mega-menu__links">
                          {%- for i in (1..6) -%}
                            {%- assign link_title_key = 'col2_link_' | append: i | append: '_title' -%}
                            {%- assign link_url_key = 'col2_link_' | append: i | append: '_url' -%}
                            {%- assign link_title = block.settings[link_title_key] -%}
                            {%- assign link_url = block.settings[link_url_key] -%}
                            {%- if link_title != blank -%}
                              <li>
                                <a href="{{ link_url }}" class="mega-menu__link">{{ link_title }}</a>
                              </li>
                            {%- endif -%}
                          {%- endfor -%}
                        </ul>
                      </div>
                    </div>

                    {%- comment -%} Right side: Two promo buttons {%- endcomment -%}
                    <div class="mega-menu__promos">
                      {%- if block.settings.promo_1_image != blank or block.settings.promo_1_title != blank -%}
                        <a href="{{ block.settings.promo_1_link }}" class="mega-menu__promo">
                          {%- if block.settings.promo_1_image != blank -%}
                            <div class="mega-menu__promo-image">
                              {{ block.settings.promo_1_image | image_url: width: 600, height: 400, crop: 'center' | image_tag }}
                            </div>
                          {%- endif -%}
                          <div class="mega-menu__promo-content">
                            {%- if block.settings.promo_1_label != blank -%}
                              <span class="mega-menu__promo-label">{{ block.settings.promo_1_label }}</span>
                            {%- endif -%}
                            {%- if block.settings.promo_1_title != blank -%}
                              <span class="mega-menu__promo-title">{{ block.settings.promo_1_title }}</span>
                            {%- endif -%}
                          </div>
                        </a>
                      {%- endif -%}

                      {%- if block.settings.promo_2_image != blank or block.settings.promo_2_title != blank -%}
                        <a href="{{ block.settings.promo_2_link }}" class="mega-menu__promo">
                          {%- if block.settings.promo_2_image != blank -%}
                            <div class="mega-menu__promo-image">
                              {{ block.settings.promo_2_image | image_url: width: 600, height: 400, crop: 'center' | image_tag }}
                            </div>
                          {%- endif -%}
                          <div class="mega-menu__promo-content">
                            {%- if block.settings.promo_2_label != blank -%}
                              <span class="mega-menu__promo-label">{{ block.settings.promo_2_label }}</span>
                            {%- endif -%}
                            {%- if block.settings.promo_2_title != blank -%}
                              <span class="mega-menu__promo-title">{{ block.settings.promo_2_title }}</span>
                            {%- endif -%}
                          </div>
                        </a>
                      {%- endif -%}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
      {%- endcase -%}
    {%- endfor -%}
    </nav>

    {%- comment -%} Right: Icons {%- endcomment -%}
    <div class="header__right">
      <a href="{{ routes.cart_url }}" class="header__icon header__cart" aria-label="{{ 'general.cart' | t }}" data-cart-trigger>
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M4 4h2l2.5 10h7l2-7H7"/>
          <circle cx="9" cy="17" r="1.5" fill="currentColor"/>
          <circle cx="14" cy="17" r="1.5" fill="currentColor"/>
        </svg>
        {%- if cart.item_count > 0 -%}
          <span class="header__cart-count">{{ cart.item_count }}</span>
        {%- endif -%}
      </a>
    </div>
  </header>
</div>

