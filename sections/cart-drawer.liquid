{% endstylesheet %}

{% javascript %}
  const cartDrawer = document.querySelector('[data-cart-drawer]');

  function openCartDrawer() {
    if (cartDrawer) {
      cartDrawer.classList.add('is-open');
      document.body.classList.add('cart-drawer-open');
    }
  }

  function closeCartDrawer() {
    if (cartDrawer) {
      cartDrawer.classList.remove('is-open');
      document.body.classList.remove('cart-drawer-open');
    }
  }

  // Use event delegation for all cart drawer interactions
  // This ensures buttons work even after content is dynamically replaced
  if (cartDrawer) {
    cartDrawer.addEventListener('click', async (e) => {
      // Close button handler
      if (e.target.closest('[data-cart-drawer-close]')) {
        closeCartDrawer();
        return;
      }

      // Quantity minus handler
      const minusBtn = e.target.closest('[data-quantity-minus]');
      if (minusBtn) {
        e.preventDefault();
        await handleQuantityChange(minusBtn, -1);
        return;
      }

      // Quantity plus handler
      const plusBtn = e.target.closest('[data-quantity-plus]');
      if (plusBtn) {
        e.preventDefault();
        await handleQuantityChange(plusBtn, 1);
        return;
      }

      // Remove item handler
      const removeBtn = e.target.closest('[data-remove-item]');
      if (removeBtn) {
        e.preventDefault();
        await handleRemoveItem(removeBtn);
        return;
      }

      // Add gift handler
      const giftBtn = e.target.closest('[data-add-gift]');
      if (giftBtn) {
        e.preventDefault();
        await handleAddGift(giftBtn);
        return;
      }
    });

    // Discount form handler
    cartDrawer.addEventListener('submit', async (e) => {
      const form = e.target.closest('[data-discount-form]');
      if (form) {
        e.preventDefault();
        const input = form.querySelector('input[name="discount"]');
        if (input && input.value.trim()) {
          const code = input.value.trim().toUpperCase();
          sessionStorage.setItem('cart_discount_code', code);
          const wrapper = form.closest('[data-discount-wrapper]');
          const codeDisplay = wrapper.querySelector('[data-discount-code-display]');
          if (codeDisplay) codeDisplay.textContent = code;
          wrapper.classList.add('has-code');
          input.value = '';
          updateCheckoutLinks(code);
        }
      }
    });

    // Discount remove handler
    cartDrawer.addEventListener('click', (e) => {
      const removeBtn = e.target.closest('[data-discount-remove]');
      if (removeBtn) {
        sessionStorage.removeItem('cart_discount_code');
        const wrapper = removeBtn.closest('[data-discount-wrapper]');
        wrapper.classList.remove('has-code');
        updateCheckoutLinks('');
      }
    });

    // Check for existing discount code on load
    const savedCode = sessionStorage.getItem('cart_discount_code');
    if (savedCode) {
      const wrapper = cartDrawer.querySelector('[data-discount-wrapper]');
      if (wrapper) {
        const codeDisplay = wrapper.querySelector('[data-discount-code-display]');
        if (codeDisplay) codeDisplay.textContent = savedCode;
        wrapper.classList.add('has-code');
        updateCheckoutLinks(savedCode);
      }
    }
  }

  function updateCheckoutLinks(code) {
    const checkoutLinks = document.querySelectorAll('.cart-drawer__checkout-btn');
    checkoutLinks.forEach(link => {
      const baseUrl = '/checkout';
      link.href = code ? baseUrl + '?discount=' + encodeURIComponent(code) : baseUrl;
    });
  }

  // Protection toggle handler
  if (cartDrawer) {
    cartDrawer.addEventListener('change', async (e) => {
      const toggle = e.target.closest('[data-protection-toggle]');
      if (toggle) {
        await handleProtectionToggle(toggle);
      }
    });
  }

  // Protection toggle handler
  async function handleProtectionToggle(toggle) {
    const variantId = toggle.dataset.variantId;
    if (!variantId) return;

    toggle.disabled = true;

    try {
      if (toggle.checked) {
        // Add protection to cart
        await fetch('/cart/add.js', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            items: [{ id: parseInt(variantId), quantity: 1 }]
          })
        });
      } else {
        // Remove protection from cart
        const cartResponse = await fetch('/cart.js');
        const cart = await cartResponse.json();
        const item = cart.items.find(i => i.variant_id === parseInt(variantId));
        if (item) {
          await fetch('/cart/change.js', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ id: item.key, quantity: 0 })
          });
        }
      }

      // Refresh cart drawer
      const sectionResponse = await fetch('/?sections=cart-drawer');
      if (sectionResponse.ok) {
        const sections = await sectionResponse.json();
        const cartDrawerHtml = sections['cart-drawer'];
        if (cartDrawer && cartDrawerHtml) {
          const temp = document.createElement('div');
          temp.innerHTML = cartDrawerHtml;
          const newContent = temp.querySelector('[data-cart-drawer]');
          if (newContent) {
            cartDrawer.innerHTML = newContent.innerHTML;
          }
        }
      }
      // Update header cart count
      const cartResp = await fetch('/cart.js');
      if (cartResp.ok) {
        const cart = await cartResp.json();
        updateCartCount(cart.item_count);
      }
    } catch (error) {
      console.error('Error toggling protection:', error);
      toggle.checked = !toggle.checked;
    }
    toggle.disabled = false;
  }

  // Add gift handler
  async function handleAddGift(btn) {
    const variantId = btn.dataset.variantId;
    if (!variantId) return;

    btn.disabled = true;
    btn.textContent = '...';

    try {
      const response = await fetch('/cart/add.js', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          items: [{
            id: parseInt(variantId),
            quantity: 1,
            properties: { '_gift': 'true' }
          }]
        })
      });

      if (response.ok) {
        // Refresh cart drawer
        const sectionResponse = await fetch('/?sections=cart-drawer');
        if (sectionResponse.ok) {
          const sections = await sectionResponse.json();
          const cartDrawerHtml = sections['cart-drawer'];
          if (cartDrawer && cartDrawerHtml) {
            const temp = document.createElement('div');
            temp.innerHTML = cartDrawerHtml;
            const newContent = temp.querySelector('[data-cart-drawer]');
            if (newContent) {
              cartDrawer.innerHTML = newContent.innerHTML;
            }
          }
        }
        // Update header cart count
        const cartResponse = await fetch('/cart.js');
        if (cartResponse.ok) {
          const cart = await cartResponse.json();
          updateCartCount(cart.item_count);
        }
      }
    } catch (error) {
      console.error('Error adding gift:', error);
      btn.disabled = false;
      btn.textContent = 'Add';
    }
  }

  function updateCartCount(count) {
    const cartCount = document.querySelector('.header__cart-count');
    if (cartCount) {
      if (count > 0) {
        cartCount.textContent = count;
      } else {
        cartCount.remove();
      }
    }
  }

  // Quantity change handler
  async function handleQuantityChange(btn, delta) {
    const line = parseInt(btn.dataset.line);
    const item = btn.closest('[data-cart-item]');
    const valueEl = item.querySelector('[data-quantity-value]');
    const currentQty = parseInt(valueEl.textContent);
    const newQty = Math.max(0, currentQty + delta);

    if (newQty !== currentQty) {
      try {
        const response = await fetch('/cart/change.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            line: line,
            quantity: newQty
          })
        });

        if (response.ok) {
          // Refresh cart drawer content
          const sectionResponse = await fetch('/?sections=cart-drawer');
          if (sectionResponse.ok) {
            const sections = await sectionResponse.json();
            const cartDrawerHtml = sections['cart-drawer'];
            if (cartDrawer && cartDrawerHtml) {
              const temp = document.createElement('div');
              temp.innerHTML = cartDrawerHtml;
              const newContent = temp.querySelector('[data-cart-drawer]');
              if (newContent) {
                cartDrawer.innerHTML = newContent.innerHTML;
              }
            }
          }
          // Update header cart count
          const cartResponse = await fetch('/cart.js');
          if (cartResponse.ok) {
            const cart = await cartResponse.json();
            const cartCount = document.querySelector('.header__cart-count');
            if (cartCount) {
              if (cart.item_count > 0) {
                cartCount.textContent = cart.item_count;
              } else {
                cartCount.remove();
              }
            }
          }
        }
      } catch (error) {
        console.error('Error updating cart:', error);
      }
    }
  }

  // Remove item handler
  async function handleRemoveItem(btn) {
    const line = parseInt(btn.dataset.line);

    try {
      const response = await fetch('/cart/change.js', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          line: line,
          quantity: 0
        })
      });

      if (response.ok) {
        // Refresh cart drawer content
        const sectionResponse = await fetch('/?sections=cart-drawer');
        if (sectionResponse.ok) {
          const sections = await sectionResponse.json();
          const cartDrawerHtml = sections['cart-drawer'];
          if (cartDrawer && cartDrawerHtml) {
            const temp = document.createElement('div');
            temp.innerHTML = cartDrawerHtml;
            const newContent = temp.querySelector('[data-cart-drawer]');
            if (newContent) {
              cartDrawer.innerHTML = newContent.innerHTML;
            }
          }
        }
        // Update header cart count
        const cartResponse = await fetch('/cart.js');
        if (cartResponse.ok) {
          const cart = await cartResponse.json();
          const cartCount = document.querySelector('.header__cart-count');
          if (cartCount) {
            if (cart.item_count > 0) {
              cartCount.textContent = cart.item_count;
            } else {
              cartCount.remove();
            }
          }
        }
      }
    } catch (error) {
      console.error('Error removing item:', error);
    }
  }

  // Cart trigger handlers (from header) - use event delegation on document
  document.addEventListener('click', (e) => {
    const trigger = e.target.closest('[data-cart-trigger]');
    if (trigger) {
      e.preventDefault();
      openCartDrawer();
    }
  });

  // Listen for custom event to open cart (for add to cart actions)
  document.addEventListener('cart:open', openCartDrawer);

  // Expose function globally for add to cart forms
  window.openCartDrawer = openCartDrawer;
  window.closeCartDrawer = closeCartDrawer;
{% endjavascript %}

