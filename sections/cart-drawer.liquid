{% comment %}
  Cart drawer section that slides in from the right.
  Triggered by clicking the cart icon in the header.
{% endcomment %}

<div class="cart-drawer" data-cart-drawer style="
  --variant-size: {{ section.settings.variant_text_size }}px;
  --discount-bg: {{ section.settings.discount_bg }};
  --discount-text-color: {{ section.settings.discount_text_color }};
  --discount-btn-bg: {{ section.settings.discount_btn_bg }};
  --discount-btn-color: {{ section.settings.discount_btn_color }};
  --protection-bg: {{ section.settings.protection_bg }};
  --protection-text-color: {{ section.settings.protection_text_color }};
  --gift-bg: {{ section.settings.gift_bg }};
  --gift-text-color: {{ section.settings.gift_text_color }};
  --gift-btn-bg: {{ section.settings.gift_btn_bg }};
  --gift-btn-color: {{ section.settings.gift_btn_color }};
">
  <div class="cart-drawer__overlay" data-cart-drawer-close></div>
  <div class="cart-drawer__panel">
    {%- comment -%} Header - Desktop vs Mobile {%- endcomment -%}
    <div class="cart-drawer__header">
      <h2 class="cart-drawer__title cart-drawer__title--desktop">{{ section.settings.drawer_title | default: 'Your Sanctuary' }}</h2>
      <h2 class="cart-drawer__title cart-drawer__title--mobile">{{ 'cart.title' | t }} ({{ cart.item_count }})</h2>
      <button class="cart-drawer__close" data-cart-drawer-close aria-label="{{ 'general.close' | t }}">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M18 6L6 18M6 6l12 12"/>
        </svg>
      </button>
    </div>

    {%- comment -%} Cart Items {%- endcomment -%}
    <div class="cart-drawer__content" data-cart-drawer-content>
      {%- if cart.item_count > 0 -%}
        <div class="cart-drawer__items">
          {%- for item in cart.items -%}
            <div class="cart-drawer__item" data-cart-item data-line-item-key="{{ item.key }}">
              <a href="{{ item.url }}" class="cart-drawer__item-image">
                {%- if item.image -%}
                  {{ item.image | image_url: width: 200, height: 200, crop: 'center' | image_tag }}
                {%- else -%}
                  <div class="cart-drawer__item-placeholder"></div>
                {%- endif -%}
              </a>

              <div class="cart-drawer__item-details">
                <div class="cart-drawer__item-info">
                  <a href="{{ item.url }}" class="cart-drawer__item-title">{{ item.product.title }}</a>
                  {%- if item.variant.title != 'Default Title' -%}
                    <p class="cart-drawer__item-variant">{{ item.variant.title }}</p>
                  {%- endif -%}

                  {%- comment -%} Quantity selector {%- endcomment -%}
                  <div class="cart-drawer__item-quantity">
                    <button
                      class="cart-drawer__quantity-btn"
                      data-quantity-minus
                      data-line="{{ forloop.index }}"
                      aria-label="{{ 'cart.decrease_quantity' | t }}"
                    >-</button>
                    <span class="cart-drawer__quantity-value" data-quantity-value>{{ item.quantity }}</span>
                    <button
                      class="cart-drawer__quantity-btn"
                      data-quantity-plus
                      data-line="{{ forloop.index }}"
                      aria-label="{{ 'cart.increase_quantity' | t }}"
                    >+</button>
                  </div>
                </div>

                <div class="cart-drawer__item-right">
                  <div class="cart-drawer__item-price">
                    {{ item.final_line_price | money }}
                  </div>
                  <button
                    class="cart-drawer__remove-btn"
                    data-remove-item
                    data-line="{{ forloop.index }}"
                    aria-label="{{ 'cart.remove' | t }}"
                  >
                    <svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="1.5">
                      <path d="M2 4h12M5.333 4V2.667a1.333 1.333 0 011.334-1.334h2.666a1.333 1.333 0 011.334 1.334V4m2 0v9.333a1.333 1.333 0 01-1.334 1.334H4.667a1.333 1.333 0 01-1.334-1.334V4h9.334z"/>
                    </svg>
                  </button>
                </div>
              </div>
            </div>
          {%- endfor -%}
        </div>
      {%- else -%}
        <div class="cart-drawer__empty">
          <p>{{ 'cart.empty' | t }}</p>
          <button type="button" class="cart-drawer__continue-btn" data-cart-drawer-close>
            {{ 'cart.continue_shopping' | t }}
          </button>
        </div>
      {%- endif -%}
    </div>

    {%- comment -%} Footer {%- endcomment -%}
    {%- if cart.item_count > 0 -%}
      <div class="cart-drawer__footer">
        {%- comment -%} Free Gift Product {%- endcomment -%}
        {%- if section.settings.show_free_gift and section.settings.gift_product != blank -%}
          {%- assign gift_product = section.settings.gift_product -%}
          {%- assign gift_in_cart = false -%}
          {%- for item in cart.items -%}
            {%- if item.product.id == gift_product.id -%}
              {%- assign gift_in_cart = true -%}
              {%- break -%}
            {%- endif -%}
          {%- endfor -%}
          {%- unless gift_in_cart -%}
            <div class="cart-drawer__gift">
              <div class="cart-drawer__gift-image">
                {%- if gift_product.featured_image -%}
                  {{ gift_product.featured_image | image_url: width: 120 | image_tag }}
                {%- endif -%}
              </div>
              <div class="cart-drawer__gift-info">
                <span class="cart-drawer__gift-title">{{ section.settings.gift_title | default: gift_product.title }}</span>
                <span class="cart-drawer__gift-price">{{ 0 | money }}</span>
              </div>
              <button type="button" class="cart-drawer__gift-btn" data-add-gift data-variant-id="{{ gift_product.first_available_variant.id }}">
                {{ section.settings.gift_btn_text | default: 'Add' }}
              </button>
            </div>
          {%- endunless -%}
        {%- endif -%}

        {%- comment -%} Shipping Protection {%- endcomment -%}
        {%- if section.settings.show_shipping_protection and section.settings.protection_product != blank -%}
          {%- assign protection_product = section.settings.protection_product -%}
          {%- assign protection_in_cart = false -%}
          {%- for item in cart.items -%}
            {%- if item.product.id == protection_product.id -%}
              {%- assign protection_in_cart = true -%}
              {%- break -%}
            {%- endif -%}
          {%- endfor -%}
          <div class="cart-drawer__protection">
            <div class="cart-drawer__protection-info">
              <span class="cart-drawer__protection-title">{{ section.settings.protection_title | default: 'Shipping Protection' }}</span>
              <span class="cart-drawer__protection-desc">{{ section.settings.protection_description | default: 'Protect your order from damage, loss or theft during shipping' }}</span>
            </div>
            <label class="cart-drawer__protection-toggle">
              <input type="checkbox" data-protection-toggle data-variant-id="{{ protection_product.first_available_variant.id }}" {% if protection_in_cart %}checked{% endif %}>
              <span class="cart-drawer__protection-slider"></span>
            </label>
          </div>
        {%- endif -%}

        {%- comment -%} Discount Code {%- endcomment -%}
        {%- if section.settings.show_discount_code -%}
          <div class="cart-drawer__discount" data-discount-wrapper>
            <form class="cart-drawer__discount-form" data-discount-form>
              <input type="text" name="discount" class="cart-drawer__discount-input" placeholder="{{ section.settings.discount_placeholder | default: 'Discount code' }}">
              <button type="submit" class="cart-drawer__discount-btn">{{ section.settings.discount_btn_text | default: 'Apply' }}</button>
            </form>
            <p class="cart-drawer__discount-note" data-discount-note>{{ section.settings.discount_note | default: 'Apply additional discount codes at checkout' }}</p>
            <div class="cart-drawer__discount-applied" data-discount-applied style="display: none;">
              <span class="cart-drawer__discount-code" data-discount-code-display></span>
              <button type="button" class="cart-drawer__discount-remove" data-discount-remove>âœ•</button>
            </div>
          </div>
        {%- endif -%}

        {%- comment -%} Desktop footer {%- endcomment -%}
        <div class="cart-drawer__footer--desktop">
          <div class="cart-drawer__subtotal">
            <span class="cart-drawer__subtotal-label">{{ 'cart.subtotal' | t }}</span>
            <span class="cart-drawer__subtotal-value">{{ cart.total_price | money }}</span>
          </div>
          <p class="cart-drawer__shipping-note">{{ 'cart.shipping_note' | t }}</p>
          <a href="{{ routes.cart_url }}/checkout" class="cart-drawer__checkout-btn cart-drawer__checkout-btn--desktop">
            {{ 'cart.checkout' | t | upcase }}
          </a>
        </div>

        {%- comment -%} Mobile footer - fixed at bottom {%- endcomment -%}
        <a href="{{ routes.cart_url }}/checkout" class="cart-drawer__checkout-btn cart-drawer__checkout-btn--mobile">
          <span>{{ 'cart.checkout' | t | upcase }}</span>
          <span>{{ cart.total_price | money }}</span>
        </a>
      </div>
    {%- endif -%}
  </div>
</div>

{% stylesheet %}
  .cart-drawer {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1000;
    pointer-events: none;
  }

  .cart-drawer.is-open {
    pointer-events: auto;
  }

  .cart-drawer__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.4);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .cart-drawer.is-open .cart-drawer__overlay {
    opacity: 1;
  }

  .cart-drawer__panel {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    max-width: 420px;
    background-color: #ffffff;
    transform: translateX(100%);
    transition: transform 0.3s ease;
    display: flex;
    flex-direction: column;
    box-shadow: -4px 0 20px rgba(0, 0, 0, 0.1);
  }

  .cart-drawer.is-open .cart-drawer__panel {
    transform: translateX(0);
  }

  /* Header */
  .cart-drawer__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.5rem 1.5rem 1rem;
    border-bottom: 1px solid #f0f0f0;
  }

  .cart-drawer__title {
    font-size: 1.5rem;
    font-weight: 400;
    margin: 0;
    color: #1C1917;
  }

  .cart-drawer__title--desktop {
    font-family: serif;
    font-style: italic;
  }

  .cart-drawer__title--mobile {
    font-family: serif;
    font-style: italic;
    display: none;
  }

  .cart-drawer__close {
    background: none;
    border: none;
    padding: 0.5rem;
    margin: -0.5rem;
    cursor: pointer;
    color: #1C1917;
    transition: opacity 0.2s ease;
  }

  .cart-drawer__close:hover {
    opacity: 0.6;
  }

  /* Content */
  .cart-drawer__content {
    flex: 1;
    overflow-y: auto;
    padding: 1.5rem;
  }

  .cart-drawer__items {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  /* Cart Item */
  .cart-drawer__item {
    display: flex;
    gap: 1rem;
  }

  .cart-drawer__item-image {
    flex-shrink: 0;
    width: 80px;
    height: 80px;
    background-color: #f5f5f5;
    overflow: hidden;
  }

  .cart-drawer__item-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cart-drawer__item-placeholder {
    width: 100%;
    height: 100%;
    background-color: #eee;
  }

  .cart-drawer__item-details {
    flex: 1;
    display: flex;
    justify-content: space-between;
    gap: 1rem;
  }

  .cart-drawer__item-info {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .cart-drawer__item-title {
    font-family: serif;
    font-size: 1rem;
    font-weight: 500;
    color: #1C1917;
    text-decoration: none;
    line-height: 1.3;
  }

  .cart-drawer__item-title:hover {
    text-decoration: underline;
  }

  .cart-drawer__item-variant {
    font-size: var(--variant-size, 0.75rem);
    color: #78716C;
    margin: 0;
  }

  .cart-drawer__item-right {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.5rem;
  }

  .cart-drawer__item-price {
    font-size: 1rem;
    font-weight: 500;
    color: #1C1917;
    white-space: nowrap;
  }

  .cart-drawer__remove-btn {
    background: none;
    border: none;
    padding: 0.25rem;
    cursor: pointer;
    color: #9CA3AF;
    transition: color 0.2s ease;
  }

  .cart-drawer__remove-btn:hover {
    color: #DC2626;
  }

  /* Quantity Selector */
  .cart-drawer__item-quantity {
    display: inline-flex;
    align-items: center;
    gap: 0;
    border: 1px solid #e5e5e5;
    border-radius: 4px;
    margin-top: 0.5rem;
    width: fit-content;
  }

  .cart-drawer__quantity-btn {
    background: none;
    border: none;
    width: 28px;
    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    font-size: 1rem;
    color: #1C1917;
    transition: background-color 0.2s ease;
  }

  .cart-drawer__quantity-btn:hover {
    background-color: #f5f5f5;
  }

  .cart-drawer__quantity-value {
    min-width: 24px;
    text-align: center;
    font-size: 0.875rem;
    color: #1C1917;
  }

  /* Empty Cart */
  .cart-drawer__empty {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 3rem 1rem;
    gap: 1.5rem;
  }

  .cart-drawer__empty p {
    font-size: 1rem;
    color: #78716C;
    margin: 0;
  }

  .cart-drawer__continue-btn {
    display: inline-block;
    background-color: #1C1917;
    color: #ffffff;
    text-decoration: none;
    padding: 0.875rem 2rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: opacity 0.2s ease;
  }

  .cart-drawer__continue-btn:hover {
    opacity: 0.9;
  }

  /* Free Gift */
  .cart-drawer__gift {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 1.5rem;
    background-color: var(--gift-bg, #FFFBEB);
    border-bottom: 1px solid #f0f0f0;
  }

  .cart-drawer__gift-image {
    width: 48px;
    height: 48px;
    flex-shrink: 0;
    overflow: hidden;
    background: #f5f5f5;
  }

  .cart-drawer__gift-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cart-drawer__gift-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .cart-drawer__gift-title {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--gift-text-color, #1C1917);
  }

  .cart-drawer__gift-price {
    font-size: 0.75rem;
    color: var(--gift-text-color, #1C1917);
    opacity: 0.7;
  }

  .cart-drawer__gift-btn {
    padding: 0.5rem 1rem;
    background-color: var(--gift-btn-bg, #1C1917);
    color: var(--gift-btn-color, #ffffff);
    border: none;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    cursor: pointer;
    transition: opacity 0.2s ease;
  }

  .cart-drawer__gift-btn:hover {
    opacity: 0.9;
  }

  /* Shipping Protection */
  .cart-drawer__protection {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    padding: 1rem 1.5rem;
    background-color: var(--protection-bg, #F5F5F4);
    border-bottom: 1px solid #f0f0f0;
  }

  .cart-drawer__protection-info {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    flex: 1;
  }

  .cart-drawer__protection-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--protection-text-color, #1C1917);
  }

  .cart-drawer__protection-desc {
    font-size: 0.6875rem;
    color: var(--protection-text-color, #1C1917);
    opacity: 0.7;
    line-height: 1.4;
  }

  .cart-drawer__protection-toggle {
    position: relative;
    width: 44px;
    height: 24px;
    flex-shrink: 0;
  }

  .cart-drawer__protection-toggle input {
    opacity: 0;
    width: 0;
    height: 0;
  }

  .cart-drawer__protection-slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #D6D3D1;
    transition: 0.2s;
    border-radius: 24px;
  }

  .cart-drawer__protection-slider:before {
    position: absolute;
    content: "";
    height: 18px;
    width: 18px;
    left: 3px;
    bottom: 3px;
    background-color: white;
    transition: 0.2s;
    border-radius: 50%;
  }

  .cart-drawer__protection-toggle input:checked + .cart-drawer__protection-slider {
    background-color: #1C1917;
  }

  .cart-drawer__protection-toggle input:checked + .cart-drawer__protection-slider:before {
    transform: translateX(20px);
  }

  /* Discount Code */
  .cart-drawer__discount {
    padding: 1rem 1.5rem;
    background-color: var(--discount-bg, #ffffff);
    border-bottom: 1px solid #f0f0f0;
  }

  .cart-drawer__discount-form {
    display: flex;
    gap: 0.5rem;
  }

  .cart-drawer__discount-input {
    flex: 1;
    padding: 0.625rem 0.875rem;
    border: 1px solid #e5e5e5;
    font-size: 0.8125rem;
    color: var(--discount-text-color, #1C1917);
    background: transparent;
  }

  .cart-drawer__discount-input::placeholder {
    color: #9CA3AF;
  }

  .cart-drawer__discount-btn {
    padding: 0.625rem 1rem;
    background-color: var(--discount-btn-bg, #1C1917);
    color: var(--discount-btn-color, #ffffff);
    border: none;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    cursor: pointer;
    transition: opacity 0.2s ease;
  }

  .cart-drawer__discount-btn:hover {
    opacity: 0.9;
  }

  .cart-drawer__discount-note {
    margin: 0.5rem 0 0;
    font-size: 0.6875rem;
    color: var(--discount-text-color, #78716C);
    opacity: 0.8;
  }

  .cart-drawer__discount-applied {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 0.5rem;
    padding: 0.5rem 0.75rem;
    background: #ECFDF5;
    border-radius: 4px;
  }

  .cart-drawer__discount-code {
    font-size: 0.75rem;
    font-weight: 600;
    color: #059669;
    text-transform: uppercase;
  }

  .cart-drawer__discount-remove {
    background: none;
    border: none;
    color: #059669;
    cursor: pointer;
    padding: 0.25rem;
    font-size: 0.75rem;
    line-height: 1;
  }

  .cart-drawer__discount-remove:hover {
    opacity: 0.7;
  }

  .cart-drawer__discount.has-code .cart-drawer__discount-form,
  .cart-drawer__discount.has-code .cart-drawer__discount-note {
    display: none;
  }

  .cart-drawer__discount.has-code .cart-drawer__discount-applied {
    display: flex;
  }

  /* Footer */
  .cart-drawer__footer {
    border-top: 1px solid #f0f0f0;
    background-color: #ffffff;
  }

  .cart-drawer__footer--desktop {
    padding: 1.5rem;
  }

  .cart-drawer__subtotal {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .cart-drawer__subtotal-label {
    font-size: 1rem;
    color: #78716C;
  }

  .cart-drawer__subtotal-value {
    font-size: 1.125rem;
    font-weight: 600;
    color: #1C1917;
  }

  .cart-drawer__shipping-note {
    font-size: 0.75rem;
    color: #9CA3AF;
    margin: 0 0 1.25rem;
  }

  /* Desktop Checkout Button */
  .cart-drawer__checkout-btn--desktop {
    display: block;
    width: 100%;
    background-color: #D97706;
    color: #ffffff;
    text-decoration: none;
    text-align: center;
    padding: 1rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    transition: opacity 0.2s ease;
  }

  .cart-drawer__checkout-btn--desktop:hover {
    opacity: 0.9;
  }

  /* Mobile Checkout Button - hidden on desktop */
  .cart-drawer__checkout-btn--mobile {
    display: none;
  }

  /* Mobile Styles - Bottom sheet that slides up */
  @media screen and (max-width: 768px) {
    .cart-drawer__panel {
      top: auto;
      bottom: 0;
      left: 0;
      right: 0;
      width: 100%;
      max-width: 100%;
      height: 80vh;
      max-height: 80vh;
      border-radius: 24px 24px 0 0;
      transform: translateY(100%);
      box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.15);
    }

    .cart-drawer.is-open .cart-drawer__panel {
      transform: translateY(0);
    }

    .cart-drawer__header {
      padding: 1.25rem 1.5rem 1rem;
    }

    .cart-drawer__title--desktop {
      display: none;
    }

    .cart-drawer__title--mobile {
      display: block;
    }

    .cart-drawer__footer--desktop {
      display: none;
    }

    .cart-drawer__footer {
      border-top: none;
      padding: 0;
    }

    .cart-drawer__checkout-btn--mobile {
      display: flex;
      justify-content: space-between;
      align-items: center;
      width: calc(100% - 2rem);
      margin: 0 1rem 2.5rem;
      background-color: #1C1917;
      color: #ffffff;
      text-decoration: none;
      padding: 1rem 1.5rem;
      font-size: 0.875rem;
      font-weight: 700;
      letter-spacing: 0.05em;
      border-radius: 9999px;
    }

    .cart-drawer__content {
      flex: 1;
