{% comment %}
  Cart drawer section that slides in from the right.
  Triggered by clicking the cart icon in the header.
{% endcomment %}

<div class="cart-drawer" data-cart-drawer>
  <div class="cart-drawer__overlay" data-cart-drawer-close></div>
  <div class="cart-drawer__panel">
    {%- comment -%} Header - Desktop vs Mobile {%- endcomment -%}
    <div class="cart-drawer__header">
      <h2 class="cart-drawer__title cart-drawer__title--desktop">{{ section.settings.drawer_title | default: 'Your Sanctuary' }}</h2>
      <h2 class="cart-drawer__title cart-drawer__title--mobile">{{ 'cart.title' | t }} ({{ cart.item_count }})</h2>
      <button class="cart-drawer__close" data-cart-drawer-close aria-label="{{ 'general.close' | t }}">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M18 6L6 18M6 6l12 12"/>
        </svg>
      </button>
    </div>

    {%- comment -%} Cart Items {%- endcomment -%}
    <div class="cart-drawer__content" data-cart-drawer-content>
      {%- if cart.item_count > 0 -%}
        <div class="cart-drawer__items">
          {%- for item in cart.items -%}
            <div class="cart-drawer__item" data-cart-item data-line-item-key="{{ item.key }}">
              <a href="{{ item.url }}" class="cart-drawer__item-image">
                {%- if item.image -%}
                  {{ item.image | image_url: width: 200, height: 200, crop: 'center' | image_tag }}
                {%- else -%}
                  <div class="cart-drawer__item-placeholder"></div>
                {%- endif -%}
              </a>

              <div class="cart-drawer__item-details">
                <div class="cart-drawer__item-info">
                  <a href="{{ item.url }}" class="cart-drawer__item-title">{{ item.product.title }}</a>
                  {%- if item.variant.title != 'Default Title' -%}
                    <p class="cart-drawer__item-variant">{{ item.variant.title }}</p>
                  {%- endif -%}

                  {%- comment -%} Desktop: Quantity selector {%- endcomment -%}
                  <div class="cart-drawer__item-quantity cart-drawer__item-quantity--desktop">
                    <button
                      class="cart-drawer__quantity-btn"
                      data-quantity-minus
                      data-line="{{ forloop.index }}"
                      aria-label="{{ 'cart.decrease_quantity' | t }}"
                    >-</button>
                    <span class="cart-drawer__quantity-value" data-quantity-value>{{ item.quantity }}</span>
                    <button
                      class="cart-drawer__quantity-btn"
                      data-quantity-plus
                      data-line="{{ forloop.index }}"
                      aria-label="{{ 'cart.increase_quantity' | t }}"
                    >+</button>
                  </div>

                  {%- comment -%} Mobile: Quantity badge {%- endcomment -%}
                  <span class="cart-drawer__item-qty-badge cart-drawer__item-qty-badge--mobile">{{ 'cart.qty' | t }}: {{ item.quantity }}</span>
                </div>

                <div class="cart-drawer__item-price">
                  {{ item.final_line_price | money }}
                </div>
              </div>
            </div>
          {%- endfor -%}
        </div>
      {%- else -%}
        <div class="cart-drawer__empty">
          <p>{{ 'cart.empty' | t }}</p>
          <a href="{{ routes.all_products_collection_url }}" class="cart-drawer__continue-btn">
            {{ 'cart.continue_shopping' | t }}
          </a>
        </div>
      {%- endif -%}
    </div>

    {%- comment -%} Footer {%- endcomment -%}
    {%- if cart.item_count > 0 -%}
      <div class="cart-drawer__footer">
        {%- comment -%} Desktop footer {%- endcomment -%}
        <div class="cart-drawer__footer--desktop">
          <div class="cart-drawer__subtotal">
            <span class="cart-drawer__subtotal-label">{{ 'cart.subtotal' | t }}</span>
            <span class="cart-drawer__subtotal-value">{{ cart.total_price | money }}</span>
          </div>
          <p class="cart-drawer__shipping-note">{{ 'cart.shipping_note' | t }}</p>
          <a href="{{ routes.cart_url }}/checkout" class="cart-drawer__checkout-btn cart-drawer__checkout-btn--desktop">
            {{ 'cart.checkout' | t | upcase }}
          </a>
        </div>

        {%- comment -%} Mobile footer - fixed at bottom {%- endcomment -%}
        <a href="{{ routes.cart_url }}/checkout" class="cart-drawer__checkout-btn cart-drawer__checkout-btn--mobile">
          <span>{{ 'cart.checkout' | t | upcase }}</span>
          <span>{{ cart.total_price | money }}</span>
        </a>
      </div>
    {%- endif -%}
  </div>
</div>

{% stylesheet %}
  .cart-drawer {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1000;
    pointer-events: none;
  }

  .cart-drawer.is-open {
    pointer-events: auto;
  }

  .cart-drawer__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.4);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .cart-drawer.is-open .cart-drawer__overlay {
    opacity: 1;
  }

  .cart-drawer__panel {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    max-width: 420px;
    background-color: #ffffff;
    transform: translateX(100%);
    transition: transform 0.3s ease;
    display: flex;
    flex-direction: column;
    box-shadow: -4px 0 20px rgba(0, 0, 0, 0.1);
  }

  .cart-drawer.is-open .cart-drawer__panel {
    transform: translateX(0);
  }

  /* Header */
  .cart-drawer__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.5rem 1.5rem 1rem;
    border-bottom: 1px solid #f0f0f0;
  }

  .cart-drawer__title {
    font-size: 1.5rem;
    font-weight: 400;
    margin: 0;
    color: #1C1917;
  }

  .cart-drawer__title--desktop {
    font-family: serif;
    font-style: italic;
  }

  .cart-drawer__title--mobile {
    font-family: serif;
    font-style: italic;
    display: none;
  }

  .cart-drawer__close {
    background: none;
    border: none;
    padding: 0.5rem;
    margin: -0.5rem;
    cursor: pointer;
    color: #1C1917;
    transition: opacity 0.2s ease;
  }

  .cart-drawer__close:hover {
    opacity: 0.6;
  }

  /* Content */
  .cart-drawer__content {
    flex: 1;
    overflow-y: auto;
    padding: 1.5rem;
  }

  .cart-drawer__items {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  /* Cart Item */
  .cart-drawer__item {
    display: flex;
    gap: 1rem;
  }

  .cart-drawer__item-image {
    flex-shrink: 0;
    width: 80px;
    height: 80px;
    background-color: #f5f5f5;
    overflow: hidden;
  }

  .cart-drawer__item-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cart-drawer__item-placeholder {
    width: 100%;
    height: 100%;
    background-color: #eee;
  }

  .cart-drawer__item-details {
    flex: 1;
    display: flex;
    justify-content: space-between;
    gap: 1rem;
  }

  .cart-drawer__item-info {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .cart-drawer__item-title {
    font-family: serif;
    font-size: 1rem;
    font-weight: 500;
    color: #1C1917;
    text-decoration: none;
    line-height: 1.3;
  }

  .cart-drawer__item-title:hover {
    text-decoration: underline;
  }

  .cart-drawer__item-variant {
    font-size: 0.875rem;
    color: #78716C;
    margin: 0;
  }

  .cart-drawer__item-price {
    font-size: 1rem;
    font-weight: 500;
    color: #1C1917;
    white-space: nowrap;
  }

  /* Desktop Quantity Selector */
  .cart-drawer__item-quantity--desktop {
    display: inline-flex;
    align-items: center;
    gap: 0;
    border: 1px solid #e5e5e5;
    border-radius: 4px;
    margin-top: 0.5rem;
    width: fit-content;
  }

  .cart-drawer__quantity-btn {
    background: none;
    border: none;
    width: 28px;
    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    font-size: 1rem;
    color: #1C1917;
    transition: background-color 0.2s ease;
  }

  .cart-drawer__quantity-btn:hover {
    background-color: #f5f5f5;
  }

  .cart-drawer__quantity-value {
    min-width: 24px;
    text-align: center;
    font-size: 0.875rem;
    color: #1C1917;
  }

  /* Mobile Quantity Badge */
  .cart-drawer__item-qty-badge--mobile {
    display: none;
    font-size: 0.75rem;
    color: #1C1917;
    border: 1px solid #e5e5e5;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    width: fit-content;
    margin-top: 0.5rem;
  }

  /* Empty Cart */
  .cart-drawer__empty {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 3rem 1rem;
    gap: 1.5rem;
  }

  .cart-drawer__empty p {
    font-size: 1rem;
    color: #78716C;
    margin: 0;
  }

  .cart-drawer__continue-btn {
    display: inline-block;
    background-color: #1C1917;
    color: #ffffff;
    text-decoration: none;
    padding: 0.875rem 2rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: opacity 0.2s ease;
  }

  .cart-drawer__continue-btn:hover {
    opacity: 0.9;
  }

  /* Footer */
  .cart-drawer__footer {
    border-top: 1px solid #f0f0f0;
    background-color: #ffffff;
  }

  .cart-drawer__footer--desktop {
    padding: 1.5rem;
  }

  .cart-drawer__subtotal {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .cart-drawer__subtotal-label {
    font-size: 1rem;
    color: #78716C;
  }

  .cart-drawer__subtotal-value {
    font-size: 1.125rem;
    font-weight: 600;
    color: #1C1917;
  }

  .cart-drawer__shipping-note {
    font-size: 0.75rem;
    color: #9CA3AF;
    margin: 0 0 1.25rem;
  }

  /* Desktop Checkout Button */
  .cart-drawer__checkout-btn--desktop {
    display: block;
    width: 100%;
    background-color: #D97706;
    color: #ffffff;
    text-decoration: none;
    text-align: center;
    padding: 1rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    transition: opacity 0.2s ease;
  }

  .cart-drawer__checkout-btn--desktop:hover {
    opacity: 0.9;
  }

  /* Mobile Checkout Button - hidden on desktop */
  .cart-drawer__checkout-btn--mobile {
    display: none;
  }

  /* Mobile Styles */
  @media screen and (max-width: 768px) {
    .cart-drawer__panel {
      max-width: 100%;
    }

    .cart-drawer__title--desktop {
      display: none;
    }

    .cart-drawer__title--mobile {
      display: block;
    }

    .cart-drawer__item-quantity--desktop {
      display: none;
    }

    .cart-drawer__item-qty-badge--mobile {
      display: inline-block;
    }

    .cart-drawer__footer--desktop {
      display: none;
    }

    .cart-drawer__checkout-btn--mobile {
      display: flex;
      justify-content: space-between;
      align-items: center;
      width: 100%;
      background-color: #1C1917;
      color: #ffffff;
      text-decoration: none;
      padding: 1.25rem 1.5rem;
      font-size: 0.875rem;
      font-weight: 700;
      letter-spacing: 0.05em;
    }

    .cart-drawer__content {
      padding-bottom: 80px;
    }
  }

  /* Hide body scroll when cart is open */
  body.cart-drawer-open {
    overflow: hidden;
  }
{% endstylesheet %}

{% javascript %}
  const cartDrawer = document.querySelector('[data-cart-drawer]');
  const cartCloseButtons = document.querySelectorAll('[data-cart-drawer-close]');
  const cartTriggers = document.querySelectorAll('[data-cart-trigger]');

  function openCartDrawer() {
    if (cartDrawer) {
      cartDrawer.classList.add('is-open');
      document.body.classList.add('cart-drawer-open');
    }
  }

  function closeCartDrawer() {
    if (cartDrawer) {
      cartDrawer.classList.remove('is-open');
      document.body.classList.remove('cart-drawer-open');
    }
  }

  // Close button handlers
  cartCloseButtons.forEach(btn => {
    btn.addEventListener('click', closeCartDrawer);
  });

  // Cart trigger handlers (from header)
  cartTriggers.forEach(trigger => {
    trigger.addEventListener('click', (e) => {
      e.preventDefault();
      openCartDrawer();
    });
  });

  // Quantity adjustment handlers
  const quantityButtons = document.querySelectorAll('[data-quantity-minus], [data-quantity-plus]');

  quantityButtons.forEach(btn => {
    btn.addEventListener('click', async (e) => {
      const line = parseInt(btn.dataset.line);
      const item = btn.closest('[data-cart-item]');
      const valueEl = item.querySelector('[data-quantity-value]');
      const currentQty = parseInt(valueEl.textContent);

      let newQty = currentQty;
      if (btn.hasAttribute('data-quantity-minus')) {
        newQty = Math.max(0, currentQty - 1);
      } else if (btn.hasAttribute('data-quantity-plus')) {
        newQty = currentQty + 1;
      }

      if (newQty !== currentQty) {
        try {
          const response = await fetch('/cart/change.js', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              line: line,
              quantity: newQty
            })
          });

          if (response.ok) {
            window.location.reload();
          }
        } catch (error) {
          console.error('Error updating cart:', error);
        }
      }
    });
  });

  // Listen for custom event to open cart (for add to cart actions)
  document.addEventListener('cart:open', openCartDrawer);

  // Expose function globally for add to cart forms
  window.openCartDrawer = openCartDrawer;
{% endjavascript %}

