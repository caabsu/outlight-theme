{% doc %}
  Renders CSS custom properties for the theme.

  Includes font-face declarations and all global CSS variables for colors,
  typography, layout, and buttons.

  @example
  {% render 'css-variables' %}
{% enddoc %}

{% style %}
  {% comment %} Font face declarations with display: swap for better performance {% endcomment %}
  {{ settings.type_primary_font | font_face: font_display: 'swap' }}
  {{ settings.type_primary_font | font_modify: 'weight', 'bold' | font_face: font_display: 'swap' }}
  {{ settings.type_primary_font | font_modify: 'weight', 'bold' | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}
  {{ settings.type_primary_font | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}

  {{ settings.type_heading_font | font_face: font_display: 'swap' }}
  {{ settings.type_heading_font | font_modify: 'weight', 'bold' | font_face: font_display: 'swap' }}

  /* Custom font: Playfair Display Italic (Variable) */
  @font-face {
    font-family: "Playfair Display";
    src: url("https://cdn.shopify.com/s/files/1/0651/2915/2585/files/PlayfairDisplay-Italic-VariableFont_wght.woff?v=1764924006") format("woff");
    font-weight: 100 900;
    font-style: italic;
    font-display: swap;
  }

  :root {
    /* Typography */
    --font-primary-family: {{ settings.type_primary_font.family }}, {{ settings.type_primary_font.fallback_families }};
    --font-primary-style: {{ settings.type_primary_font.style }};
    --font-primary-weight: {{ settings.type_primary_font.weight }};

    /* Custom font */
    --font-custom-family: "Playfair Display", Georgia, serif;
    --font-custom-style: italic;

    /* Heading font - uses custom font if enabled */
    {%- if settings.use_custom_heading_font -%}
      --font-heading-family: var(--font-custom-family);
      --font-heading-style: var(--font-custom-style);
      --font-heading-weight: 400;
    {%- else -%}
      --font-heading-family: {{ settings.type_heading_font.family }}, {{ settings.type_heading_font.fallback_families }};
      --font-heading-style: {{ settings.type_heading_font.style }};
      --font-heading-weight: {{ settings.type_heading_font.weight }};
    {%- endif -%}

    /* Layout */
    --page-width: {{ settings.max_page_width }};
    --page-margin: {{ settings.min_page_margin }}px;
    --border-radius: {{ settings.border_radius }}px;
    --content-grid: var(--page-margin) minmax(0, var(--page-width)) var(--page-margin);

    /* Base colors */
    --color-canvas: {{ settings.color_canvas }};
    --color-ink: {{ settings.color_ink }};
    --color-accent: {{ settings.color_accent }};

    /* Surface colors */
    --color-surface: {{ settings.color_surface }};
    --color-surface-elevated: {{ settings.color_surface_elevated }};

    /* UI colors */
    --color-border: {{ settings.color_border }};
    --color-subtext: {{ settings.color_subtext }};

    /* Accent scale */
    --color-accent-dark: {{ settings.color_accent_dark }};
    --color-accent-medium: {{ settings.color_accent_medium }};
    --color-accent-light: {{ settings.color_accent_light }};
    --color-accent-subtle: {{ settings.color_accent_subtle }};

    /* Button colors */
    --button-primary-bg: {{ settings.button_primary_bg }};
    --button-primary-text: {{ settings.button_primary_text }};
    --button-secondary-bg: {{ settings.button_secondary_bg }};
    --button-secondary-text: {{ settings.button_secondary_text }};

    /* Semantic aliases */
    --color-background: var(--color-canvas);
    --color-foreground: var(--color-ink);
    --color-text: var(--color-ink);
    --color-text-muted: var(--color-subtext);
    --color-link: var(--color-accent);
    --color-link-hover: var(--color-accent-medium);
  }
{% endstyle %}
